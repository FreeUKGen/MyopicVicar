<% content_for :body_content_title do %>
  <%= @county.county %>
<% end %>

<% content_for :body do %>
  <section>
    <h1>County</h1>
    <p>
      <%=raw @county.county %>
    </p>
  </section>
  <section>
    <h1>Chapman Code</h1>
    <p>
      <%=raw @county.chapman_code %>
    </p>
  </section>
  <section>
    <h1>Content</h1>
    <p>
      <%=raw @county.content %>
    </p>
  </section>
<% end %>

<% content_for :side_body do %>
  <aside>
    <h2><%= t('.other') %></h2>
    <ul id="counties">
      <% @counties.each do |county| %>
        <li>
          <%= link_to county.county, refinery.counties_county_path(county) %>
        </li>
      <% end %>
    </ul>
  </aside>
<% end %>

<%= render '/refinery/content_page' %>
