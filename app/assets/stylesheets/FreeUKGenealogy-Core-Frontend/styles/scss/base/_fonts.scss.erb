// Source Sans Pro Bold 700
@font-face {
  font-family: "Source Sans Pro";
  font-weight: bold;
  font-style: normal;
  src: url('<%= path_to_font 'sourcesanspro-bold-webfont.eot' %>');
  src: url('<%= path_to_font 'sourcesanspro-bold-webfont.eot' %>?#iefix') format('embedded-opentype'),
       url('<%= path_to_font 'sourcesanspro-bold-webfont.woff2' %>') format('woff2'),
       url('<%= path_to_font 'sourcesanspro-bold-webfont.woff' %>') format('woff'),
       url('<%= path_to_font 'sourcesanspro-bold-webfont.ttf' %>') format('truetype'),
       url('<%= path_to_font 'sourcesanspro-bold-webfont.svg' %>#source_sans_probold') format('svg');
}

