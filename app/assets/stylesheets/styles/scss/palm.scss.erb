/**
 * Vars and core
 */
@import "FreeUKGenealogy-Core-Frontend/styles/scss/vars";
@import "vars";
@import "FreeUKGenealogy-Core-Frontend/styles/scss/palm";


/**
 * Site header
 */
.site__header {
  overflow: hidden;
  position: relative;
  z-index: 2;
  @include vendor(box-shadow, 0 5px 14px #cccccc);
}

  /**
   * Trigger for off canvas menu
   * AO: edit colours for accessibility and for project
   */
  .site__header__menu-btn {

    // btn reset
    background: none;
    border: 0;
    padding: 0;

    position: absolute;
    top: $base-spacing-unit / 2;
    right: $base-spacing-unit / 2;

    span {
      display: block;
      @include font-size(16px, false);
      text-transform: uppercase;
      font-weight: bold;
      color: $teal;
      padding: ($base-spacing-unit / 6) ($base-spacing-unit / 3);
      border: 2px solid $teal;
      @include vendor(border-radius, 4px);
    }

    &:active span,
    &:focus,
    &:hover span {
      background-color: $teal;
      color: #fff;
      border-color: $teal;
    }

    &:focus {
      outline: 0;
    }

    // hide cancel initially
    .icon__cancel {
      display: none;
    }

  }

    /**
     * Active state
     */
    .site__header__menu-btn--active {
      span {
        display: none;
      }
      .icon__cancel {
        display: block;
      }
    }


  .site__header__logo {
    margin: ($base-spacing-unit * 2) auto $base-spacing-unit auto;
    display: block !important;
  }

  .site__header__freeukgen-logo {
    margin: 0 auto $base-spacing-unit auto;
    display: block;
  }


  /**
   * Off canvas nav
   */
  .site__header__nav {
    z-index: 1;

    .main-nav {

      ul {
        @extend %nav;
        @extend %nav--stacked;
        margin-top: 0;
      }

      a {
        background: $light;
        text-transform: uppercase;
<% if MyopicVicar::Application.config.template_set=='freecen' %>
        color: $lavender-on-light;
<% elsif MyopicVicar::Application.config.template_set=='freereg' %>
        color: $turquoise-on-light;
<% else %>
        color: $magenta-on-light;
<% end %>
        font-weight: normal;
        padding: $base-spacing-unit / 2;
        &:active,
        &:focus,
        &:hover {
          background: $project-color-faded;
          color: $focus-hover;
        }
      }

    }

    .social-links {
      display: none;

      ul {
        @extend %nav;
      }
    }

  }
/*** Adsense Banners ***/

.bnner-horz-secondary {
    width: 320px;
    height: 50px;
    background-position: -60px;
    background-size: 170%;

    @include manual-media-query(448px) {
    display: none;
  }
}

.adblck-background {
  background-image: url(image-path('header-donate.png')) !important;
}

.adsense_center, .adsense_box {
  margin: 0 auto;
  font-weight: bold;
  margin-bottom: 20px;
  border: 1px solid #c0c0c0;
  padding: 10px;
  display: flex;
  flex-direction: column;
  align-items: center;
      @include manual-media-query(448px) {
    display: none;
  }
}

/**
 * Site content
 */
.site__content {
  position: relative;
  z-index: 1;
  padding-top: $base-spacing-unit * 2;
}

  .icon__honeycomb--top-right {
    width: 100% !important;
    height: auto !important;
    background-position: top right;
  }



/**
 * Site footer
 */
.site__footer {}

  .icon__honeycomb--bottom-left {
    width: 100% !important;
    height: auto !important;
    background-position: bottom left;
  }



/**
 * A list of icons
 */
.icon-list {
  @extend %nav;
  margin: ($base-spacing-unit * 2) 0;
  li {
    display: block;
    margin-bottom: $base-spacing-unit;
  }
}
/**
 * Extracted from BMD2 Dec 2019
 * needed for Font awesome
 */

li i {
  padding-right: 1px;
}
.social_links a {
  display:inline-block !important;
}