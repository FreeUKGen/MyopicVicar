/*------------------------------------*\
    $VARS
\*------------------------------------*/

/**
 * Override any of the Core or Inuit variables here
 */


$container-width:   1200px;
<% if MyopicVicar::Application.config.template_set == 'freecen' %>
  $brand-color:              $orange;
  $brand-color-brighter:     $orange-brighter;
  $brand-color-lighter:      $orange-lighter;
  $site-header-height:       170px;
  $site-header-padding-top:  40px;
<% elsif MyopicVicar::Application.config.template_set == 'freebmd' %>
  $brand-color:          $magenta;
  $brand-color-brighter: $magenta-brighter;
  $brand-color-lighter:  $magenta-lighter;
  $navbar-position: right;
  $site-header-padding-top: 10px;
  $site-header-nav-top: 110px;
  $site-header-nav-overflow: none;
  $site-header-height: 110px;
  $site-header-nav-z-index: 2;
  $site-content-margin-top: 50px;
  $bnner-horz-right: 150px;
<% end %>

<% case MyopicVicar::Application.config.template_set %>
<% when 'freecen' %>
$project-color:           $lavender;
$project-color-faded:     $lavender-faded;
$project-color-on-light:  $lavender-on-light;
<% when 'freebmd' %>
$project-color:           $magenta;
$project-color-faded:     $magenta-faded;
$project-color-on-light:  $magenta-on-light;
<% when 'freereg' %>
$project-color:           $turquoise;
$project-color-faded:     $turquoise-faded;
$project-color-on-light:  $turquoise-on-light;
<% else %>
$project-color:           $teal;
$project-color-faded:     $teal-faded;
$project-color-on-light:  $teal-on-light;
<% end%>

