@charset "UTF-8";
/*------------------------------------*\
    LAP_AND_UP.CSS
\*------------------------------------*/


/**
 * Vars and core
 */
@import "FreeUKGenealogy-Core-Frontend/styles/scss/vars";
@import "vars";
@import "FreeUKGenealogy-Core-Frontend/styles/scss/lap_and_up";


/**
 * Site header
 */

 .icon__<%= MyopicVicar::Application.config.template_set %> {
  @include vendor(background-size, 100%);
  background-repeat: no-repeat;
  display: inline-block;
 *display: inline;
  margin: 0% 0% 0% 0%;
  zoom: 1;

    @include manual-media-query(1090px) {
      @include vendor(background-size, 100%);
      width: 20%;
      height: 0px;
      overflow: hidden;
      padding-bottom: 6.5%;
      margin: 1% 0% 0% 0%;
    }
    @include manual-media-query(1010px) {
      margin: 2% 0% 0% 0%;
      padding-bottom: 5%;
      width: 16%;
    }

  @include manual-media-query(950px) {
      width: 266px;
      height:87px;
      padding-bottom: 0;
      margin: 0px;
    }

  @include manual-media-query(800px) {
      width: 25%;
      max-height: 60px;
      padding-bottom: 0;
      margin: 13px 0px 0px 0px;
    }
  @include manual-media-query(710px) {
      @include vendor(background-size, 100%);
      max-height: 87px;
      padding-bottom: 0;
      margin: 0;
    }
}

.site__header {
  padding-top: 40px;
  padding-bottom: 40px;
  height: 170px;
  @include vendor(box-shadow, 0 0 0 rgba(0, 0, 0, 0));

  @include manual-media-query(890px) {
    padding-bottom: 60px;
  }

  .bnner-horz {
    background: transparent;
    float: right;
    position: relative;
    z-index: 3;
    margin: 0;
    box-shadow: 0 3px 6px rgba(0,0,0,0.16), 0 3px 6px rgba(0,0,0,0.23);


    @include manual-media-query(950px) {
      width: 468px;
      height: 60px;
      margin-top: 13px;
      background-position: -60px;
    }
      @include manual-media-query(710px) {
    display: none;
  }

  }

}

.adSenseBanner { width: 100%; height: 100%; text-align: center; margin: auto;}



.site__header__menu-btn {
    display: none;
}

  .site__header__logo {
     float: left;
    position: relative;
    z-index: 3;
    &:focus,
    &:hover {
      background-color: #fff;
      outline: 2px dashed $project-color;
      outline-offset: 7px; // will not work in IE/Edge
      text-decoration: none; // Safari fix
    }
  }

  .site__header__freeukgen-logo {
    display: none;
  }


  /**
   * Most of this code is to re-position the nav inside the header
   * to counteract the weird markup we need so that the offcanvas works
   */
  .site__header__nav {

    background: $project-color;
    overflow: hidden;
    height: 46px;

    position: absolute;
    right: 0;
    left: 0;
    top: 170px;
    z-index: 3;

    .site__header__nav__inner {
      @include container($container-width);
    }

    .main-nav {

      ul {
        float: left;
        margin: 0;
      }

      li {
        margin-right: $b * 2;
        float: left;

        @include manual-media-query(800px) {
          margin-right: $b;
        }

        @include manual-media-query(680px) {
          margin-right: $b / 2;
        }
      }

      a {
        padding-left: 0;
        padding-right: 0;
        padding-top: 11px;
        padding-bottom: 7px;

        background: none;
        color: #fff;

        @include manual-media-query(800px) {
          @include font-size(16px, false);
        }

        &:active,
        &:focus,
        &:hover {
          background: #fff;
          color: $project-color;
          outline: 5px solid #fff;
          text-decoration: none;
        }

      }

    }

    .social-links {

      display: block;
      float: right;
      border-right: 2px solid #fff;

      ul {

      }

      li {
        float: left;
        border-left: 2px solid #fff;

      }

      a {
        display: block;
        background: #fff;
        height: 46px;
        width: 46px;
      }
    }

  }



/**
 * Site content
 */
.site__content {
  margin-top: 23px;
  padding-top: $b;
}




/**
 * Site footer
 */
.site__footer {
  .icon__freeukgen__project--light {
    margin-top: $base-spacing-unit / 3;
    &:focus,
    &:hover {
      background-color: transparent;
      outline: 2px dashed $project-color-faded;
      outline-offset: 5px;
    }
  }
}

/* For Cookie Consent notification bar */

.cookieConsent {
  display: none;
  position: fixed;
  bottom: 0px;
  left: 0px;
  width: 100%;
  height: auto;
  text-align: center;

}

/**
 * A list of icons
 */
.icon-list {
  li {
    @include inline-block;
    margin-left: $base-spacing-unit * 2;
    margin-right: $base-spacing-unit * 2;
    a:focus,
    a:hover {
      background-color: transparent;
      outline: 2px dashed $project-color;
      outline-offset: 7px;
      text-decoration: none;
    }
  }
}

th.sticky-header {
  position: -webkit-sticky; /* Safari */
  position: sticky;
  background-color: $navy ;
  color: white;
  top: 0;
  z-index: 10;
  box-shadow: inset 0 2px 4px 0 rgba(0,0,0,0.06);
}

.table--striped{

    tbody tr:nth-of-type(odd){
        background-color:#f5f5f5;}
}

.table-scroll {
overflow-y: auto; /* make the table scrollable if height is more than 500 px  */
height: 500px; /* gives an initial height of 200px to the table */
}

.table-scroll thead th {
position: -webkit-sticky; /* Safari */
position: sticky; /* make the table heads sticky */
top: 0px; /* table head will be placed from the top of the table and sticks to it */
background-color: $navy;
color: white;
z-index: 10; /* move header in forground */
box-shadow: inset 0 2px 4px 0 rgba(0,0,0,0.06);
}
