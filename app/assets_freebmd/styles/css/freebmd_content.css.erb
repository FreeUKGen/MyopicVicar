.bmd_search_form {
  background: rgba(13, 195, 195, 0.05);
  padding: 20px !important;
}

.search_form li {
  margin-bottom: 25px;
}

input {
  padding: 10px !important;
  margin-bottom: 5px !important;
}

label {
  font-size: 1em !important;
}

label.optional_attributes {
  font-weight: 200;
  vertical-align: bottom;
}

input[type="checkbox"] {
  width: 17px;
  height: 17px;
  border: 1px solid gray !important;
  vertical-align: bottom;
  outline: 0;
}

*:focus {
    outline: none;
}

select#date_month, select#date_year {
    display: inline-block;
    padding: 10px;
    background: none;
    border: 1px solid #ccc;
    color: black;
}

span.optional_checkbox_label {
  font-size: 0.8em;
  vertical-align: bottom;
}

.stack_fields label {
  margin-bottom: -10px;
  padding-bottom: 10px;
}

.header_label {
  border-bottom: 1px solid gray;
  margin-bottom: 2px !important;
  width: 50%;
}

ol li label i {
  cursor: help;
  padding: 0 2px;
  color: #a1185a;
  font-size: 0.8em !important;
}

input.search_form_submit_button {
  background-color: #a1185a;
  color: white;
  font-weight: bold;
  border-radius: 8px;
  padding: 20px;
  width: 100px;
  border: none !important;
}

.grid.action {
    text-align: right;
}

.clear_form {
  margin-right: 30px;
}

select[multiple]:focus option:checked {
  background: #a1185a linear-gradient(0deg, #a1185a 0%, #a1185a 100%);
  color: white !important;;
}

/* **BMD Navigation Banner Layouts** */

/* Positioning BMD Logo */
.brand_logo_left {
  margin-left: 2.5pc !important;
  top: -30px !important;
  max-width: 20pc !important;
  min-width: 18.2pc !important;
}

.Navbar {
  display: flex;
  padding-top: 11px !important;
  padding: 16px;
  font-family: sans-serif;
  color: white !important;
  background: #a1185a;
  overflow: none;
  height: 46px; 
  position: absolute; 
  right: 0; 
  left: 0; 
  top: 110px; 
  z-index: 2;

}

.flex_container {
  margin-left: auto;
  display: flex;
}

/*.Navbar__Items {
  display:flex;
}*/
.Navbar__Link {
  padding-right: 35px;
  font-weight: bold;
}
/*.Navbar__Items--right {
  margin-left:auto;
}*/

.Navbar__Link-toggle {
  display: none;
}

.Navbar__Link a {
  color:#f4f4f4;
}
@media only screen and (max-width: 870px) {
  .Navbar__Items,
  .Navbar,
  .copyright_banner {
    flex-direction: column;
    }
  .Navbar__Items--right {
    margin-left: 0;
  }
  .Navbar__Items {
    display:none;
  }

  .Navbar__Link-toggle {
    align-self: flex-end;
    display: initial;
    position: absolute;
  }

  .brand_logo_footer {
    text-align: center;
  }

  .Navbar__Link-toggle i {
    cursor: default !important;
    color: #f4f4f4;
  }

  .Navbar__ToggleShow {
    display:flex;
    border: 5px solid #a1185a;    
    background-color: #ab0354;
  }

  .Navbar__ToggleShow .Navbar__Link a {
    color: #f4f4f4;
    font-size: 0.8em;
    font-weight: bold;
    height: 50px;    
  }

  .Navbar__ToggleShow .Navbar__Link {
    text-align: center;
  }
}

@media only screen and (max-width: 572px) {
  .Navbar {
    display: none;
  }
}

@media only screen and (max-width: 1300px) {
  .side_banners {
    display: none;
  }
}

/* **BMD Footer Styles** */

li i {
  padding-right: 1px;
}

.copyright_banner {
  display: flex !important;
}

