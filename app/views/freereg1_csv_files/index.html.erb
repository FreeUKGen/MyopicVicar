<% breadcrumb :files %>
<h3 style="text-align: center"> <%=@who%> <%=@sorted_by%></h3>
<% if flash[:notice] %>
  <div id="notice" style="color:blue"><br>
  <%= flash[:notice] %>  <% flash[:notice] = nil%> <br>
  </div>
<% end %>
<div style="text-align: center">Batches are colour coded. <FONT COLOR="green">Teal: OK;</FONT><FONT color='red'> Red: Errors;</FONT><FONT color='blue'> Blue: Locked and OK;</FONT><FONT color="maroon"> Maroon: Locked with errors,</FONT><FONT color='orange'> Orange: Just Verified</FONT></div>
<div class="grid__item ">
  <% unless @freereg1_csv_files.nil? %>
    <section class="island ">
      <div style="overflow: hidden;">
        <table class="my-width-min flush--bottom" >
          <thead >
            <tr>
              <th class="t10">Place</th>
              <th class="t10">Church</th>
              <th class="t5">Reg</th>
              <% unless session[:my_own]%>
                <th class="t10">UserID</th>
              <% end%>
              <th class="t10">File name</th>
              <th class="t10" >Loaded</th>
              <th colspan = "2" class="t10">Locked<br> TR SCC</th>
              <th colspan="7" class="t30">Action <a href="#" class="left_tooltip" onclick="return false;"><%= image_tag 'info.png', alt: 'Information', height: '16' %><span>SH: Show; ED: Edit; DL: Download; ER: Errors; L: Lock batch; U: Unlock batch; DE: Delete batch;RL:Replace batch </span></a></th>
            </tr>
          </thead>
        </table>
        <div class="scrollable ">
          <table class=" table--bordered my-width table--data just--left">
            <tbody >      
              <% @freereg1_csv_files.each do |freereg1_csv_file| %>
                <tr id="<%= freereg1_csv_file.id %>" style="<%=freereg1_csv_file.define_colour%>">
                  <td class="t10"><%= place_name(freereg1_csv_file) %></td>
                  <td class="t10"><%= church_name(freereg1_csv_file) %></td>
                  <td class="t3"><%= register_type(freereg1_csv_file) %></td>
                  <% unless session[:my_own]%>
                    <td class="t15"><%= freereg1_csv_file.userid %></td>
                  <% end%>
                  <td class="t10"><%= file_name(freereg1_csv_file)%></td>
                  <td class="t9"><%= uploaded_date(freereg1_csv_file)%></td>        
                  <td class="t3"><%= locked_by_transcriber(freereg1_csv_file)%></td>
                  <td class="t3"><%= locked_by_coordinator(freereg1_csv_file)%></td>
                  <td class="t4"><%= link_to 'SH', freereg1_csv_file, method: :get  %></td>
                  <td class="t4"><%= link_to 'ED', edit_freereg1_csv_file_path(freereg1_csv_file), method: :get   %></td>
                  <td class="t4"><%= link_to 'DL', download_csvfile_path(freereg1_csv_file), confirm: 'Are you sure you want to download this file?', method: :get  %></td>
                  <td class="t4"><%= link_to 'ER', error_freereg1_csv_file_path(freereg1_csv_file), method: :get %>
                  <td  class="t4"><%= link_to 'L/U', lock_freereg1_csv_file_path(freereg1_csv_file), method: :get, confirm: 'Are you sure you want to lock/unlock this file?' %>
                  </td>
                  <td class="t4"><%= link_to 'DE', remove_freereg1_csv_file_path(freereg1_csv_file), confirm: 'Are you sure you want to delete this file? This may take a few minutes if there many records', method: :get   %></td>
                  </td>
                  <td class="t4"><%= link_to 'RL', edit_csvfile_path(freereg1_csv_file), method: :get, confirm: 'Are you sure you want to replace these records?' %>
                  </td>
                </tr>
              <% end %>
            </tbody> 
          </table>
        </div>
      </div>
    </section>     
  <% else%>
          You have no files
  <% end%>      
</div>