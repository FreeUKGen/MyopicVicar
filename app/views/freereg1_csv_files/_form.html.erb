
<%= semantic_form_for @freereg1_csv_file ,:html => { :class =>  "grid"} do |f| %>
  <%= f.input :transcriber_name , :input_html => { :size => 30 }%>
  <%= f.input :transcriber_email, :input_html => {:size => 40 } %>
  <%= f.input :credit_name ,:label => 'Credit Person', :input_html => { :size => 30 }%>
  <%= f.input :credit_email, :label => "Credit Person's email address",:input_html => { :size => 40 } %>
  <%= f.input :first_comment, :label => 'Comments about the batch',:input_html => { :size => 50 }%>
  <%= f.input :second_comment, :label => 'Additional comments about the batch',:input_html => {  :size => 50 }%>
  <%= f.input :lds,{ :as => :select,:label => "Image numbers available with record",:include_blank => false,
  :required => true, :collection => ['yes','no'], :size => 15 } %>
  <%= f.input :transcription_date ,:input_html => { :size => 25  }%>
  <%= f.input :modification_date ,:input_html => { :size => 25}%>
<% if session[:role] == "county_coordinator" || session[:role] == 'syndicate_coordinator'%>
  <%= f.input :locked_by_transcriber, { :as => :select,:label => "Locked by transcriber :",:include_blank => false,
  :required => true, :collection => [ 'true', 'false'], :size => 10 } %>
  <%= f.input :locked_by_coordinator, { :as => :select,:label => "Locked by coordinator :",:include_blank => false,
  :required => true, :collection => [ 'true', 'false'], :size => 10 } %>
<%else%>
  <%= f.input :locked_by_transcriber, :input_html => { :disabled => true, :size => 10 } %>
  <%= f.input :locked_by_coordinator, :input_html => { :disabled => true, :size => 10 } %>
<% end%>

<%= f.action :submit, :as => :input, :label => 'Submit'   %>
<% end %>