    </div>
   <% end %>
<section class="island  island--light">
<%= semantic_form_for  @church do |f| %>

<% if @user.person_role == 'data_manager' || @user.person_role == 'system_administrator' %>
 <b> Please be sure to select the correct Place from the following list. Check with the name above and select if you are NOT changing the Place</b>
<p>
   <%= f.input :place_name, {:as => :select,  :collection => @places, :include_blank => false,:label => "Select Place that Church is located in :", :required => true, :size => 15}%>
 <% end %>

 
 <%= f.action :submit, :as => :input, :label => 'Relocate' %>
 <% end %>
