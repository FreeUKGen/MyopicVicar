<% breadcrumb :rename_church,  @county, @place, @church%>
<p style="text-align: center">Currently <%= @church_name %> within <b><%= @place_name %></b> of  <b><%= @county %></b></p>

<% if flash[:notice] %>
    <div id="notice" style="color:blue"><br>
    <%= flash[:notice] %> <br>
    </div>
   <% end %>
<section class="island  island--light">
<%= semantic_form_for  @church, :html => { :class => "grid"}  do |f| %>
<%= f.input :church_name, :label => "Church Name :",:input_html => { :size => 60 }%>
 
 
 <%= f.action :submit, :as => :input, :label => 'Rename' %>
 <% end %>
 <p style="color:red">Please note if you are changing the name in a large numer of records the processing time could be several minutes depending upon the number of batches affected. <b>Please wait for the process to complete.</b></p>
 </section>
  