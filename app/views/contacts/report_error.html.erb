<h4 class="title text--center">You are reporting an error on a data record</h4>
<% if flash[:notice] %>
    <div id="notice" style="color:blue"><br>
   <%= flash[:notice] %>  <% flash[:notice] = nil%><br>
    </div>
   <% end %>  
<% if @contact.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@contact.errors.count, "error") %> prohibited your contact from being submitted:</h2>
  <ul class="validation-list">
    <% @contact.errors.full_messages.each do |msg| %>
    <li class="validation-list__error"><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<section class="island  island--light ">
<%= semantic_form_for(@contact, :html => {:multipart => true}) do |f| %>
<%= f.hidden_field :query %>
<%= f.hidden_field :contact_type %>
<%= f.hidden_field :contact_time %>
<%= f.hidden_field :record_id %>
<%= f.hidden_field :entry_id %>
<%= f.hidden_field :previous_page_url %>
  <li  class="grid__item  one-quarter  palm-one-whole" id="name_input">
    <label class="label" for="name">
      <a href="#" class="top_tooltip">Your name<span>Please provide a name for when we contact you; it will not be made public</span></a>
    </label>
    <% if @contact.name.nil? %>
    <input name="contact[name]" type="text" class="text-input" placeholder="Mandatory" required="required" >
    <% else %>
    <input name="contact[name]" type="text" class="text-input" value="<%=@contact.name%>">
    <% end %>
  </li>
  <li  class="grid__item  one-third  palm-one-whole" id="email_address_input">
    <label class="label" for="email_address">
      <a href="#" class="top_tooltip">Your email address<span>Please enter your email address so we can contact you; it will not be made public</span>
      </a>
    </label>
    <% if @contact.email_address.nil? %>
    <input name="contact[email_address]" type="text" class="text-input" placeholder="Mandatory" required="required" >
    <% else%>
    <input name="contact[email_address]" type="text" class="text-input" value="<%=@contact.email_address%>">
    <% end%>
  </li>
  
  <li class="grid__item  one-whole  palm-one-whole">
    <label><a href="#" class="left_tooltip">Description<span>Please enter your reasons for commenting on the record entry</span></a></label>
    <% if @contact.body.nil? %>
    <textarea name="contact[body]" cols="80" rows="10">Enter text here...</textarea>
    <% else%>
    <textarea name="contact[body]" cols="80" rows="10" ><%=@contact.body%></textarea>
    <% end%>
  </li>
  <li class="grid__item  one-third  palm-one-whole">
    <label><a href="#" class="left_tooltip">Screenshot or image<span>Please select any image you believe supports your comment</span></a></label>
    <input name="contact[screenshot]" type="file" >
  </li>
  <div id="betterstyling">
    <p>Please add your name again: </p><input type="text" name="contact[contact_name]">
  </div>
  <%= f.action :submit, :as  => :input, :label => 'Report Error' ,
  :button_html => { :class => "btn btn--small" },
  :wrapper_html => { :class => "grid__item  one-third text--left" }  %>
  <% end %>
</section>