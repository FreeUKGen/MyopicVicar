<%= semantic_form_for(@contact, :html => {:multipart => true}) do |f| %>
<% if @contact.errors.any? %>
<div id="error_explanation">
  <h2><%= pluralize(@contact.errors.count, "error") %> prohibited your contact from being submitted:</h2>
  <ul class="validation-list">
    <% @contact.errors.full_messages.each do |msg| %>
    <li class="validation-list__error"><%= msg %></li>
    <% end %>
  </ul>
</div>
<% end %>
<%= f.hidden_field :contact_time %>
<%= f.hidden_field :session_id %>
<%= f.hidden_field :problem_page_url %>
<%= f.hidden_field :previous_page_url %>
<section class="island  island--light ">
  <li  class="grid__item  one-quarter  palm-one-whole" id="name_input">
    <label class="label" for="name">
      <a href="#" class="top_tooltip">Your name<span>Please provide a name for when we contact you; it will not be made public</span></a>
    </label>
    <% if @contact.name.nil? %>
    <input name="contact[name]" type="text" class="text-input" placeholder="Mandatory" required="required" >
    <% else %>
    <input name="contact[name]" type="text" class="text-input" value="<%=@contact.name%>">
    <% end %>
  </li>
  <li  class="grid__item  one-third  palm-one-whole" id="email_address_input">
    <label class="label" for="email_address">
      <a href="#" class="top_tooltip">Your email address<span>Please enter your email address so we can contact you; it will not be made public</span>
      </a>
    </label>
    <% if @contact.email_address.nil? %>
    <input name="contact[email_address]" type="text" class="text-input" placeholder="Mandatory" required="required" >
    <% else%>
    <input name="contact[email_address]" type="text" class="text-input" value="<%=@contact.email_address%>">
    <% end%>
  </li>
  <li class="grid__item  one-third  palm-one-whole">
    <label><a href="#" class="left_tooltip">Subject<span>Please enter a short title or summary</span></a></label>
    <% if @contact.title.nil? %>
    <input name="contact[title]" type="text" class="text-input" placeholder="Mandatory" required="required">
    <% else%>
    <input name="contact[title]" type="text" class="text-input" value="<%=@contact.title%>">
    <% end %>
  </li>
  <li  class="grid__item  one-quarter  palm-one-whole" id="contact_type_input">
    <label class="label" for="contact_type">
      <a href="#" class="top_tooltip">Type of contact<span>You must select the type of contact you are making. <b>Website and data problems will be sent to the Web Master or Data Manager</b></span></a>
      <small class="additional">Select one</small>
    </label>  
    <select id="contact_type" name="contact[contact_type]" class="select" required="required" size="2">
      <% @options.each do |value| %>
      <% if value == @contact.contact_type %>
      <option value="<%=value%>" selected="selected" ><%=value%></option>
      <% else %>
      <option value="<%=value%>" ><%=value%></option>
      <% end %>
      <% end %>
    </select>
  </li>
  <li  class="grid__item  one-quarter  palm-one-whole" id="contact_type_input">
    <label class="label" for="contact_management">
      <a href="#" class="top_tooltip">Management<span>Select the level of management to which you wish to direct your question or comment</span></a>
      <small class="additional">Optional. </small>
    </label>
    <select id="contact_management" name="contact[contact_management]" class="select"  size="2">
      <option value="" selected="selected" ><%="None"%></option>
      <option value="freereg" ><%="FreeREG"%></option>
      <option value="freeukgen" ><%="FreeUKGen"%></option>
    </select>
  </li>
  <li  class="grid__item  one-quarter  palm-one-whole" id="contact_type_input">
    <label class="label" for="contact_county">
      <a href="#" class="top_tooltip">County<span>Select a county if you wish to direct your question to the coordinator</span></a>
      <small class="additional">Optional. </small>
    </label>
    <select id="contact_county" name="contact[contact_county]" class="select"  size="2">
      <option value="" selected="selected" ><%="None"%></option>
      <% @options_counties.each_pair do |label, value| %>
      <option value="<%=value%>"><%=label%></option>
      <% end %>
    </select>
  </li>
  <li  class="grid__item  one-quarter  palm-one-whole" id="contact_type_input">
    <label class="label" for="contact_syndicate">
      <a href="#" class="top_tooltip">Syndicate<span>Select a syndicate if you wish to direct your question to the coordinator</span></a>
      <small class="additional">Optional.  </small>
    </label>
    <select id="contact_syndicate" name="contact[contact_syndicate]" class="select"  size="2">
      <option value="" selected="selected" ><%="None"%></option>
      <% @options_syndicates.each do |value| %>
      <option value="<%=value.syndicate_code%>" ><%=value.syndicate_code%></option>
      <% end %>
    </select>
  </li>
  <li class="grid__item  one-whole  palm-one-whole">
    <label><a href="#" class="left_tooltip">Description<span>Please enter your comments or question</span></a></label>
    <% if @contact.body.nil? %>
    <textarea name="contact[body]" cols="80" rows="10">Enter text here...</textarea>
    <% else%>
    <textarea name="contact[body]" cols="80" rows="10" ><%=@contact.body%></textarea>
    <% end%>
  </li>
  <li class="grid__item  one-third  palm-one-whole">
    <label><a href="#" class="left_tooltip">Screenshot or image<span>Please select the image you wish to upload</span></a></label>
    <input name="contact[screenshot]" type="file" > 
  </li>
  <li  class="grid__item  one-third  palm-one-whole" id="name_input_optional">
    <label class="label" for="contact_name">
      <a href="#" class="top_tooltip">Your name<span>Please provide a name for when we contact you; it will not be made public</span></a>
    </label>
    <input name="contact[contact_name]" type="text" class="text-input" placeholder="Mandatory" required="required" >
  </li>
  <br>
  <%= f.action :submit, :as => :button,  :label => 'Submit' ,
  :button_html => { :class => "btn btn--small", :type => 'submit' },
  :wrapper_html => { :class => "grid__item  one-third text--left" }  %>
  <% end %>
</section>