<%= semantic_form_for(@contact, :html => {:multipart => true}) do |f| %>
  <% if @contact.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@contact.errors.count, "error") %> prohibited your contact from being submitted:</h2>

      <ul>
      <% @contact.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
      </ul>
    </div>
  <% end %>
  <%= f.hidden_field :contact_time %>
  <%= f.hidden_field :session_id %>
  <%= f.hidden_field :problem_page_url %>
  <%= f.hidden_field :previous_page_url %>
 <section class="island  island--light ">
       <li  class="grid__item  one-quarter  palm-one-whole" id="contact_type_input">
      <label class="label" for="contact_type">
      <a href="#" class="top_tooltip">Type of contact<span>You must select the type of contact you are making</span></a>
      </label>
      <select id="contact_type" name="contact[contact_type]" class="select" selected="@contact.contact.type">
        <option value=""></option>
        <% @options.each do |value| %>
          <option value="<%=value%>"><%=value%></option>
      <% end %>
    </select>
  </li>
  <li  class="grid__item  one-quarter  palm-one-whole" id="email_address_input">
      <label class="label" for="email_address">
      <a href="#" class="top_tooltip">Your email address<span>Please enter your email address so we can contact you; it will not be made public</span></a>
      </label>
        <input name="contact[email_address]" type="text" class="text-input" placeholder="Mandatory" >
   </li>
   <li  class="grid__item  one-quarter  palm-one-whole" id="name_input">
      <label class="label" for="name">
      <a href="#" class="top_tooltip">Your name<span>Please provide a name for when we contact you; it will not be made public</span></a>
      </label>
        <input name="contact[name]" type="text" class="text-input" placeholder="Mandatory" >
   </li>
   <li class="grid__item  one-quarter  palm-one-whole">
     <label><a href="#" class="left_tooltip">Subject<span>Please enter a short title or summary</span></a></label>
      <input name="contact[subject]" type="text" class="text-input" placeholder="Mandatory" >
    
   </li>
  
  <li class="grid__item  one-whole  palm-one-whole">
     <label><a href="#" class="left_tooltip">Description<span>Please enter your comments or question</span></a></label>
      
  <textarea name="contact[body]" cols="80" rows="10">Enter text here...</textarea>
   </li>
    <li class="grid__item  one-whole  palm-one-whole">
     <label><a href="#" class="left_tooltip">Screenshot<span>Please enter your comments or question</span></a></label>
      <input name="contact[screenshot]" type="file_field" >
    
   </li>
 
    <%= f.label :screenshot, "Screenshot" %><br />
    <%= f.file_field :screenshot %>

  
	
  
<br>
  <%= f.action :submit, :as => :button,  :label => 'Select' , 
    :button_html => { :class => "btn btn--small", :type => 'submit' }, 
    :wrapper_html => { :class => "grid__item  one-third" }  %>


<% end %>


</section>
