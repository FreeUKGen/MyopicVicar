<% breadcrumb :edit_csvfile,  @csvfile, @file%>
<p style="text-align: center"><b>Replacing existing Batch of records <%= @file_name %> for <%= @person %></b></p>
<% if flash[:notice] %>
<div id="notice" style="color:blue"><br>
  <%= flash[:notice] %>  <% flash[:notice] = nil%> <br>
</div>
<% end %>
<ul>
  <% @csvfile.errors.full_messages.each do |msg| %>
  <li><%= msg %></li>
  <% end %>
</ul>
  <div class="grid">
    
    <%= simple_form_for @csvfile, html: { multipart: true ,:class => "grid"} do |f| %> 
    <%= f.input :csvfile, :label => "Please select file to upload", :hint => "Locate the file on your device." %><br>
    <%= f.input :userid, :collection => @people,:include_blank => false,:label => "Userid where file is to be stored", :hint => "Your own userid has been preselected. Select another userid if you wish.",  :input_html => {  :class => " simple_form_bgcolour simple_form_position overide_selection_field_width", :size => 4 },:selected => @user.userid unless session[:my_own] %><br>  
    <%= f.button :submit, 'Replace'   %>
    <% end %>
  </div>