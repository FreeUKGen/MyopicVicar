<div class='island  island--light'>
  <%= semantic_form_for @place, :html => { :class => 'grid'}  do |f| %>
    <%= f.hidden_field :editor, :value=>@user_userid %>
    <h4 style='text-align: center'>When creating a New Place <b>PLEASE PAY SPECIAL ATTENTION TO THE SPELLING OF THE NAME INCLUDING CAPITALIZATION</b><br>
      There are 3 boxes for Alternate Names. You may add more by editing the place after this creation.
    </h4>
    <%= f.input :county,:label => 'Select county from following list', :hint => 'For Edinburghshire use Midlothian: Elgin use Morayshire: Haddington use East Lothian; Kings use Offlay;
        Linlithgow use West Lothian; Mearns use Kincardineshire; Queens use County Laois; West Galloway use Wigtownshire: Shetland use Shetland Isles.',:include_blank => false, :collection => @counties, :input_html => {:class => ' simple_form_bgcolour large_selection_field_width',:size => 5}   %>
    <%= f.input :place_name, :label => 'Enter the Place Name',:hint => 'Please take extreme care with the Place Name including its case!' ,:input_html => {:class => 'simple_form_bgcolour', :size => 40 }%>
    <%= f.simple_fields_for :alternate_freecen2_place_names do |alternate| %>
      <%= alternate.input :alternate_name,:label => 'Other Name for Place',:hint => 'Alternative name by which place may be known. Use the destroy box below to delete this entry',:input_html => {:class => 'simple_form_bgcolour', :size => 40 }%>
      <%= alternate.input :_destroy, :as => :boolean %>
    <% end %>
    <%= f.input :grid_reference , label: ' Either a Grid Reference OR the latitude and longitude', :hint => 'Must be 2 capital characters followed by  4, 6 or 8 numerics eg NX123456',:input_html => {:class => 'simple_form_bgcolour', :size => 40 }%>
    <%= f.input :latitude ,:hint => 'Required if no Grid Reference entered', :label => 'Latitude in degrees eg 50.234 :',:input_html => {:class => 'simple_form_bgcolour', :size => 40 }%>
    <%= f.input :longitude ,:hint => 'Required if no Grid Reference entered', :label => 'Longitude in degrees eg -1.234 :',:input_html => {:class => 'simple_form_bgcolour', :size => 40 }%>
    <%= f.input :source,:label => 'Select source from following list', :hint => 'Where was the information obtained for this Place entry. You must also enter a Website for the source.',:include_blank => false, :collection => @sources, :input_html => {:class => ' simple_form_bgcolour large_selection_field_width',:size => 5}, :required => true %>
    <%= f.input :genuki_url,:hint => 'Paste link for source Website.', :label => 'Website for Place Source',:input_html => {:class => 'simple_form_bgcolour', :size => 40 }, :required => true %>
    <%= f.input :place_notes,:label => 'Notes about the Place',as: :text, :input_html => { :class => 'simple_form_bgcolour', :size => '50x5' , :placeholder => 'Enter your notes'}%>
    <%= f.input :last_amended, :label => 'Date when place records were updated', :input_html => { :disabled => true, :size => 40  }%>
    <div  style='text-align: center'>
      <%= f.action :submit,  :as => :button,  :label =>  'Submit', :button_html => {name: 'commit', value: 'Submit', :class => 'ladda-button' , 'data-style' => 'contract' ,'data-color' => appname_downcase , 'data-size' => 's', 'data-spinner-color' => '#ffffff'  } %>
      <%= f.action  :cancel, as: :link, label: 'Cancel' %>
    <% end %>
  </div>
  <script type='text/javascript'>
    Ladda.bind( 'button[type=submit]' );
  </script>