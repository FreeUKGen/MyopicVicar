<div class="island  island--light">
  <h4 style="text-align: center">When creating a New Place <b>PLEASE PAY SPECIAL ATTENTION TO THE SPELLING OF THE NAME INCLUDING CAPITALIZATION</b><br>
    There are 3 boxes for Alternate Names. You may add more by editing the place after this creation.
  </h4>
  <%= simple_form_for @place, :html => { :class => "grid"}  do |f| %>
    <% if controller.action_name == 'new' || controller.action_name == 'create'%>
      <% if %w[county_coordinator country_coordinator system_administrator data_manager validator].include?(@user.person_role)%>
        <%= f.input :county,:label => "Select county from following list", :hint => 'For Midlothian use Edinburghshire: Elgin use Morayshire: Haddington use East Lothian; Kings use Offlay;
        Linlithgow use West Lothian; Mearns use Kincardineshire; Queens use County Laois; West Galloway use Wigtownshire: Shetland use Shetland Isles.',:include_blank => false, :collection => @counties, :input_html => {:class => " simple_form_bgcolour simple_form_position overide_selection_field_width",:size => 3}   %>
        <%= f.input :place_name, :label => "Enter the Place Name",:hint => "Please take extreme care with the Place Name including its case!" ,:input_html => {:class => "simple_form_bgcolour", :size => 40 }%>
      <% else%>
        <%= f.hidden_field :county, :value=>@county %>
        <%= f.hidden_field :place_name, :value=>@place_name %>
      <% end %>
    <% elsif%>
      <% if %w[county_coordinator country_coordinator system_administrator data_manager].include?(@user.person_role)%>
        <%= f.input :county, :value=>@county , :input_html => { :disabled => true,:size => 10 }%>
        <%= f.input :place_name, :label => "Enter the New Place Name",:hint => "Please take extreme care with the Place Name including its case!" ,:input_html => {:class => "simple_form_bgcolour", :size => 40 }%>
      <% else%>
        <%= f.hidden_field :county, :value=>@county %>
        <%= f.hidden_field :place_name, :value=>@place_name %>
      <% end %>
    <% else%>
      <%= f.hidden_field :county, :value=>@county %>
      <%= f.hidden_field :place_name, :value=>@place_name %>
    <% end %>
    <%= f.simple_fields_for :alternate_freecen2_place_names do |alternate| %>
      <%= alternate.input :alternate_name,:label => "Other Name for Place",:hint => "Alternative name by which place may be known. Use the destroy box below to delete this entry",:input_html => {:class => "simple_form_bgcolour", :size => 40 }%>
      <%= alternate.input :_destroy, :as => :boolean %>
    <% end %>
    <%= f.input :grid_reference , label: ' Either a Grid Reference OR the latitude and longitude', :hint => "Must be 2 capital characters followed by  4, 6 or 8 numerics eg NX123456",:input_html => {:class => "simple_form_bgcolour", :size => 40 }%>
    <%= f.input :latitude ,:hint => "Required if no Grid Reference entered", :label => "Latitude in degrees eg 50.234 :",:input_html => {:class => "simple_form_bgcolour", :size => 40 }%>
    <%= f.input :longitude ,:hint => "Required if no Grid Reference entered", :label => "Longitude in degrees eg -1.234 :",:input_html => {:class => "simple_form_bgcolour", :size => 40 }%>
    <%= f.input :genuki_url,as: :url,:hint => "Paste the link from the appropriate website page", :label => "Relevant Gazetteer website eg Genuki or Gazetteer",:input_html => {:class => "simple_form_bgcolour", :size => 60 }%>
    <%= f.input :source ,:hint => "Where was the information obtained for this Place entry",:label => "The source of the information",:input_html => {:class => "simple_form_bgcolour", :size => 40 }%>
    <%= f.input :place_notes,:label => "Notes about the Place",as: :text, :input_html => { :class => "simple_form_bgcolour",:rows => 5, :cols =>30 , :placeholder => "Enter your notes"}%>
    <% if session[:type] == "edit" then %>
      <%= f.input :reason_for_change ,:label => "Your reason for making the change",:input_html => {:class => "simple_form_bgcolour", :size => 40 }%>
      <%= f.input :other_reason_for_change ,:label => "Your reason for a further change",:input_html => {:class => "simple_form_bgcolour", :size => 40 }%>
    <% end %>
    <%= f.input :last_amended, :label => "Date when place records were updated", :hint =>"System generated ",:input_html => { :disabled => true, :size => 30  }%>
    <%= f.button :submit, 'Submit',:button_html => {:class => "btn  " }  %>
  <% end %>
</div>