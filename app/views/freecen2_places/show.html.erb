<% breadcrumb :show_freecen2_place,  @county, @place%>
<%= render 'flash_notice' %>
<div class="grid">
  <section class="island ">
    <h4 style="text-align: center">The Freecen2 Place <%= @place.place_name%> in <%=@county%></h4>
    <div style="text-align: center">
      <% if %w[data_manager system_administrator county_coordinator].include?(@user.person_role)%>
        <%= link_to 'Edit Freecen2 Place Information', edit_freecen2_place_path(@place), method: :get,data: { confirm: 'Are you sure?' }, :class => "btn  btn--small"%>
        <%= link_to 'Create New Freecen2 Place', new_freecen2_place_path, method: :get, :class => "btn   btn--small" %>
        <%= link_to 'Change Freecen2 Place Name', rename_freecen2_place_path(@place), method: :get,data: { confirm: 'Are you sure?' }, :class => "btn   btn--small" %>
        <%= link_to 'Disable Freecen2 Place', freecen2_place_path(@place), method: :delete,  data: { confirm: 'Are you sure you want to destroy this Place.? It will not happen if there are dependents!' }, :class => "btn   btn--small" %>
      <% end%>
      <div class="grid__item  ">
        <table class="table--bordered table--data " >
          <colgroup >
            <col class=t40>
            <col class=t60>
          </colgroup>
          <tr>
            <th class="caps">Field</th>
            <th  class="caps">Value</th>
          </tr>
          <tr>
            <td>Place : </td>
            <td class="weight--semibold"><%= @place.place_name %>  </td>
          </tr>
          <tr>
            <td>County:</td>
            <td class="weight--semibold"><%= @county %></td>
          </tr>
          <tr>
            <td>Country:</td>
            <td class="weight--semibold"><%= @place.country %></td>
          </tr>
          <%  @place.alternate_freecen2_place_names.each do |place|%>
            <tr>
              <td>Other possible place name :</td>
              <td class="weight--semibold"><%= place.alternate_name %> </td>
            </tr>
          <% end%>
          <tr>
            <td>Latitude:</td>
            <td class="weight--semibold"> <%= @place.latitude%></td>
          </tr>
          <tr>
            <td>Longitude:</td>
            <td class="weight--semibold"> <%= @place.longitude%></td>
          </tr>
          <tr>
            <td>Notes about the place :</td>
            <td class="weight--semibold"><%= @place.place_notes %> </td>
          </tr>
        </table>
      </div>
    </div>