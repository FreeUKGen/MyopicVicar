<% breadcrumb :freecen_csv_entries, @freecen_csv_entry,  @freecen_csv_file%>
<% file = @freecen_csv_file %>
<h3 style="text-align: center"><b><%= file_name(file) %></b> (<%= file.userid %>) in <b><%= @place_name %></b> of <b><%= @chapman_code %></b><br>
</h3>
<h4 style="text-align: center"> There are more fields in the record than shown here</h4>
<div  style="text-align: center">
  <%= link_to 'Create new entry', new_freecen_csv_entry_path, method: :get , :class => "btn btn--small"  %> <%= link_to 'Listing of all Error Records in this Batch', error_freecen_csv_file_path(@freecen_csv_file), method: :get , :class => "btn btn--small" %>
</div>
<div style="clear:both;"> </div>
<br>
<%= render 'flash_notice' %>
<div style="overflow: hidden;">
  <div class="scrollable ">
    <table class="table--bordered my-width table--data just--left">
      <thead  >
        <tr >
          <th class='sticky-header'>Number</th>
          <th class='sticky-header'>Civil Parish</th>
          <th class='sticky-header'>Transition</th>
          <th class='sticky-header'>Dwelling Number</th>
          <th class='sticky-header'>Individual Number</th>
          <th class='sticky-header'>Action</th>
        </tr>
      </thead>
      <tbody >
        <% @freecen_csv_entries.each do |freecen_csv_entry| %>
          <% if freecen_csv_entry.error.present? %>
            <tr id="<%= freecen_csv_entry.id %>" style= "color:red">
            <%else%>
              <tr id="<%= freecen_csv_entry.id %>" style= "color:teal">
              <% end%>
              <td><%= freecen_csv_entry.record_number%></td>
              <td><%= freecen_csv_entry.civil_parish %></td>
              <td><%= freecen_csv_entry.data_transition %></td>
              <td><%= freecen_csv_entry.dwelling_number %></td>
              <td><%= freecen_csv_entry.individual_number %></td>
              <td><%= link_to 'SH', freecen_csv_entry_path(freecen_csv_entry) %> <%= link_to 'ED', edit_freecen_csv_entry_path(freecen_csv_entry) %> <%= link_to 'DE', freecen_csv_entry, data: { confirm:  'Are you sure?'}, method: :delete   %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>
  <br>