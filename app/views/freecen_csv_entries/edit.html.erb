<% breadcrumb :edit_record,  @freecen_csv_entry,@freecen_csv_file%>
<p style="text-align: center">Editing record <b><%= @freecen_csv_entry.file_line_number %></b> for batch: <b><%= @freecen_csv_file_name %></b> (<%= @file_owner %>) in <b><%= @register_name %></b> of <b> <%= @church_name%></b> in <b><%= @place_name %></b> of <b><%= @county %></b></p>
<div  style="text-align: center">  <%= link_to 'Edit Embargo',  edit_embargo_freecen_csv_entry_path(@freecen_csv_entry, "zero_record" => @get_zero_year_records, "zero_listing" => @zero_year), method: :get, :class => "btn btn--small" if @embargo_permitted %> </div>
<br>
<%= render 'flash_notice' %>
<% case @freecen_csv_file.record_type %>
<% when "ba" %>
<% if @freecen_csv_file.def %>
  <%= render 'extended_baptism_form' %>
<% else %>
  <%= render 'original_baptism_form' %>
<% end %>
<% when "bu" %>
<% if @freecen_csv_file.def %>
  <%= render 'extended_burial_form' %>
<% else %>
  <%= render 'original_burial_form' %>
<% end %>
<% when "ma" %>
<% if @freecen_csv_file.def %>
  <%= render 'extended_marriage_form' %>
<% else %>
  <%= render 'original_marriage_form' %>
<% end %>
<% end %>