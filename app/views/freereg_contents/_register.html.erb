 <%#= This partial is used to display the register information section %>
<table  class=" table--bordered table--data push--bottom center50">
  <thead  >
    <tr>
      <th >Field</th>
      <th >Value</th>
    </tr>
  </thead>
  <tbody>
    <tr>
      <td>Notes</td>
       
      <td class="weight--semibold"><%= add_blank(@register.register_notes) %></td>
    </tr>
    <tr>
      <td>Status</td>
              
      <td class="weight--semibold"><%= add_blank(@register.status) %></td>
    </tr>
    <tr>
      <td>Source</td>
              
      <td class="weight--semibold"><%= add_blank(@register.source) %></td>
    </tr>
    <tr>
      <td>Special acknowledgment to :</td>
      <td class="weight--semibold"> <%= @register.credit %>  </td>
    </tr>
    <tr>
      <td>First official year for Register</td>
          
      <td class="weight--semibold"><%= add_blank(@register.minimum_year_for_register)  %></td>
    </tr>
    <tr>
      <td>Last official year for Register</td>
      <td class="weight--semibold"><%= add_blank(@register.maximum_year_for_register) %>
      </td>
    </tr>
    <tr>
      <td>Latest date a transcription file loaded</td>
        
      <td class="weight--semibold"><%= @register.last_amended %></td>
    </tr>
    <tr>
      <td>Number of entries</td>
        
      <td class="weight--semibold"><%= @register.records %></td>
    </tr>
    <tr>
      <td>First actual year of entries</td>
        
      <td class="weight--semibold"><%= @register.datemin %></td>
    </tr>
    <tr>
      <td>Last actual year of entries</td>
        
      <td class="weight--semibold"><%= @register.datemax %></td>
    </tr>
    <tr>
      <td>Date register information changed</td>
        
      <td class="weight--semibold"><%= @register.u_at.strftime("%d %b %Y") %></td>
    </tr>
  </tbody>
</table>