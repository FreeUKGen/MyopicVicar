<div class="grid">
  <section class="island ">
    <div >
      <h3 class=" text--center">SURNAMES</h3>
      <p class=" text--center">You may find it useful to use your browser find option to search for critical parts of names</p>
      <p>
        <% if @unique_surnames.present? %>
          <% @unique_surnames.each do |name| %>
            <%= name %>&emsp;
          <% end%>
        <% end%>
      </p>
    </div>
    <h3 class=" text--center">FORENAMES</h3>
    <p>
      <% if @unique_forenames.present? %>
        <% @unique_forenames.each do |name| %>
          <%= name %>&emsp;
        <% end%>
      <% end%>
    </p>
  </div>
  <div >
  </section>
</div>