<% require 'record_type' %>
<p style="text-align: center">Information about
  <b><%= @place_name %> </b> for <b><%= @county %></b>. <br> You may see the location of the Place by clicking on the location link. This will take you to a Genuki webpage.
</p>
<table  class="table--bordered  table--striped  table--data" >
  <tr>    
    <th style="width:25%">Field</th>
    <th style="width:50">Value</th>
  </tr>
  <tr> 
   <td>Place : </td> <td> <%= @place.place_name %>  </td>
 </tr>
 <tr>
   <td>County:</td> <td><%= @place.county %></td>
   <tr>
     <td>Country:</td> <td><%= @place.country %></td>
     <% if @names%>
     <%  @names.each do |name| %>
     <tr>
       <td>Other possible place names :</td><td ><%= name %>  </td> 
     </tr> 
     <%end%>
     <%end%>
     <tr>
       <td>Genuki page :</td><td ><%= link_to('Location', @place.genuki_url) unless @place.genuki_url.nil? || @place.genuki_url == "no url" %></td> </tr>


       <tr>
         <td>Notes about the Place :</td><td > <%= @place.place_notes %> </td>   
       </tr>
       <tr>
         <td>Grid Reference:</td><td > <%= @place.grid_reference %></td>   
       </tr>
       <tr>
         <td>Latitude:</td><td > <%= @place.latitude%></td>   
       </tr>
       <tr>
         <td>Longitude:</td><td > <%= @place.longitude%></td>   
       </tr>
       <tr>
         <td>Source:</td><td > <%= @place.source %></td>   
       </tr>

       <tr>
         <td>Last amended:</td><td > <%= @place.u_at.strftime("%d %b %Y") %></td>   
       </tr>

     </table> 

     <table class="table--bordered  table--striped  table--data">
<% @place.churches.order_by(church_name: 1).each do |church| %>
  <tr> 
   
    <td><%= link_to church.church_name, show_church_path(church) %> </td> 
    
        
  </tr>
<% end %>
</table>
<br> 
   </div> 
   <br>
   </div>
