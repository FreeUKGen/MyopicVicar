<h4 class="beta  text--teal"> <%= @county  %> general information</h4>
<%= county_content(@chapman_code) %>
<h2 class="text--center">The database contained the following information on <%= @place.place_name %> . </h2>
<div class="text--center"><%= link_to 'Back to County/Place Selection', freereg_contents_path, method: :get, :class => "btn  btn--small"%>  </div>
<div class="grid">
  <section class="island ">
<table class="grid__item two-thirds table--bordered t50" >
<colgroup >
     <col class="t20">
   <col class="t30 weight--semibold">
 </colgroup>
 </colgroup>
   <thead  >
  <tr>    
    <th >Field</th>
    <th >Value</th>
  </tr>
  </thead>
  <tbody>
  <tr> 
   <td>Place : </td> <td class="weight--semibold"> <%= @place.place_name %>  </td>
  </tr>
 <tr>
   <td>County:</td> <td class="weight--semibold"><%= @place.county %></td></tr>
 <tr>
     <td>Country:</td> <td class="weight--semibold"><%= @place.country %></td>
     <% if @names%>
     <%  @names.each do |name| %>
     <tr>
       <td>Other possible place names :</td><td class="weight--semibold" ><%= name %>  </td> 
     </tr> 
     <%end%>
     <%end%>
     </tr>
     <tr>
       <td>Genuki location page :</td><td class="weight--semibold" ><%= link_to('Location', @place.genuki_url, :class => "btn  btn--exsmall")  unless @place.genuki_url.nil? || @place.genuki_url == "no url" %></td>
        </tr>
       <tr>
         <td>Notes about the Place :</td><td class="weight--semibold" > <%= @place.place_notes %> </td>   
       </tr>
       <tr>
         <td>Grid Reference:</td><td class="weight--semibold" > <%= @place.grid_reference %></td>   
       </tr>
       <tr>
         <td>Latitude:</td><td class="weight--semibold" > <%= @place.latitude%></td>   
       </tr>
       <tr>
         <td>Longitude:</td><td class="weight--semibold" > <%= @place.longitude%></td>   
       </tr>
       <tr>
         <td>Source:</td><td class="weight--semibold" > <%= @place.source %></td>   
       </tr>

       <tr>
         <td>Last amended:</td><td class="weight--semibold" > <%= @place.u_at.strftime("%d %b %Y") %></td>   
       </tr>
       <tr>
         <td>Number of records:</td><td class="weight--semibold" > <%= @stats[0] %></td>   
       </tr>
        <tr>
         <td>First year of records:</td><td class="weight--semibold" > <%= @stats[1] unless @stats[0] == 0%></td>   
       </tr>
       <tr>
         <td>Last year of records:</td><td class="weight--semibold" > <%= @stats[2] unless @stats[0] == 0%></td>   
       </tr>
       </tbody>
     </table> 
<div  class="grid__item one-quarter float_right">
<h4 style="text-align: center">The Place has the following Churches</h4>
   <table class="table--bordered ">
<% @place.churches.order_by(church_name: 1).each do |church| %>
  <tr> 
    <td class="weight--semibold"><%= link_to church.church_name, show_church_path(church)  %> </td> 
      
  </tr>
<% end %>
</table>
</section>
</div>