<% title "#{@place.place_name} #{@county} information" %>
<div class="container">
  <section class="island ">
    <div class="text--center">
      <%= link_to 'County Selection', new_freereg_content_path, method: :get, :class => "btn   btn--small"%>
      <%= link_to 'Another Place in this County', freereg_contents_path, method: :get, :class => "btn   btn--small"%>
      <%= link_to 'Names', unique_place_names_path(@place.id), method: :get, :class => "btn   btn--small"%>
    </div>
    <%= render 'flash_notice' %>
    <br>
    <h2 class=" text--center">Information about <%= @place.place_name %> in <%= @county %> </h2>
    <h3 class=" text--center"><%= @place.place_name %> has the following <%= 'church'.pluralize(@churches_count) %>:
      <% @place.churches.order_by(church_name: 1).each do |church| %>
        <%= link_to church.church_name, show_church_freereg_content_path(church), :class => "btn   btn--small"  %>
      <% end %></h3>
    <%= render 'place' %>
    <%= render 'decade' %>
  </section>
</div>