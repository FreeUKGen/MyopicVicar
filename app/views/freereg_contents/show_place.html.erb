<% require 'record_type' %>
<h4 style="text-align: center">The database contained a Place with the following characteristics on <%= Rails.application.config.dataset_date %>. </h4>
<div style="float:left;"><%= button_to 'Back to Places Index', show_freereg_content_path( @county_id, :anchor => "#{@place}"), method: :get, :class => "btn  btn--small"  %> </div>
<table  class="table--bordered  table--striped  table--data" >
  <tr>    
    <th style="width:25%">Field</th>
    <th style="width:50">Value</th>
  </tr>
  <tr> 
   <td>Place : </td> <td> <%= @place.place_name %>  </td>
 </tr>
 <tr>
   <td>County:</td> <td><%= @place.county %></td>
   <tr>
     <td>Country:</td> <td><%= @place.country %></td>
     <% if @names%>
     <%  @names.each do |name| %>
     <tr>
       <td>Other possible place names :</td><td ><%= name %>  </td> 
     </tr> 
     <%end%>
     <%end%>
     <tr>
       <td>Genuki location page :</td><td ><%= link_to('Location', @place.genuki_url, :class => "btn  btn--small")  unless @place.genuki_url.nil? || @place.genuki_url == "no url" %></td> </tr>


       <tr>
         <td>Notes about the Place :</td><td > <%= @place.place_notes %> </td>   
       </tr>
       <tr>
         <td>Grid Reference:</td><td > <%= @place.grid_reference %></td>   
       </tr>
       <tr>
         <td>Latitude:</td><td > <%= @place.latitude%></td>   
       </tr>
       <tr>
         <td>Longitude:</td><td > <%= @place.longitude%></td>   
       </tr>
       <tr>
         <td>Source:</td><td > <%= @place.source %></td>   
       </tr>

       <tr>
         <td>Last amended:</td><td > <%= @place.u_at.strftime("%d %b %Y") %></td>   
       </tr>
       <tr>
         <td>Number of records:</td><td > <%= @stats[0] %></td>   
       </tr>
        <tr>
         <td>First year of records:</td><td > <%= @stats[1] %></td>   
       </tr>
       <tr>
         <td>Last year of records:</td><td > <%= @stats[2] %></td>   
       </tr>
     </table> 
<h4 style="text-align: center">The Place has the following church(es)</h4>
     <table class="table--bordered  table--striped  table--data">
<% @place.churches.order_by(church_name: 1).each do |church| %>
  <tr> 
   
    <td><%= link_to church.church_name, show_church_path(church), :class => "btn  btn--small"  %> </td> 
    
        
  </tr>
<% end %>
</table>
<div style="float:left;"><%= button_to 'Back to Places Index', show_freereg_content_path( @county_id, :anchor => "#{@place}"), method: :get, :class => "btn  btn--small"  %> </div>
