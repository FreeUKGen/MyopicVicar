<% require 'record_type' %>


<h4 style="text-align: center">The database contained the following Place on <%= Rails.application.config.dataset_date %>. </h4>
<div style="text-align: center"><%= button_to 'Back to Places Index', show_freereg_content_path( @county_id, :anchor => "#{@place}"), method: :get, :class => "btn  btn--small" unless @county_id.nil? %> </div>
<div class="grid">
  <section class="island ">
<table class="grid__item two-thirds table--bordered t50" >
<colgroup >
     <col class="t20">
   <col class="t30 weight--semibold">
 </colgroup>
 </colgroup>
   <thead  >
  <tr>    
    <th >Field</th>
    <th >Value</th>
  </tr>
  </thead>
  <tbody>
  <tr> 
   <td>Place : </td> <td> <%= @place.place_name %>  </td>
  </tr>
 <tr>
   <td>County:</td> <td><%= @place.county %></td></tr>
 <tr>
     <td>Country:</td> <td><%= @place.country %></td>
     <% if @names%>
     <%  @names.each do |name| %>
     <tr>
       <td>Other possible place names :</td><td ><%= name %>  </td> 
     </tr> 
     <%end%>
     <%end%>
     </tr>
     <tr>
       <td>Genuki location page :</td><td ><%= link_to('Location', @place.genuki_url, :class => "btn  btn--exsmall")  unless @place.genuki_url.nil? || @place.genuki_url == "no url" %></td>
        </tr>
       <tr>
         <td>Notes about the Place :</td><td > <%= @place.place_notes %> </td>   
       </tr>
       <tr>
         <td>Grid Reference:</td><td > <%= @place.grid_reference %></td>   
       </tr>
       <tr>
         <td>Latitude:</td><td > <%= @place.latitude%></td>   
       </tr>
       <tr>
         <td>Longitude:</td><td > <%= @place.longitude%></td>   
       </tr>
       <tr>
         <td>Source:</td><td > <%= @place.source %></td>   
       </tr>

       <tr>
         <td>Last amended:</td><td > <%= @place.u_at.strftime("%d %b %Y") %></td>   
       </tr>
       <tr>
         <td>Number of records:</td><td > <%= @stats[0] %></td>   
       </tr>
        <tr>
         <td>First year of records:</td><td > <%= @stats[1] %></td>   
       </tr>
       <tr>
         <td>Last year of records:</td><td > <%= @stats[2] %></td>   
       </tr>
       </tbody>
     </table> 
<div  class="grid__item one-quarter float_right">
<h4 style="text-align: center">The Place has the following Church(es)</h4>
   <table class="table--bordered ">
<% @place.churches.order_by(church_name: 1).each do |church| %>
  <tr> 
    <td><%= link_to church.church_name, show_church_path(church)  %> </td> 
      
  </tr>
<% end %>
</table>
</section>
</div>