<% require 'record_type' %>
<div class="grid">
  <section class="island ">

<h4 style="text-align: center">Details of the 
 <b><%= RegisterType.display_name(@register.register_type) %></b> register for <b><%= @church %></b> in <b><%= @place_name %></b> 
   of <b><%= @county %></b> on <%= Rails.application.config.dataset_date %>.  </h4> 
   <div ><%= button_to 'Back to Places Index', show_freereg_content_path(@county_id, :anchor => "#{@place}"), method: :get , :class => "btn  btn--small" %> <br></div>
 
<table  class="table--bordered  table--striped  table--data" >
 <colgroup >
     <col >
     <col >
     <col >
      <col >
     <col class=t30>
      <col >
     <col >
      <col >
 </colgroup>
   <thead  >

  <tr>
   <th >Record Type</th>
    <th >Number of records</th>
    <th >First year</th>
    <th >Last year</th>
    <th >Credit</th>
    <th >Transcription date</th>
    <th >Record last amended</th>
    <th >Link to decadal data</th>
   
  </tr>
   </thead>
  <tbody>

<% @files.each do |file| %>
  <tr > 
    <% unless file.records.nil? %>
   <% value = RecordType.display_name(file.record_type) %>
    <td ><%= value %></td>
    <td ><%= file.records %></td>
    <td ><%= file.datemin %></td>
    <td ><%= file.datemax %></td>
    <% if file.credit_name.nil? %> 
    <td ><%= file.transcriber_name%></td>
    <%end%>
     <% unless file.credit_name.nil? %> 
    <td ><%= file.credit_name %></td>
    <%end%>
    <td ><%= file.transcription_date %></td>
    <td ><%= file.modification_date %></td>
    <td ><%= link_to "Link", show_decade_path(value), :class => "btn  btn--exsmall"  %></td>
   
     <%end%>
    
    
  </tr>
<% end %>
</table>You may see the decades for which data has been transcribed by following the "Link".<br>
</tbody>
</section>

 </div>