<%= semantic_form_for @search_query do |f| %>
  
    <%= f.input :county, 
        { :as => :select, 
          :include_blank => false,
          :required => true,
          :collection => ChapmanCode::select_hash_with_parenthetical_codes } %>

    <%= f.action :submit, :as => :input, :label => 'Search'  %>
  
<% end %>