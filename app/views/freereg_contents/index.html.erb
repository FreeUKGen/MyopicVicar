<% title "#{@county} Contents" %>
<div class="text--center push-half--bottom">
  <%= link_to 'Choose a County', new_freereg_content_path, :class => "btn  btn--small "%>
</div>
<h1 class="title text--center"><%= @county %></h1>
<h2 class="accessibility">Database contents</h2>
<%= render 'flash_notice' %>
<div class="grid">
  <%= semantic_form_for @freereg_content do |f| %>
    <li class="grid__item one-half palm-one-whole" id="freereg_content_place_input">
      <h2 class="text--center">Choose a Specific Place </h2>
      <select id="freereg_content_place" name="freereg_content[place]" class="select" size="11">
        <%  @places.each do | value| %>
          <option value="<%= value.id %>"><%= value.place_name %></option>
        <% end %>
      </select>
    </li>
    <li class="grid__item one-half palm-one-whole">
      <h2 class="text--center">General County Information</h2>
      <div class="read-length">
        <p class="gamma">Coordinator: <span class="weight--semibold"><%= @coordinator %></span></p>
        <%= county_content(@page)%>
      </div>
      <div class="island island--bordered">
        <h3 class="delta push-half--bottom">As of today â€¦</h3>
        <p class="push-half--bottom"><%= @county %> has <%= display_number(@records[0])%> these records:</p>
        <ul class="push--left">
          <li><%= display_number(@records[1])%> baptisms</li>
          <li><%=display_number(@records[2])%> burials</li>
          <li><%= display_number(@records[3])%> marriages</li>
        </ul>
      </div>
    </li>
    <%= f.action :submit, :as => :input,  :label => 'Select' , :button_html => {:class => 'btn ' }  %>
  <% end %>
</div>