<%= simple_form_for @freereg1_csv_entry, :html => { :class => "grid"}  do |f| %>
    <%= f.input :register_entry_number,  :input_html => {:class => " simple_form_bgcolour  ",  :size => 30 }%> 
    <%= f.input :burial_date ,  :input_html => {:class => " simple_form_bgcolour  ",  :size => 30 }%> 
    <%= f.input :burial_person_forename ,  :input_html => {:class => " simple_form_bgcolour  ",  :size => 30 }%> 
    <%= f.input :burial_person_surname ,  :input_html => {:class => " simple_form_bgcolour  ",  :size => 30 }%> 
    <%= f.input :burial_person_abode ,  :input_html => {:class => " simple_form_bgcolour  ",  :size => 30 }%> 
    <%= f.input :person_age ,  :input_html => {:class => " simple_form_bgcolour  ",  :size => 30 }%>  
    <%= f.input :relationship,  :input_html => {:class => " simple_form_bgcolour  ",  :size => 30 } %> 
    <%= f.input :male_relative_forename,  :input_html => {:class => " simple_form_bgcolour  ",  :size => 30 } %>
    <%= f.input :female_relative_forename,  :input_html => {:class => " simple_form_bgcolour  ",  :size => 30 } %>   
    <%= f.input :relative_surname,  :input_html => {:class => " simple_form_bgcolour  ",  :size => 30 } %> 
    <%= f.input :notes, :label => 'Notes in register', :as => :text, :input_html => {:class => " simple_form_bgcolour  ",   :placeholder => "Enter your notes",  :size => "29x5" }%> 
    <%= f.input :film ,  :input_html => {:class => " simple_form_bgcolour  ",  :size => 30 }%>
    <%= f.input :film_number,  :input_html => {:class => " simple_form_bgcolour  ",  :size => 30 } %>
    <%= f.input :record_type, :input_html => { :disabled => true  } %>  
    <%= f.input :line_id, :input_html => { :disabled => true }%>
    <%= f.input :file_line_number, :input_html => { :disabled => true } %> 
    <%= f.button :submit, 'Submit'   %>
<% end %>