Page Identification Master Place:index<p>
<% require 'chapman_code' %>

<%  unless params[:commit] == "Search" %>
<p> Please select the county that you wish to review and/or edit.</p>

<%= semantic_form_for @places do |f| %>
  
    <%= f.input :chapman_code, 
        { :as => :select, 
          :include_blank => false,
          :required => true,
          :collection => ChapmanCode::select_hash_with_parenthetical_codes } %>

    <%= f.action :submit, :as => :input, :label => 'Search'   %>
 <% end %>
 <% else %>

<p>All Places for <b><%= @county  %></b>. Select the Genuki link to see the specific location of the Place and the Show Details or Edit Places links to see or change the details.
</p>
<div id="nav">
	<%= button_to 'Back to County Search Page', master_place_names_path, method: :get %>
  <%= button_to 'Create New Master Place Name entry', new_master_place_name_path, method: :get %>
</div>
<div id="main">
<table style="width: 100%">
  <tr>
    <th >Place</th>
    <th >Genuki page</th>
    <th >Source</th>
    <th >Last Updated</th>
    <th >Action</th>
  </tr>

<% @places.each do |place| %>
  <tr id="<%=place.id%>">
    <% unless place.disabled == "true" then %>
    <td >
     <%= place.place_name %>
    </td>
       
    <td >
    <% if (place.genuki_url.nil? || place.genuki_url == "no url") %>
      <%= place.genuki_url %>
     <% else %>
     <%= link_to('Genuki', place.genuki_url) %>
     <% end %>
    </td>
    <td >
     <%= place.source %>
    </td>
    <td >
     <%= place.u_at.strftime("%d %b %Y") %>
    </td>
    <td >
       <%= link_to 'Show Detail', master_place_name_path(place) %><br>     
       <%= link_to'Edit Place', edit_master_place_name_path(place) %><br>
       <%= link_to 'Discard', master_place_name_path(place),method: :delete,data:{confirm: 'Are you sure?'} %>
      </td>
      <% end %>
  </tr>
<% end %>
</table> <br />
</div>
<div id="nav">
  <%= button_to 'Create New Master Place Name document', new_master_place_name_path, method: :get %>
  <%= button_to 'Back to County Search Page', master_place_names_path, method: :get %>
</div>
<% end %>

 