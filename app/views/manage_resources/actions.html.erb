<% title "Action Page" %>
<% if flash[:notice] %>
   <div class="push-half--bottom" id="notice" style="color:blue;">
  <%= flash[:notice] %>  <% flash[:notice] = nil%><br>
  </div>
<% end %>
<% count = @user.count_not_checked_messages %>
<% if count != 0 %>
  <div class="islet islet--bordered push--bottom" style="border-color: #895f49; border-width: 2px; max-width: 20em;">
  You have <b><%= link_to "#{pluralize(count, 'message')}", userid_messages_path %>.</b>
  </div>
<% end %>
<% if @user.transcription_agreement != "Accepted" %>
  <p><strong><%= link_to "Open Data", "http://www.freeukgenealogy.org.uk/about/opendata/", :class => "go", target: :_blank %>:</strong> Your transcriptions are currently set to: no preference, and will not be shared as open data. To choose to make your transcriptions Open, <%= link_to "please click here",edit_userid_detail_path(@user), method: :get %> and update the Transcription Agreement status. If you have any questions about transcribing or the documents linked below, please ask us! volunteers@freereg.org.uk</p-->
<% end %>
<% breadcrumb :root %>
<%= @page %> 

