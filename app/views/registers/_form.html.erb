<%= semantic_form_for(@register) do |f| %>
  
  

 

   <%= f.input :register_type, { :as => :select,:label => "Type of Register :",:include_blank => false,
          :required => true, :collection => RegisterType::OPTIONS, :size => 15 }%>
  
  <%= f.input :quality,:label => "Quality of the Register images :", :input_html => { :size => 40 }%>
  <%= f.input :source, :label => "Source of the Register images :",:input_html => { :size => 80 }%>
  <%= f.input :copyright, :label => "Any copyright issues ?",:input_html => { :size => 60 }%>
  <%= f.input :register_notes, :label => "Notes about Register :",:input_html => { :size => 60 }%>
   <%= f.input :status,  :label => "Status or transcriptions (i.e. Underway/Finished etc :",:input_html => {  :size => 60 }%>
  <%= f.input :last_amended,:label => "System generated date of last amemended record :", :input_html => { :disabled => true, :size => 20  }%>
 
  <br>
  
  <%= f.action :submit, :as => :input, :label => 'Submit' %>

 

<% end %>
