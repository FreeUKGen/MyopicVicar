<p style="text-align: center">Changing the Register Type from <b><%= @register_type %></b> for <b><%= @church_name %></b> in <b><%= @place_name %></b> of <b><%= @county %></b>
</p>
<div style="text-align: center"> <%= link_to 'Index of Places', places_path( :anchor => "#{@user.id}"), method: :get, :class => "btn  btn--small"%>     <%= link_to "Register's Church", church_path( @register.church), method: :get, :class => "btn  btn--small"%>  <%= link_to 'Create New Register', new_register_path, method: :get, :class => "btn  btn--small" %> <%= link_to 'Show Register Fields', register_path(@register), method: :get, :class => "btn  btn--small" %>  <%= link_to 'Edit Register Fields', edit_register_path(@register), method: :get, :class => "btn  btn--small" %>   <%= link_to 'Merge Similar Register Types into this one', merge_register_path(@register), method: :get, :class => "btn  btn--small" %> <%= button_to  'Destroy Register', register_path(@register), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn  btn--small"%> </div>
<div style="clear:both;"> </div><br>
  <% if flash[:notice] %>
 <div id="notice" style="color:blue"><br>
   <%= flash[:notice] %>  <% flash[:notice] = nil%><br>
 </div>
 <% end %>
<section class="island  island--light">
<%= semantic_form_for(@register, :html => { :class => "grid"}) do |f| %>
<%= f.semantic_errors :class => "validation-list__error" %>

<%= f.input :register_type, 
              { :as => :select,:include_blank => false, :required => true, :collection => RegisterType::OPTIONS, 
              :size => 2 , :class => "text-input",  :label => "Type of Register :",
              :input_html => { :class => "select" }, 
              :wrapper_html => { :class => "grid__item  one-whole  palm-one-whole" }
              }%>
   
 <%= f.action :submit, :as => :input, :label => 'Rename' %>
 <% end %>
 <p style="color:red">Please note if you are changing the Register Type of a register the processing time could be several minutes depending upon the number of batches affected. <b>Please wait for the process to complete.</b></p>

 </section>
  