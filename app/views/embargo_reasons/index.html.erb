<% breadcrumb :embargo_reasons%>
<h2 class="text--center"> List of Embargo Reasons</h2>
<div style="text-align: center"><%= link_to 'Create New Embargo Reason',new_embargo_reason_path, method: :get , :class => "btn btn--small"  %></div>
<%= render 'flash_notice' %>
<div>
  <table class=" table--bordered table--data">
    <tr>
      <th> Embargo Reasons</th>
      <th colspan = "3">Actions</th>
    </tr>
    <% @reasons.each do |reason| %>
      <tr>
        <td><%= reason.reason%></td>
        <td><%= link_to 'Show', embargo_reason(reason) %></td>
        <td><%= link_to 'Edit', edit_embargo_reason_path(reason) %></td>
        <td><%= link_to 'Destroy', embargo_reason(reason), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </table>
</div>