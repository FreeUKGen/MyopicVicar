<section class="island  island--light">
<div class="grid">
<%= simple_form_for @gap do |s| %>
  <%= s.input :start_date, :label=>'Start Date', :value=>s.object.start_date, :input_html=>{:class=>"simple_form_bgcolour simple_form_position", :size=>11} %>
  <%= s.input :end_date, :label=>'End Date', :value=>s.object.end_date, :input_html=>{:class=>"simple_form_bgcolour simple_form_position", :size=>11} %>
  <%= s.input :reason, :label=>'Reason', :as=>:select, :collection=>@reason, :include_blank=>false, :value=>s.object.reason, :input_html=>{:class=>"simple_form_bgcolour simple_form_position overide_selection_field_width", :size=>2}, :label_html=>{:style=>"color: #0A0A0A", :class=>"simple_form_label"} %>
  <%= s.input :note, :label => 'Note', :as=>:text, :value=>s.object.note, :input_html=>{:class=>"simple_form_bgcolour simple_form_position overide_selection_field_width"} %>

	<%= s.hidden_field :source_id, :value=>session[:source_id] %>
  <%= s.hidden_field :place_id, :value=>@place.id %>
  <%= s.button :submit, 'Submit', :onclick=>'return validate_reason()' %>
<% end %>
</div>
</section>

<script type="text/javascript">
  <%= render :partial => 'gap.js' %>
</script>
