<% breadcrumb :show_gap, @user, @syndicate, @county, @place, @church, @register,@freereg1_csv_file%>
<% title "Gap - properties" %>
<%= render partial: 'header' %>
<%= render partial: 'flash_notice' %>
<% unless session[:userid].nil?%>
  <div style="text-align: center">
    <%= link_to 'Create New GAP', new_gap_path(register: @register, freereg1_csv_file: @freereg1_csv_file), method: :get, :class => "btn  btn--small"  %>
    <%= link_to 'Edit GAP', edit_gap_path(@gap, register: @register, freereg1_csv_file: @freereg1_csv_file), method: :get, :class => "btn  btn--small" if @gap.can_be_edited?(@user) %>
    <%= link_to 'Delete GAP', gap_path(@gap, register: @register, freereg1_csv_file: @freereg1_csv_file), method: :delete, :class => "btn  btn--small" if @gap.can_be_deleted?(@user) %>
  </div>
  <div style="clear:both;"></div>
  <br>
<% end %>
<div class="grid">
  <section class="island ">
    <div class="grid__item ">
      <table class="table--bordered  table--data">
        <colgroup >
          <col class=t40>
          <col class=t60>
        </colgroup>
        <tr>
          <th class="caps">Field</th>
          <th class="caps">Value</th>
        </tr>
        <tr>
          <td>Record Type</td>
          <td class="t15"><%= @gap[:record_type] %>&nbsp;</td>
        </tr>
        <tr>
          <td>Start Date</td>
          <td class="t15"><%= @gap[:start_date] %>&nbsp;</td>
        </tr>
        <tr>
          <td>End Date</td>
          <td class="t15"><%= @gap[:end_date] %>&nbsp;</td>
        </tr>
        <tr>
          <td>Reason</td>
          <td class="t30"><%= @gap[:reason] %>&nbsp;</td>
        </tr>
        <tr>
          <td>Batch</td>
          <td class="t30"><%= freereg1_csv_file_name(@gap) %>&nbsp;</td>
        </tr>
        <tr>
          <td>Note</td>
          <td class="t15"><%= @gap[:note] %>&nbsp;</td>
        </tr>
      </table>
    </div>
  </section>
</div>