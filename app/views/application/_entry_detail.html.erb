<div class='grid'>
  <section class='island '>
    <div class='grid__item '>
      <table class='table--bordered table--data push--bottom t100 ' >
        <caption class='beta' tabindex=0 ><%= record_type(@entry) %> entry
          <%case%>
          <%when @display_date%>
          <span class='additional'> search made on <%=Time.now.strftime('%d %b %Y') %></span><br>
          <%when !current_authentication_devise_user.present?%>
          <span tabindex=0 class='additional'>While we have made all efforts to correctly record the information in the original document there may be different interpretations of the written words. <b>If you have access to the original document</b> and believe we have made a mistake you are encouraged to report this to us.
            <%= link_to 'Report an Error in this Data', report_error_contact_path(@search_record[:_id], :query => @search_query), class: 'btn btn--natural' unless  @search_record.blank? || @search_query.blank? %></span>
        <% end%>
      </caption>
      <thead>
        <tr>
          <% if @all_data.present? %>
            <th tabindex=0>Field </th>
          <% else%>
            <th tabindex=0>Field <br>
              (only fields with a value are shown)</th>
          <% end%>
          <th tabindex=0>Value </th>
        </tr>
      </thead>
      <tbody>
        <% @order.each do |field| %>
          <% if @all_data.present? || @entry[field].present? %>
            <% case field %>
            <% when 'county' %>
            <tr>
              <td tabindex=0><%= field.gsub('_',' ').capitalize %></td>
              <td tabindex=0><%= @entry[field] %></td>
            </tr>
            <% when 'place' %>
            <tr>
              <td tabindex=0><%= field.gsub('_',' ').capitalize %></td>
              <% if @place_id.present? %>
                <td tabindex=0><%= link_to(@entry[field], place_freereg_content_path(@place_id)) %></td>
              <% else %>
                <td tabindex=0><%= @entry[field] %></td>
              <% end %>
            </tr>
            <% when 'church_name' %>
            <tr>
              <td tabindex=0><%= field.gsub('_',' ').capitalize %></td>
              <% if @church_id.present? %>
                <td tabindex=0><%= link_to(@entry[field], church_freereg_content_path(@church_id)) %></td>
              <% else %>
                <td tabindex=0><%= @entry[field] %></td>
              <% end %>
            </tr>
            <% when 'register_type' %>
            <tr>
              <td tabindex=0><%= field.gsub('_',' ').capitalize%></td>
              <% if @register_id.present? %>
                <td tabindex=0><%= link_to(@entry[field], register_freereg_content_path(@register_id)) %></td>
              <% else %>
                <td tabindex=0><%= register_name_for_entry(@entry[field]) %></td>
              <% end %>
            </tr>
            <% when 'image_file_name' %>
            <% if !@image_id.present?  %>
              <tr>
                <td tabindex=0><%= field.gsub('_',' ').capitalize %></td>
                <td tabindex=0><%= @entry[field] %></td>
              </tr>
            <% else %>
              <tr>
                <td tabindex=0><%= field.gsub('_',' ').capitalize %></td>
                <td tabindex=0>  <%= link_to 'View image', view_image_server_image_path(:object => @image_id), method: :get,:target => '_blank' , :class => 'btn btn--small' %></td>
              </tr>
            <% end %>
            <% when 'film' %>
            <% if  current_authentication_devise_user.present?%>
              <tr>
                <td tabindex=0>Film</td>
                <td tabindex=0><%= @entry.film %></td>
              </tr>
            <% end%>
            <% when 'film_number' %>
            <% if  current_authentication_devise_user.present?%>
              <tr>
                <td tabindex=0>Film Number</td>
                <td tabindex=0><%= @entry.film_number %></td>
              </tr>
            <% end%>
            <% when 'processed_date' %>
            <% if  current_authentication_devise_user.present? && @entry.processed_date.present? %>
              <tr>
                <td tabindex=0><%= field.gsub('_',' ').capitalize %></td>
                <td tabindex=0><%= @entry.processed_date.strftime('%d %b %Y') %></td>
              </tr>
            <% end%>
            <% when 'line_id' %>
            <% if  current_authentication_devise_user.present?%>
              <tr>
                <td tabindex=0><%= field.gsub('_',' ').capitalize %></td>
                <td tabindex=0><%= @entry.line_id %></td>
              </tr>
            <% end%>
            <% when 'credit' %>
            <%  creditable = credit(@entry) %>
            <% if creditable.present? %>
              <tr>
                <td tabindex=0><%= field.gsub('_',' ').capitalize %></td>
                <td tabindex=0><%= creditable %></td>
              </tr>
            <% end %>
            <% when 'transcribed_by' %>
            <%  creditable = transcriber(@entry) %>
            <% if creditable.present? %>
              <tr>
                <td tabindex=0><%= field.gsub('_',' ').capitalize %></td>
                <td tabindex=0><%= creditable %></td>
              </tr>
            <% end %>
            <% when 'error_flag'  %>
            <% if  current_authentication_devise_user.present?%>
              <% if @entry.error_flag == 'true' %>
                <tr style= 'color:blue'>
                <% else%>
                  <tr style= 'color:black'>
                  <% end%>
                  <td tabindex=0>Error in record</td>
                  <td tabindex=0>  <%= @entry.error_flag %> </td>
                </tr>
                <tr style= 'color:black'>
                </tr>
              <% end%>
            <%else%>
              <tr>
                <td tabindex=0><%= field.gsub('_',' ').capitalize %></td>
                <td tabindex=0><%= @entry[field] %></td>
              </tr>
            <% end %>
          <% end %>
        <% end %>
        <% if  !current_authentication_devise_user.present?%>
          <td  colspan=2><%= link_to 'Report an Error in this Data', report_error_contact_path(@search_record[:_id], :query => @search_query), class: 'btn btn--natural' unless  @search_record.blank? || @search_query.blank? %></td>
        <% end %>
      </tbody>
    </table>
  </div>
</section>
</div>