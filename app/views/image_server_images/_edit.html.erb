<div style="clear:both;"></div><br>
<center><b><%= @image_server_image[:image_set] %>_<%= @image_server_image[:seq] %>.jpg</b></center>

<section class="island  island--light">
<div class="grid">
<%= simple_form_for @image_server_image do |s| %>
  <%= s.input :image_server_group_id, :as=>:select, :collection=>@ig.invert.sort, :label=>'Re-sssign the image to Image Group', :multiple=>true, :include_blank=>false, :input_html=>{:class => "simple_form_bgcolour simple_form_position", :size => 3} %>
	<%= s.hidden_field :id, :value=>@image_server_image[:id] %>
	<%= s.hidden_field :image_set, :value=>@image_server_image[:image_set] %>
	<%= s.hidden_field :seq, :value=>@image_server_image[:seq] %>
  <%= s.button :submit, 'Submit' %>
<% end %>
</div>
</section>