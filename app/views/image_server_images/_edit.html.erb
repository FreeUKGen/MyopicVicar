<div style="clear:both;"></div><br>
<center><b><%= @image_server_image[:image_name] %>_<%= @image_server_image[:seq] %>.jpg</b></center>

<section class="island  island--light">
<div class="grid">
<%= simple_form_for @image_server_image do |s| %>
  <% if session[:manage_user_origin] == 'manage county' %>
    <% if @image_server_image[:status] == 'u' %>
      <%= s.input :image_server_group_id, :as => :select, :collection => @group_name.invert, :label => 'Re-sssign the image to Image Group', :include_blank => false, :include_hidden => false, :input_html => {:class => "simple_form_bgcolour simple_form_position", :size => 3} %>
    <% end %>
    <% if not ['ir','ip'].include? @image_server_image[:status] %>
      <%= s.input :status, :collection => [['Unallocated','u'], ['Transcribed','t'], ['Reviewed','r'], ['Complete','c']], :selected => s.object.status, :label => 'transcription status', :value => ImageServerImage::Status::ALL_STATUSES[s.object.status], :include_blank => false, :input_html => {:class => "simple_form_bgcolour simple_form_position overide_selection_field_width", :size => 3} %>
    <% end %>
  <% end %>
  <%= s.input :difficulty, :collection => ImageServerImage::Difficulty::ALL_DIFFICULTIES.invert, selected: s.object.difficulty, :label => 'difficulty', :value => ImageServerImage::Difficulty::ALL_DIFFICULTIES[s.object.difficulty], :include_blank => false, :input_html => {:class => "simple_form_bgcolour simple_form_position overide_selection_field_width", :size => 3} %>
  <% if session[:manage_user_origin] == 'manage county' %>
  	<%= s.input :notes, :input_html => {:class => "simple_form_bgcolour", :size => 70} %>
  <% end %>

	<%= s.hidden_field :id, :value=>@image_server_image[:id] %>
	<%= s.hidden_field :image_name, :value=>@image_server_image[:image_name] %>
	<%= s.hidden_field :seq, :value=>@image_server_image[:seq] %>
  <%= s.hidden_field :orig_image_server_group_id, as: :fake, :value=>@image_server_image[:image_server_group_id] %>
  <%= s.hidden_field :origin, as: :fake, :value=>'edit' %>
  <%= s.button :submit, 'Submit' %>
<% end %>
</div>
</section>