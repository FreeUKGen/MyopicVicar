<div style="text-align: center">
  <% if ['system_administrator', 'county_coordinator', 'data_manager'].include? @user.person_role %>
    <%= link_to 'Edit Image', edit_image_server_image_path(@image), :class => "btn weight--light btn--small" %> 
  <% end %>
  <% if @user.person_role == 'system_administrator' %>
    <%= link_to 'Delete Image', image_server_image_path(@image), data: { confirm: 'Are you sure you want to delete IS image '+@image[:image_name]+'_'+@image[:seq]+'.jpg?'}, method: :delete, :class => "btn weight--light btn--small" %>
  <% end %>
  <%= link_to 'List All Images In the Same Image Group', index_image_server_image_path(@image[:image_server_group_id]), method: :get, :class => "btn weight--light btn--small" %>
</div>
<div style="clear:both;"> </div><br>

<div class="grid">
  <section class="island ">
    <div class="grid__item ">
      <table   class="table--bordered  table--data">
        <colgroup >
        <col class=t20>
        <col class=t80>
        </colgroup>
        <tr>
          <th class="caps">Field</th>
          <th class="caps">Value</th>
        </tr>
        <tr><td>Image Group</td><td class="weight--semibold"><%= @image[:image_group][:group_name] %></td></tr>
        <tr><td>Image Name</td><td class="weight--semibold"><%= @image[:image_name] %></td></tr>
        <tr><td>Image Number</td><td class="weight--semibold"><%= @image[:seq] %></td></tr>
        <tr>
          <td>Status</td>
          <% case @image[:status] %>
            <% when 'e', 'u' %>
              <td class="weight--semibold" style="color:red">
            <% when 't' %>
              <td class="weight--semibold" style="color:green">
            <% else %>
              <td class="weight--semibold">
          <% end %>
          <%= ImageServerImage::Status::ALL_STATUSES[@image[:status]] %>&nbsp;</td>
        </tr>
        <tr>
          <td>Difficulty</td><td class="weight--semibold"><%= ImageServerImage::Difficulty::ALL_DIFFICULTIES[@image[:difficulty]] if @image[:difficulty].present? %>&nbsp;</td>
        </tr>
        <tr>
        	<td>Transcriber</td><td class="weight--semibold"><%= @image[:transcriber].join(' / ') if !@image[:transcriber].blank? %>&nbsp;</td>
				</tr>
        <tr>
        	<td>Reviewer</td><td class="weight--semibold"><%= @image[:reviewer].join(' / ') if !@image[:reviewer].blank? %>&nbsp;</td>
				</tr>
        <tr>
          <td>Notes</td><td class="weight--semibold"><%= @image[:notes] %>&nbsp;</td>
        </tr>
      </table>
    </div>
  </section>
</div>