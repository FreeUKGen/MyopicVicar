<% breadcrumb :show_feedback, @feedback %>
<% if flash[:notice] %>
  <div id="notice" style="color:blue"><br>
    <%= flash[:notice] %>  <% flash[:notice] = nil%><br>
  </div>
<% end %>
<h2 class=" text--center">Feedback Identifier: <%= @feedback.identifier %>  </h2>
<div  class=" text--center push--bottom">
  <%= link_to 'Create Reply', reply_feedback_path(source_feedback_id:@feedback.id) ,:class => "btn weight--light  btn--small" %>
  <%= link_to 'View Replies', feedback_reply_messages_path(@feedback.id), class: "btn weight--light  btn--small", method: :get %>
  <%= link_to 'Archive', archive_feedback_path(@feedback.id), :class => "btn weight--light  btn--small", data: { confirm: 'Are you sure you want to Archive this contact?' } unless @feedback.is_archived?%>
  <%= link_to 'Restore', restore_feedback_path(@feedback.id), :class => "btn weight--light  btn--small", data: { confirm: 'Are you sure you want to Archive this contact?' } if @feedback.is_archived?%>
  <%= link_to 'Destroy', force_destroy_feedback_path(@feedback.id), :class => "btn weight--light  btn--small", title: "This contact has replies and will be destroyed with this action", data: { confirm: 'This contact has replies. Are you sure you want to delete this contact and all its replies' } if @feedback.is_archived?%>
  <%= link_to 'Keep until I say so', keep_feedback_path(@feedback.id,:source => params[:action]), :class => 'btn weight--light  btn--small',  data: { confirm: 'Are you sure you want keep this feedback' } unless @feedback.keep.present?%>
  <%= link_to 'Remove Keep Designation', unkeep_feedback_path(@feedback.id,:source => params[:action]), :class => 'btn weight--light  btn--small',  data: { confirm: 'Are you sure you want remove the keep designation for this feedback' } if @feedback.keep.present? %>
</div>
<p>
  <b>Title:</b>
  <%= @feedback.title %>
</p>
<p>
  <b>Body:</b>
  <%= @feedback.body %>
</p>
<p>
  <b>Time:</b>
  <%= @feedback.feedback_time.strftime("%H:%M on %F") unless @feedback.feedback_time.nil? %>
</p>
<p>
  <b>User:</b>
  <%= @feedback.user_id %>
</p>
<p>
  <b>Email address:</b>
  <%= @feedback.email_address %>
</p>
<p>
  <b>Session ID:</b>
  <%= @feedback.session_id %>
  (View <%= link_to("search queries for this session", search_query_report_path(:feedback_id => @feedback, :session_id => @feedback.session_id)) %>.)
</p>
<p>
  <b>Problem page url:</b>
  <%= link_to @feedback.problem_page_url, @feedback.problem_page_url %>
</p>
<p>
  <b>Previous page url:</b>
  <%= link_to @feedback.previous_page_url, @feedback.previous_page_url %>
</p>
<p>
  <b>Type:</b>
  <%= @feedback.feedback_type %>
</p>
<% if  @feedback.github_issue_url %>
  <p>Github Issue: <%= link_to  @feedback.github_issue_url,  @feedback.github_issue_url  %></p>
  <p>Github Number: <%=  @feedback.github_number  %></p>
  <p>Make Github Comment: <%= link_to  @feedback.github_comment_url,  @feedback.github_comment_url  %></p>
<% else %>
  <% if Contact.github_enabled %>
    <p><span  style="float:left;">
        <%= button_to "Convert to Issue", convert_feedback_to_issue_path( @feedback)  %>
      </span></p>
  <% else %>
    <p>Github integration is not set up on this site yet.</p>
  <% end %>
<% end %>
<p>
  <b>Screenshot:</b>
  <% if @feedback.screenshot_url %>
    <%= image_tag @feedback.screenshot_url %>
  <% else %>
    No screenshot attached.
  <% end %>
</p>
<p>
  <b>Session Data:</b>
  <%= debug @feedback.session_data %>
</p>