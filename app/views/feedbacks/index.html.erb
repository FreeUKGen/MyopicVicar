

<h1 class="title text--center">List of all feedback reports</h1>

  <% unless Feedback.github_enabled %>
    <div id="error_explanation">
      <h2>Github integration is not enabled</h2>
    </div>
  <% end %>

<% if flash[:notice] %>
<div id="notice" style="color:blue"><br>
 <%= flash[:notice] %>  <% flash[:notice] = nil%><br>
</div>
<% end %>  

 <section class="island  island--light " >
 <div class="table-wrapper"> 
 <div class="grid"> 
  <div class="grid__item one-whole" >

<table class="table--bordered " >
  <tr>
    <th>Title</th>
    <th>Date</th>
    <th>User</th>
    <th>email</th>
    <th>Type</th>
    <th>Identifier</th> 
    <th>Action</th>
    <th>Action</th>
  </tr>

<% @feedbacks.each do |feedback| %>
  <tr>
    <td><%= feedback.title %></td>
    <td><%= feedback.feedback_time.strftime("%H:%M on %F") unless feedback.feedback_time.nil? %></td>
    <td><%= feedback.user_id %></td>
    <td><%= feedback.email_address %></td>
    <td><%= feedback.feedback_type %></td>
    <td><%= feedback.identifier unless feedback.identifier.nil? %></td>
    <td><%= button_to 'Show', feedback_path(feedback),  method: :get%></td>
    <td><%= button_to 'Destroy feedback', feedback_path(feedback), method: :delete, data: { confirm: 'Are you sure you want to delete this feedback' } %></td>
 </tr>
<% end %>
</table>
</div>
</div>
</div>
</section>
<br />

