<% if appname_downcase == 'freecen' || appname_downcase == 'freereg' %>
  <header class="site__header" >
    <div class="container">
      <% unless current_page?('/cms/refinery/login') || current_page?('/cms/home/page-not-found') || current_page?('/cms/refinery/users/login')%>
        <% case appname_downcase %>
        <% when 'freecen' %>
          <% unless device_type == :mobile %>
            <div class="bnner-horz cen_unit_headers cen_unit">
              <a href ="https://www.freeukgenealogy.org.uk/help-us-keep-history-free/?_ga=2.145101431.251616756.1548792447-1735478806.1548792447">
                <%= image_tag 'png/header-donate.png', class: "donations", alt: "Donations - FreeUKGenealogy" %>
              </a>
              <%= advert_code("header","horz") %>
            </div>        
            <% unless GdprCountries::FOLLOWED_COUNTRIES.include?(user_location)%>
              <div class="cookieConsent island island--teal flush--bottom">
                <div id="cookieText" >
                  We use cookies to ensure you get the best experience with our website. This includes carefully chosen third-party cookies for analysing traffic and advertising. Please select ‘Accept Cookies’ if you consent and wish to continue using the site. <strong><a tabindex = "1" href="/cms/about/cookie-policy" class="cookie_policy_link" id="cookie_policy">More options and information.</a></strong>
                </div>
                <div class = "cookieAcceptButton">
                  <input class="btn btn--small accept_cookies" tabindex="3" type="submit" name="accept_cookies" id="accept_cookies" value="Accept Cookies" />
                </div>
              </div>
            <% end %>
          <% end %>
        <% when 'freereg' %>
          <% unless device_type == :mobile%>
            <div class="bnner-horz reg_adsense reg_unit reg_header">
              <a href ="https://www.freeukgenealogy.org.uk/help-us-keep-history-free/?_ga=2.145101431.251616756.1548792447-1735478806.1548792447"><%= image_tag 'png/header-donate.png', class: "donations", alt: "Donations - FreeUKGenealogy" %></a>
              <%= advert_code("header", "horz") %>
            </div>
            <% unless GdprCountries::FOLLOWED_COUNTRIES.include?(user_location)%>
              <div class="cookieConsent island island--teal flush--bottom">
                <div id="cookieText" >
                  We use cookies to ensure you get the best experience with our website. This includes carefully chosen third-party cookies for analysing traffic and advertising. Please select ‘Accept Cookies’ if you consent and wish to continue using the site. <strong><a tabindex = "1" href="/cms/about/cookie-policy" class="cookie_policy_link" id="cookie_policy">More options and information.</a></strong>
                </div>
                <div class = "cookieAcceptButton">
                  <input class="btn btn--small accept_cookies" tabindex="3" type="submit" name="accept_cookies" id="accept_cookies" value="Accept Cookies" />
                </div>
              </div>
            <% end %>
          <% end %>
        <% end %>
        <button type="button" id="trigger-offcanvas" class="site__header__menu-btn">
            <span>Menu</span>
            <i class="icon__cancel" aria-hidden="true"></i>
        </button>
        <% case appname_downcase %>
        <% when 'freereg' %>
          <%= link_to '/', class: "site__header__logo  icon__freereg" do %>
            <h1 class="accessibility">FreeREG | Free Parish Register Records</h1>
          <% end %>
        <% when 'freecen' %>
          <%= link_to '/', class: "site__header__logo  icon__freecen" do %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </header>
