<header class="site__header" >
  <div class="container">
    <% unless current_page?('/cms/refinery/login') || current_page?('/cms/home/page-not-found') || current_page?('/cms/refinery/users/login')%>
      <div class="banner-horz">
        <% unless device_type == :mobile%>
          <%= display_banner %>
          <%= banner_header %>
        <% end %>
      </div>
    <% end %>
    <button type="button" id="trigger-offcanvas" class="site__header__menu-btn">
      <span>Menu</span>
      <i class="icon__cancel" aria-hidden="true"></i>
    </button>
    <% if MyopicVicar::Application.config.template_set == 'freereg' %>
      <%= link_to '/', class: "site__header__logo  icon__freereg" do %>
        <h1 class="accessibility">FreeREG</h1>
      <% end %>
    <% elsif MyopicVicar::Application.config.template_set == 'freecen' %>
      <%= link_to '/', class: "site__header__logo  icon__freecen" do %>
        <h1 class="accessibility">FreeCEN</h1>
      <% end %>
    <% elsif MyopicVicar::Application.config.template_set == 'freebmd' %>
      <%= link_to '/', class: "site__header__logo  icon__freebmd" do %>
        <h1 class="accessibility">FreeBMD</h1>
      <% end %>
    <% end %>
  </div>
  <div class="cookieConsent">
    <div id="cookieText">
      <strong>Please note:</strong> We use cookies to ensure you get the best experience with our website. This includes carefully chosen third-party cookies for analysing traffic and advertising. Please select ‘Accept’ if you consent and wish to continue using the site. <strong><a href="/cms/about/cookie-policy-2" class="cookie_policy_link">Learn more about how we use cookies.</a></strong>
    </div>
    <div id="cookieAcceptButton">
      <input class="btn btn--small accept_cookies" tabindex="3" type="submit" name="accept_cookies" id="accept_cookies" value="Accept Cookies" />
    </div>
    <div id="cookieCloseButton">
      <a href="#" id="CloseCookieConsent">X</a>
    </div>
  </div>
</header>
