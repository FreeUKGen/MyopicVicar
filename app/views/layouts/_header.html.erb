<header class="site__header" style='padding-top: 20px;' >
  <div class="container">
    <% unless current_page?('/cms/refinery/login') || current_page?('/cms/home/page-not-found') || current_page?('/cms/refinery/users/login')%>
      <% case appname_downcase %>
      <% when 'freecen' %>
      <% unless device_type == :mobile%>
        <div class="bnner-horz cen_unit_headers cen_unit" style="box-shadow: none;">
          <fieldset style="padding:5px;">
            <legend align="center">Advertisement</legend>
              <%= my_heritage_720_90_cen %>
          </fieldset>
        </div>
      <% end %>
      <% when 'freereg' %>
      <% unless device_type == :mobile%>
        <div class="bnner-horz reg_adsense reg_unit reg_header" style="box-shadow: none;">
          <fieldset style="padding:5px;">
            <legend align="center">Advertisement</legend>
              <%= my_heritage_720_90_first %>
          </fieldset>
        </div>
      <% end %>
      <% when 'freebmd' %>
      <% unless device_type == :mobile%>
        <div class="bnner-horz reg_adsense">
          <a href ="https://www.freeukgenealogy.org.uk/help-us-keep-history-free/"><%= image_tag 'png/header-donate.png',  class: "donations", alt: "Donations - FreeUKGenealogy" %></a>
          <%= banner_header %>
        <% end %>
      </div>
    <% end %>
  <% end %>
  <button type="button" id="trigger-offcanvas" class="site__header__menu-btn">
    <span>Menu</span>
    <i class="icon__cancel" aria-hidden="true"></i>
  </button>
  <% case appname_downcase %>
  <% when 'freereg' %>
  <%= link_to '/', class: "site__header__logo  icon__freereg" do %>
    <h1 class="accessibility">FreeREG | Free Parish Register Records</h1>
  <% end %>
  <% when 'freecen' %>
  <%= link_to '/', class: "site__header__logo  icon__freecen" do %>
  <% end %>
  <% when 'freebmd' %>
  <%= link_to '/', class: "site__header__logo  icon__freebmd" do %>
  <% end %>
<% end %>
</div>
</header>
