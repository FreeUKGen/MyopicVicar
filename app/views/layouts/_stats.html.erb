<div class="c-subfooter-1__stats">
  <% case appname.downcase %>
  <% when 'freereg' %>
  <h2 class="c-subfooter-1__stats-heading gamma">Statistics</h2>
  <% if @site_stat %>
    <dl class="c-subfooter-1__stats-list">
      <dt class="c-subfooter-1__stats-term">Yesterday</dt>
      <dd class="c-subfooter-1__stats-value">
        <%= number_with_delimiter(@site_stat[:n_searches]) %> &nbsp;searches were performed</dd>
      <% if @site_stat[:n_records_added].to_i > 0 %>
        <dd class="c-subfooter-1__stats-value">Volunteers uploaded&nbsp;
          <%= number_with_delimiter(@site_stat[:n_records_added]) %> &nbsp;records</dd>
      <% else %>
        <dd class="c-subfooter-1__stats-value">No records were added</dd>
      <% end %>
      <dt class="c-subfooter-1__stats-term">Record Count</dt>
      <dd class="c-subfooter-1__stats-value">
        <%= number_with_delimiter(@site_stat[:n_records]) %> &nbsp;Records</dd>
      <dd class="c-subfooter-1__stats-value">
        <%= number_with_delimiter(@site_stat[:n_records_baptisms]) %> &nbsp;Baptisms</dd>
      <dd class="c-subfooter-1__stats-value">
        <%= number_with_delimiter(@site_stat[:n_records_marriages]) %> &nbsp;Marriages</dd>
      <dd class="c-subfooter-1__stats-value">
        <%= number_with_delimiter(@site_stat[:n_records_burials]) %> &nbsp;Burials</dd>
    </dl>
  <% else %>
    <p class="c-subfooter-1__stats-term">Statistics temporarily unavailable</p>
  <% end %>
  <% when 'freecen' %>
  <h2 class="c-subfooter-1__stats-heading gamma">Statistics</h2>
  <% if @site_stat %>
    <dl class="c-subfooter-1__stats-list">
      <dt class="c-subfooter-1__stats-term">Yesterday</dt>
      <dd class="c-subfooter-1__stats-value">
        <%= number_with_delimiter(@site_stat[:searches]) %> &nbsp;searches were performed</dd>
      <dt class="c-subfooter-1__stats-term">Record Count</dt>
      <dd class="c-subfooter-1__stats-value">
        <%= number_with_delimiter(@site_stat[:records]) %> &nbsp;Records</dd>
      <dt class="c-subfooter-1__stats-term">In the past 30 days volunteers added</dt>
      <dd class="c-subfooter-1__stats-value">
        <%= number_with_delimiter(@site_stat[:added]) %> &nbsp;Records</dd>
    </dl>
  <% else %>
    <p class="c-subfooter-1__stats-term">Statistics temporarily unavailable</p>
  <% end %>
  <% when 'freebmd' %>
  <h2 class="c-subfooter-1__stats-heading gamma">Statistics</h2>
  <dl class="c-subfooter-1__stats-list">
    <dt class="c-subfooter-1__stats-term">Active Volunteers</dt>
    <dd class="c-subfooter-1__stats-value">12,412 all-time</dd>
    <dd class="c-subfooter-1__stats-value">1,994 last year (estimate)</dd>
    <dt class="c-subfooter-1__stats-term">4.7 milliion searches per month</dt>
    <dt class="c-subfooter-1__stats-term">Record Count</dt>
    <dd class="c-subfooter-1__stats-value">More than 118.8 million Births</dd>
    <dd class="c-subfooter-1__stats-value">More than 86.6 million Marriages</dd>
    <dd class="c-subfooter-1__stats-value">More than 77.8 million Deaths</dd>
    <dd class="c-subfooter-1__stats-value"><b>More than 283.3 million Records</b></dd>
  </dl>
<% end%>
</div>
