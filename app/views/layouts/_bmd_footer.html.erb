            <li> <%= link_to "Volunteer", "#" %></li>
            <li> <%= link_to "Help with Transcribing", "#" %></li>
            <li> <%= link_to "Stats and database info", "#" %></li>
          </ul>
        </div>
        <div class="grid__item  one-quarter  palm-one-whole">
          <ul class="nav  nav--stacked   lap-and-up-flush--bottom">
            <li> <%= link_to "Donate", "#" %></li>
            <li> <%= link_to "News", "#" %></li>
            <li> <%= link_to "Stats and database info", "#" %></li>
          </ul>
        </div>
        <div class="grid__item  one-quarter  palm-one-whole">
        <ul class="nav  nav--stacked   lap-and-up-flush--bottom">
          <li> Follow us:</li>
          <li>
            <i class="fa fa-rss-square fa-2x"></i>
            <i class="fa fa-facebook-square fa-2x"></i>
            <i class="fa fa-twitter-square fa-2x"></i>
          </li>
          <li>
            <i class="fa fa-instagram fa-2x"></i>
            <i class="fa fa-pinterest-square fa-2x" aria-hidden="true"></i>
            <i class="fa fa-github-square fa-2x" aria-hidden="true"></i>
          </li>
        </ul>
        </div>
      </div>
    </div>
  </div>
  <div class="island  island--grey  flush--bottom">
    <div class="container">
      <div class='copyright_banner'>

        <div class='copyright_text'>
          <p class="micro  text--grey">
