<% breadcrumb :freecen2_civil_parishes_index_for_piece,  @freecen2_piece.id, @chapman_code, @year %>
<h2 style="text-align: center">FreeCen2 Civil Parishes for <%= @freecen2_piece.name%> (<%= @freecen2_piece.number%>) of District: <%= @freecen2_piece.district_name%> in <%=ChapmanCode.name_from_code(@chapman_code)%> (<%=@chapman_code%>) for <%= @freecen2_piece.year%></h2>
<%= render 'flash_notice' %>
<div class="scrollable ">
  <table class="table--bordered table--data table--striped " >
    <thead >
      <tr>
        <th class='sticky-header t5'>Year</th>
        <th class='sticky-header t5'>Civil Parish</th>
        <th class='sticky-header t15'>District</th>
        <th class='sticky-header t10'>Piece name</th>
        <th class='sticky-header t15'>Piece number</th>
        <% if @scotland %>
          <th class='sticky-header t15'>Parish number</th>
        <% end%>
        <th colspan = "2" class='sticky-header t10'>Actions</th>
      </tr>
    </thead>
    <tbody >
      <% @freecen2_civil_parishes.each do |freecen2_civil_parish| %>
        <tr id="<%=freecen2_civil_parish.id%>">
          <td ><%= freecen2_civil_parish.year %></td>
          <td ><%= freecen2_civil_parish.name %></td>
          <td ><%= @freecen2_piece.district_name%></td>
          <td ><%= @freecen2_piece.name %></td>
          <td ><%= @freecen2_piece.number %></td>
          <% if @scotland %>
            <td ><%= freecen2_civil_parish.number %></td>
          <% end%>
          <td ><%= link_to 'Show',freecen2_civil_parish_path(freecen2_civil_parish, type: @type), :class => "btn   btn--small"%>
            <% if %w[data_manager system_administrator].include?(session[:role])%>
              <td ><%= link_to 'Edit', edit_freecen2_civil_parish_path(freecen2_civil_parish, type: @type), data: { confirm: 'Are you sure?' }, :class => "btn   btn--small", title: 'Editing is restricted to, coordinators, data managers and system administrators'%>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>