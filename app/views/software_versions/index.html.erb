<% breadcrumb :software_updates%>
<h2 class=" text--center">Listing of Software Versions for <%=@application%> on <%=@server%></h2>
<%= render 'flash_notice' %>
<div>
  <table class="table--bordered  table--striped  table--data">
    <tr>
      <th class="t10" >Server</th>
      <th class="t10" >Type</th>
      <th class="t10" >Version</th>
      <th class="t15" >Search Record Version</th>
      <th class="t15">Date of Update</th>
      <th class="t15">Commitments</th>
      <th class="t15" colspan=2 >Actions</th>
    </tr>
    <% @softwares.each do |software| %>
      <tr>
        <td><%= software.server %></td>
        <td><%= software.type %></td>
        <td><%= software.version %></td>
        <td><%= software.last_search_record_version %></td>
        <td><%= software.date_of_update %></td>
        <td><%= link_to 'Commitments', commitments_software_versions_path(software) if software.type != 'Control'%></td>
        <td><%= link_to 'Edit', edit_software_version_path(software) %></td>
        <td><%= link_to ' Destroy', software_version_path(software), data: { confirm: 'Are you absolutely sure?' }, method: :delete  %></td>
      </tr>
    <% end %>
  </table>
</div>