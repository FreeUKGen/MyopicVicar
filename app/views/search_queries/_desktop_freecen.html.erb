<% print_friendly = (defined?(@printable_format) && @printable_format) ? true : false %>

<section class="island  " >
  <div class="table-wrapper">
    <div class="grid">
        <table class="table--bordered grid__item one-whole" >
        <colgroup >
        <col class="t20">
        <col class="t10">
        <col class="t10">
        <col class="t15">
        <col class="t35">
        <% unless print_friendly %>
          <col class="t10">
        <% end %>
        </colgroup>
        <thead  >
          <th>
            <%= link_to('Individual', reorder_search_query_path(@search_query, :order_field => SearchQuery::SearchOrder::NAME)) %><br>
            <% unless print_friendly %>
              <a href="#" class="bottom_tooltip"><%= image_tag 'info.png', alt: 'Information', height: '16', onclick: 'return false;' %><span>Name of main person in the record. Click heading to sort by the name. </span></a>
            <% end %>
          </th>
          <th>
            <%= link_to('Birth Year', reorder_search_query_path(@search_query, :order_field => SearchQuery::SearchOrder::DATE)) %><br>
            <% unless print_friendly %>
              <a href="#" class="bottom_tooltip"><%= image_tag 'info.png', alt: 'Information', height: '16', onclick: 'return false;' %><span>Approximate birth year. Click heading to sort by the date</span></a>
            <% end %>
          </th>
          <th>
            <%= link_to('Census Year', reorder_search_query_path(@search_query, :order_field => SearchQuery::SearchOrder::TYPE)) %><br>
            <% unless print_friendly %>
              <a href="#" class="bottom_tooltip"><%= image_tag 'info.png', alt: 'Information', height: '16', onclick: 'return false;' %><span>Census Year.  Click heading to sort by the cencus year</span></a>
            <% end %>
          </th>
          <th>
            <%= link_to('County', reorder_search_query_path(@search_query, :order_field => SearchQuery::SearchOrder::COUNTY)) %><br>
            <% unless print_friendly %>
              <a href="#" class="bottom_tooltip"><%= image_tag 'info.png', alt: 'Information', height: '16', onclick: 'return false;' %><span>County in which event was recorded. Click heading to sort by the county</span></a>
            <% end %>
          </th>
          <th>
            <%= link_to('Census Place', reorder_search_query_path(@search_query, :order_field => SearchQuery::SearchOrder::LOCATION)) %><br>
            <% unless print_friendly %>
              <a href="#" class="bottom_tooltip"><%= image_tag 'info.png', alt: 'Information', height: '16', onclick: 'return false;' %><span>Place in which event was recorded. Click heading to sort by the location</span></a>
            <% end %>
          </th>
          <% unless print_friendly %>
            <th>Detail<br>
              <a href="#" class="left_tooltip"><%= image_tag 'info.png', alt: 'Information', height: '16', onclick: 'return false;' %><span>Click on the detail link in the record below to get transcription details</span></a>
            </th>
          <% end %>
        </thead >
        <% @search_results.each do |search_record| %>
        <tbody >
          <tr id="<%=search_record.id%>">
            <td>
              <% search_record.transcript_names.uniq.each_with_index do |name, i| %>
                  <% if i > 0 %>
                  <br/>
                  <% end%>
                <%= "#{name['first_name']} #{name['last_name']} " %>
              <% end%>
            </td>
            
            <td>
              <%= format_freecen_birth_year(search_record.transcript_dates.first, search_record.record_type) %>
            </td>
            <td>
              <%= search_record.record_type %>
            </td>
            <td>
	      <%# search_record.place.county %>
              <%= ChapmanCode::name_from_code(search_record.chapman_code) %>
            </td>
			<td>
	        	<%= format_location(search_record) %>
	         </td>
          <% unless print_friendly %>
	          <td>
              <%= link_to("Detail", search_record_path(search_record, :search_id => @search_query)) %>
              <% if session[:viewed] %>
                <i>
                <%= "(viewed)" if session[:viewed].include?("#{search_record.id}") %>
                </i>
              <% end %>
            </td>
          <% end %>
          </tr>
        </tbody>
        <% end %>
      </table>
    </div>
   
  </div>
</section>
