<% title "Search Query" %>
<%= render "flash_notice" %>
<% unless @page.nil?%>
  <div style="text-align: center">
    <%= @page%>
  </div>
<% end%>
<% case appname_downcase %>
<% when 'freereg' %>
  <h1 class="title text--center">Search our Parish Registers</h1>
  <%= render 'form_freereg' %>
<% when 'freecen' %>
  <h1 class="title text--center">Search our Census Records</h1>
  <% if Rails.application.config.freecen2_place_cache %>
    <%= render 'form_freecen_freecen2' %>
  <% else%>
    <%= render 'form_freecen' %>
  <% end%>
<% when 'freebmd' %>
  <h1 class="title text--center bmd_search_header" id="search_header"><span class="bmd_long_header">Search our Birth/Marriage/Death Records</span><span class="bmd_short_header">Search our BMD records</span></h1>
<% end %>
<%= render app_specific_partial('form') %>
<%if appname_downcase="freebmd" && device_type == :mobile%>
	<script>
		$('#search_header').addClass('push--top');
	</script>
  <style>
    .title {
      font-size: 2.5rem;
    }
  </style>
<% end %>