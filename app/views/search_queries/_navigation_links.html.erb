<% print_friendly = (defined?(@printable_format) && @printable_format) ? true : false %>
<% unless print_friendly %>
 	<div class="grid">
	  <div class="grid__item one-whole lap-one-whole palm-one-whole push-half--bottom ">
		<%= link_to "View Search Criteria", '#', style: "text-decoration: underline; text-decoration-thickness: 2px; text-decoration-color: teal; " , id: "view_search_criteria"%>
	    <%= link_to "Revise Search", new_search_query_path(:search_id => @search_query), style: "text-decoration: underline; text-decoration-thickness: 2px; text-decoration-color: teal; " %>
	    <%= link_to "New Search", new_search_query_path, style: "text-decoration: underline; text-decoration-thickness: 2px; text-decoration-color: teal; " %>
	    <% if @results_per_page.to_i <= 50 %>
		  <%= link_to( '<i class="fas fa-print"></i>&nbsp;&nbsp; Print'.html_safe, "#", style: "text-decoration: underline; text-decoration-thickness: 2px; text-decoration-color: teal; ", :onclick => 'window.print();return false;') %>
		<% end %>
		<%= link_to '<i class="fas fa-download"></i>&nbsp;&nbsp; Download as CSV'.html_safe, search_results_download_as_csv_path(@search_query, {page: @page, results_per_page: @results_per_page}), style: "text-decoration: underline; text-decoration-thickness: 2px; text-decoration-color: teal; " %>
		<%= link_to '<i class="fas fa-download"></i>&nbsp;&nbsp; Download as GEDCOM'.html_safe, search_results_download_as_gedcom_path(@search_query, {page: @page, results_per_page: @results_per_page}), style: "text-decoration: underline; text-decoration-thickness: 2px; text-decoration-color: teal; " %>
		<% if cookies.signed[:userid].present? %>
	      <%= link_to "Save this search", save_search_path(@search_query.id), style: "text-decoration: underline; text-decoration-thickness: 2px; text-decoration-color: teal; ", method: "post" %>
	      <% if @save_search_id.present? %>
	        <%= link_to "Compare", compare_search_path(@search_query.id, saved_search_id: @save_search_id, compare_search: true), style: "text-decoration: underline; text-decoration-thickness: 2px; text-decoration-color: teal; " %>
	      <% end %>
	    <% end %>
  	  </div>
	</div>
<% end %>