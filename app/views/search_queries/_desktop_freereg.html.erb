<% print_friendly = (defined?(@printable_format) && @printable_format) ? true : false %>
<table class="table--bordered table--striped table--data ">
  <thead>
    <tr>
      <% unless print_friendly %>
        <th class='sticky-header'>Details</th>
      <% end %>

      <th class='sticky-header'>
        <% unless print_friendly %><%= button_to 'Person or persons',
          reorder_search_query_path, params: { id: @search_query, order_field: SearchQuery::SearchOrder::NAME},
          method: :get, class: "btn" %>
        <% else %> Person or persons<% end %>
      </th>

      <th class='sticky-header'>
        <% unless print_friendly %><%= button_to 'Record type',
          reorder_search_query_path, params: { id: @search_query, order_field: SearchQuery::SearchOrder::TYPE},
          method: :get, class: "btn" %>
        <% else %> Record type<% end %>
      </th>

      <th class='sticky-header'>
        <% unless print_friendly %><%= button_to 'Event date',
          reorder_search_query_path, params: { id: @search_query, order_field: SearchQuery::SearchOrder::DATE},
          method: :get, class: "btn" %>
        <% else %> Event date<% end %>
      </th>

      <th class='sticky-header'>
        <% unless print_friendly %><%= button_to 'County',
    reorder_search_query_path, params: { id: @search_query, order_field: SearchQuery::SearchOrder::COUNTY},
    method: :get, class: "btn" %>
        <% else %> County<% end %>
      </th>

      <th class='sticky-header'>
        <% unless print_friendly %><%= button_to "Place : Church : Register type",
          reorder_search_query_path, params: { id: @search_query, order_field: SearchQuery::SearchOrder::LOCATION},
          method: :get, class: "btn" %>
        <% else %> Place : Church : Register type<% end %>
      </th>

    </tr>
  </thead>
  <tbody>
    <% n = 0 %>
    <% search_results.each do |search_record| %>
      <% n = n + 1 %>
      <tr id="<%= search_record.id %>">
        <%= render partial: 'display_freereg_search_record_desktop', :locals => {:search_record => search_record, :print_friendly => print_friendly, :n => n} %>
      </tr>
    <% end %>
    <% if ucf_results && ucf_results.length > 0 %>
      <tr>
        <td colspan="6"> Additional possible matches with records containing Uncertain Character Formatting </td>
      </tr>
      <% ucf_results.each do |search_record| %>
        <% n = n + 1 %>
        <tr id="<%= search_record.id %>">
          <%= render partial: 'display_freereg_search_record_desktop', :locals => {:search_record => search_record, :print_friendly => print_friendly, :n => n} %>
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
