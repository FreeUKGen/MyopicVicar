<% print_friendly = (defined?(@printable_format) && @printable_format) ? true : false %>
<div class='grid'>
  <div class='grid__item one-whole lap-one-half palm-one-whole push-half--bottom'>
    <div class='result_text'>
      FreeBMD tries to ensure the results are an accurate transcription of the GRO Index but errors exist in the index and our transcription of it. You are advised to take this into account in your use of the information found and we have some help on doing that.
    </div>
  </div>
</div>
<div class='grid'>
  <div class="grid__item">
    <%= link_to "Download", new_search_query_path(:search_id => @search_query), :class => "btn btn--small bordered push-half--right" %>
    <%= link_to "Save Search", new_search_query_path, :class => "btn   btn--small bordered push-half--right" %>
    <%= link_to "Printable Format", new_search_query_path(:search_id => @search_query), :class => "btn   btn--small bordered push-half--right" %>
  </div>
</div>
</div>
<section class="island" >
  <h1 class="accessibility">Search Results</h1>
  <div class="table-wrapper" id="search-result">
    <table class="search_results_table" border='0' >
      <caption class="gamma">
      </caption>
      <thead>
        <tr>
          <% unless print_friendly %>
            <th>Detail</th>
          <% end %>
          <th>
            Surname
          </th>
          <th>
            Firstname
          </th>
          <th>
            Date
          </th>
          <th>
            Record Type
          </th>
          <th>
            District
          </th>
          <th>
            M/S/A/D
          </th>
        </tr>
      </thead>
      <tbody>
        <% n = 0 %>
        <% search_results.each do |search_record| %>
          <% n = n +1%>
          <% record_type = BmdRecordType.where(RecordTypeID: search_record[:RecordTypeID]).first.RecordType%>
          <tr id="<%=search_record[:_id]%>" class="<%= record_type.downcase %>">
            <% unless print_friendly %>
              <td>
                <i class="fa fa-arrow-right view_arrow"></i>
                <%= link_to("View #{n}",friendly_bmd_record_details_path(@search_query.id,search_record.id, search_record.friendly_url), :rel => "nofollow", :title => "" )%>
                <i><%= seen(@search_query,search_record) %></i>
              </td>
            <% end %>
            <td>
              <%= "#{search_record[:Surname]} " %>
            </td>
            <td>
              <%= "#{search_record[:GivenName]}" %>
            </td>
            <td>
              <%= "#{(search_record[:QuarterNumber]-1)%4 + 1} #{(search_record[:QuarterNumber]-1)/4 + 1837}"%>
            </td>
            <td>
              <%= "#{record_type}" %>
            </td>
            <td>
              <%= "#{search_record[:District]}" %>
            </td>
            <td>
              <%= "#{search_record[:AssociateName]}" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </section>