<% print_friendly = (defined?(@printable_format) && @printable_format) ? true : false %>
    <h1 class="accessibility">Search Results</h1>
    <% if print_friendly %>
  <style type="text/css">
    @media print {
        .accessibility { display:none; }
    }
  </style>
      <div style="border: 1px solid black; margin-bottom: 10px;">
        <p class='accessibility'>You can print these results directly, or download them to PDF using your right-click or browser menu.</p>
      </div>
    <% end %>
 <%# raise @search_query.bmd_record_type.inspect %>
    <% included_record_types = @search_query.bmd_record_type %>
      <table class="table--bordered table--data">
        <% unless print_friendly %>
          <caption class='accessibility'>Column 1 has link to details of record; Column 2 can be sorted on First Name; Column 3 can be sorted by event.</caption>
        <% end %>
        <thead>
          <tr>
            <th><% unless print_friendly %>
              <%= link_to('Forename', reorder_search_query_path(@search_query, :order_field => SearchQuery::SearchOrder::FIRSTNAME)) %>
                <%= link_to('Surname', reorder_search_query_path(@search_query, :order_field => SearchQuery::SearchOrder::SURNAME)) %>
            <% else %> Name <% end %></th>
            <th>Event Type</th>
            <th><% unless print_friendly %>
              <%= link_to('Reg. Date', reorder_search_query_path(@search_query, :order_field => SearchQuery::SearchOrder::BMD_DATE)) %>
              <% else %>
            Reg. Date <% end %></th>
            <th><% unless print_friendly %>
                <%= link_to('Reg. District', reorder_search_query_path(@search_query, :order_field => SearchQuery::SearchOrder::DISTRICT)) %>
                <% else %>Reg. District <% end %></th>
            <% if included_record_types[0] == "0" or included_record_types.include? "1" %>
              <th>Mother's Maiden Name</th>
            <% end %>
            <% if included_record_types[0] == "0" or included_record_types.include? "3" %>
              <th>Spouse's Surname</th>
            <% end %>
            <% if included_record_types[0] == "0" or included_record_types.include? "2" %>
              <th>Age at Death/Date of Birth</th>
            <% end %>
          </tr>
        </thead>
        <tbody>
          <% n = 0 %>
          <% search_results.each do |search_record| %>
            <% n = n +1 %>
            <% record_type = RecordType::display_name(["#{search_record[:RecordTypeID]}"])%>
            <tr id="<%=search_record[:RecordNumber]%>" class="<%= record_type.downcase %>_hover" >
              <%# unless print_friendly %>
                <td>
                  <center>
                    <%= link_to("#{search_record[:GivenName]} #{search_record[:Surname]}".html_safe,friendly_bmd_record_details_path(@search_query.id,search_record.id, search_record.friendly_url, search_entry: search_record.RecordNumber), :rel => "nofollow", :title => "", class: "btn  btn--small")%>
                    <i><%= seen(@search_query,search_record) %></i>
                  </center>
                </td>
              <%# end %>
              <td <% if print_friendly %> valign="top" <% end %> >
                <center><%= "#{record_type}" %></center>
              </td>
              <td class="table--data">
                <%= format_quarter_year(search_record.QuarterNumber) %>
              </td>
              <td class="table--data">
                    <% if print_friendly %>
                      <%= search_record[:District] %>
                      <span class="ttip__text"> <%=" (Volume #{search_record[:Volume]} Page #{search_record[:Page]})"%></span>
                    <% else %>
                      <% district = District.where(DistrictNumber: search_record[:DistrictNumber]).first %>
                      <% if district.present? %>
                        <%= link_to "#{search_record[:District]}", district_friendly_url_path(district.district_friendly_url, id: district.DistrictNumber, search_id: @search_query.id) %>
                     <% else %>
                       <%= search_record[:District] %>
                     <% end %>
                      Volume <%= search_record[:Volume] %> Page <%= search_record[:Page] %>
                    <% end %>
              </td>
              <% if included_record_types[0] == "0" or included_record_types.include? "1" %>
              <td class="table--data">
                <%= search_record[:AssociateName] if record_type == "BIRTHS" %>
              </td>
              <% end %>
              <% if included_record_types[0] == "0" or included_record_types.include? "3" %>
              <td class="table--data">
                <%= search_record[:AssociateName] if record_type == "MARRIAGES" %>
              </td>
              <% end %>
              <% if included_record_types[0] == "0" or included_record_types.include? "2" %>
              <td class="table--data">
                <%= search_record[:AgeAtDeath] %>
              </td>
              <% end %>
            </tr>
          <% end %>
        </tbody>
      </table>
    <!--/div-->
    <% unless print_friendly %>
      <div class='text--center inline-block'>
        <%= paginate @paginatable_array if @paginatable_array.present? %>
      </div>
    <% end %>


