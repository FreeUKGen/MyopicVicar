<h1>Search results</h1>

<% if @search_results.size == 0 %>
    No results found!
<% else %>

    <table>			
	<thead>
	    <tr>
		<th>Primary Name</th>
		<th>Family Members</th>
		<th>Type</th>
		<th>Date</th>
		<th>County</th>
		<th></th>
	    </tr>
	</thead>
	<% @search_results.each do |search_record| %>
	    <tbody>
		<tr>
		    <td>
			<% search_record.primary_names.uniq.each_with_index do |name, i| %>
				<% if i > 0 %>
					<br/>
				<% end%>
				<%= "#{name.first_name} #{name.last_name}" %>
			<% end%>
		    </td>
		    <td>
			<% (search_record.inclusive_names - search_record.primary_names).each_with_index do |name, i| %>
				<% if i > 0 %>
					<br/>
				<% end%>
				<%= "#{name.first_name} #{name.last_name}" %>
			<% end%>
		    </td>
		    <td>
			<%= search_record.record_type %>
		    </td>
		    <td>
			<%= search_record.date %>
		    </td>
		    <td>
			<%= search_record.chapman_code %>
		    </td>
		    <td>
			<%= link_to("Details", search_record_path(search_record, :search_id => @search_query)) %>
			<% if session[:visited] %>
			    <%= "visited" if session[:visited].include?("#{search_record.id}") %>
			<% end %>
		    </td>
		</tr>	
	    </tbody>
	<% end %>
    </table>
<% end %>

