<h1>Search results</h1>

<% if @search_results.size == 0 %>
    No results found!
<% else %>

    <table>			
	<thead>
	    <tr>
		<th>Forename</th>
		<th>Surname</th>
		<th>Type</th>
		<th>Date</th>
		<th>County</th>
		<th></th>
	    </tr>
	</thead>
	<% @search_results.each do |search_record| %>
	    <tbody>
		<tr>
		    <td>
			<%= search_record.first_name %>
		    </td>
		    <td>
			<%= search_record.last_name %>
		    </td>
		    <td>
			<%= search_record.record_type %>
		    </td>
		    <td>
			<%= search_record.date %>
		    </td>
		    <td>
			<%= search_record.chapman_code %>
		    </td>
		    <td>
			<%= link_to("Details", search_record_path(search_record)) %>
		    </td>
		</tr>	
	    </tbody>
	<% end %>
    </table>
<% end %>

