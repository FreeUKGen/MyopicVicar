<%= semantic_form_for @search_query do |f| %>
  <%= f.inputs do %>
    <%= f.input :first_name, :input_html => {:length => 10, :size => 20 } %>
    <%= f.input :last_name, :input_html => {:size => 20 } %>
    <%= f.input :fuzzy, :as => :boolean %>
  <% end %>
  <%= f.inputs do %>
    <%= f.input :role,
				{ :as => :select,
				  :include_blank => true,
				  :collection => SearchQuery::ROLES } %>
    <%= f.input :record_type,
				{ :as => :select,
				  :include_blank => true,
				  :collection => SearchQuery::RECORD_TYPES } %>
    <%= f.input :chapman_code, 
				{ :as => :select, 
				  :include_blank => true,
         		  :collection => ChapmanCode::select_hash_with_parenthetical_codes } %>
    <%= f.input :inclusive, :as => :boolean %>
  <% end %>

  <%= f.actions do %>
    <%= f.action :submit, :as => :input %>
  <% end %>
<% end %>
