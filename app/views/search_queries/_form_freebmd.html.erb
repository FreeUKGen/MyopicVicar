                    $('#search_query_min_age_at_death').val('');
                    $('#search_query_max_age_at_death').val('');
                    $('#search_query_age_at_death').val('');
                    $('#search_query_min_dob_at_death').val('');
                    $('#search_query_max_dob_at_death').val('');
