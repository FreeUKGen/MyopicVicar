                $('#search_query_min_age_at_death').hide();
                $('#search_query_max_age_at_death').hide();
                $('#search_query_dob_at_death').hide();
                $('#search_query_min_dob_at_death').hide();
                $('#search_query_max_dob_at_death').hide();
