<% if params[:assignment_list_type] == 'all' || (!params[:assignment].nil? && params[:assignment][:assignment_list_type] == 'all') %>
	<% breadcrumb :syndicate_all_assignments, session[:syndicate] %>
<% else %>
	<% breadcrumb :syndicate_image_group_assignments, @user, @county, @register, @source, @group %>
<% end %>

<% title "Assignment - list by userid" %>
<%= render partial: 'header' %>
<%= render partial: 'flash_notice' %>

<% if @assignment.count == 1 %>
	<%= render 'assignment_list' %>
<% else %>
	<%= render partial: 'assignments_list', :locals=>{:assignment_filter_list=>''} %>
<% end %>
