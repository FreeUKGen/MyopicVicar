<td colspan=8>
<table class="table--bordered  table--data">
  <tr><td class="caps">Field</th><td class="caps">Value</th></tr>
  <tr><td>Image Group</td><td><%= @image[:image_group][:group_name] %></td></tr>
  <tr><td>Image Name</td><td><%= @image[:image_name] %></td></tr>
  <tr><td>Image Number</td><td><%= @image[:seq] %></td></tr>
  <tr>
    <td>Status</td><td class="weight--semibold"><%= ImageServerImage::Status::ALL_STATUSES[@image[:status]] %>&nbsp;</td>
  </tr>
  <tr>
    <td>Difficulty</td><td><%= ImageServerImage::Difficulty::ALL_DIFFICULTIES[@image[:difficulty]] if @image[:difficulty].present? %>&nbsp;</td>
  </tr>
  <tr>
    <td>Transcriber</td><td><%= @image[:transcriber].join(' / ') if !@image[:transcriber].blank? %>&nbsp;</td>
	</tr>
  <tr><td>Reviewer</td><td><%= @image[:reviewer].join(' / ') if !@image[:reviewer].blank? %>&nbsp;</td></tr>
  <tr><td>Notes</td><td><%= @image[:notes] %>&nbsp;</td></tr>
  <tr>
    <td>Action</td>
    <td><%= link_to 'VW', view_image_server_image_path(:object=>@image[:_id]), method: :get, :target=>'_blank' %>&nbsp;&nbsp;&nbsp;&nbsp;
      <%= link_to 'DL', download_image_server_image_path(:object=>@image[:_id]), method: :get, :target=>'_blank' %>&nbsp;&nbsp;&nbsp;&nbsp;
      <% if session[:my_own] %>
        <%= link_to 'Send Finish Email to SC', assignment_path(@image[:assignment_id], :status=>@image[:status], :type=>'complete'), data: { confirm: 'Click OK if the assignment has been Completed' }, method: :put, :class => "btn weight--light btn--small" %> 
      <% end %>
    </td>
  </tr>
</table>
</td>