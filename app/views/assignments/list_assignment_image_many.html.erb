<% if session[:my_own] %>
  <% breadcrumb :my_own_assignments, @user %>
<% else %>
  <% breadcrumb :syndicate_image_group_assignments, @user, @county, @register, @source, @group %>
<% end %>

<div style="clear:both;"></div><br>
<% x = @assignment.first %>
<p style="text-align: center"><b><%= x[:fields][:groups][:group_name] %></b> assigned on <b><%= x[:fields][:assign_date].to_date.strftime("%Y-%m-%d") %> <%= ImageServerImage::Status::ALL_STATUSES[x[:fields][:images][:status]] %></b> for <b><%= x[:fields][:userids][:userid] %></b>
<%= render partial: 'flash_notice' %>

<% unless session[:userid].nil?%>
  <div style="text-align: center">  
  <% if session[:my_own] %>
    <%= link_to 'Send Finish Email to SC', assignment_path(x[:fields][:_id], :status=>x[:fields][:images][:status], :type=>'complete'), data: { confirm: 'Click OK if the assignment has been Completed' }, method: :put, :class => "btn weight--light btn--small" %> 
  <% end %>
  </div>
  <div style="clear:both;"> </div><br>
<% end %>

<% title "Assignment - list by userid" %>
<%= render partial: 'flash_notice' %>

<%= render 'assignment_list' %>
