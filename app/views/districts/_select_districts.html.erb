<div class="grid__item three-fifths lap-two-thirds palm-one-whole" id="districts">
  <h3>Select one or more Districts</h3>
  <p>Select a District from this list, or type in part of a District name to find all Districts whose name matches your search string.</p>
  <div class="one-third lap-fourths lap-one-half palm-one-whole float--right">
    <form id="freebmd_district_match" action="/districts/districts_list" accept-charset="UTF-8" method="get">
      <ol class="grid">
      <li>
        <input class="text--left push--bottom" id="params" name="params"/>
      </li>
      <li class="action button_action one-whole push--bottom text--center" id="freebmd_district_match_submit_action"><button name="button" type="submit" class="btn btn--small">Find matching Districts</button></li>
      </ol>
    </form>
  </div>
  <div class="one-half lap-fourths lap-one-half palm-one-whole">
  <form id="freebmd_district_select" action="/districts/select_district" accept-charset="UTF-8" method="get">
    <ol class="grid">
      <li>
        <% options = District.districts_as_hash.sort %>
        <select class="one-whole push--bottom text--center" class="select" id="id" name="id">
          <%= options_for_select(options) %>
        </select>
      </li>
      <li class="action button_action one-whole push--bottom text--center" id="freebmd_districts_submit_action"><button name="button" type="submit" class="btn btn--small">Select District</button></li>
    </ol>
  </form>
  </div>
  <hr/>
</div>
