<% print_friendly = (defined?(@printable_format) && @printable_format) ? true : false %>
<h1 class="accessibility">Districts</h1>
<div class="grid">
  <div class="grid__item seven-tenths lap-seven-tenths palm-one-whole ">
    <table class="table--bordered table--data scrollable">
      <caption class='accessibility'>List of Districts</caption>
      <thead>
        <tr>
          <th>District Detail</th>
          <th>District</th>
          <th>Total Transcriptions</th>
        </tr>
      </thead>
      <tbody>
        <% n = 0 %>
        <% @districts.each do |district| %>
          <% n = n +1 %>
          <tr data-num="<%= district.DistrictNumber %>" data-name= "<%= district.DistrictName %>">
            <td id="show_district_detail">
              <%= link_to("View #{n}", district_friendly_url_path(district.district_friendly_url), id: "more_info", remote: false)%>
            </td>
            <td>
              <dl>
                <dt>
                  <%= district.DistrictName %>
                </dt>
                <dt>
                  Existing from <%= district.YearStart%> <%= district.YearEnd <  9999 ? "till #{district.YearEnd}" : "" %>
                </dt>
              </dl>
            </td>
            <td class="table--data">
              <%= district.UsageCount %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
<!--/div-->
 <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.4.1/jquery.min.js"></script>
<script>
  $( "#more_info" ).click(function () {
    var id = $(this).closest("tr").data("num")
    var name = $(this).closest("tr").data("name")
    $.ajax({
      url: '/districts/${id}',
      type: "GET",
      data: {
        dabbu: id
      }
    });
  });
</script>



