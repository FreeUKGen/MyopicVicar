<% unless defined?(@printable_format) && @printable_format %>
  <%= render 'nav_button_header' %>
  <div id="citation-dropdown" class="citation-dropdown no-javascript">
    <div class="text--center">
      <p>Please choose the format for one of these citation types. It will appear in a new tab and may be copied:</p>
      <%= link_to "WikiTree", show_citation_record_path(@search_record[:_id], :citation_type => "wikitree"), :class => "btn  btn--small " , :target => "_blank" %>
      <%= link_to "Family Tree Maker", show_citation_record_path(@search_record[:_id], :citation_type => "familytreemaker"), :class => "btn  btn--small " , :target => "_blank" %>
      <%= link_to "Legacy Family Tree", show_citation_record_path(@search_record[:_id], :citation_type => "legacyfamilytree"), :class => "btn  btn--small " , :target => "_blank" %>
      <%= link_to "MLA", show_citation_record_path(@search_record[:_id], :citation_type => "mla"), :class => "btn  btn--small " , :target => "_blank" %>
      <%= link_to "Chicago", show_citation_record_path(@search_record[:_id], :citation_type => "chicago"), :class => "btn  btn--small " , :target => "_blank" %>
      <%= link_to "Evidence Explained", show_citation_record_path(@search_record[:_id], :citation_type => "evidenceexplained"), :class => "btn  btn--small " , :target => "_blank" %>
      <%= link_to "Wikipedia", show_citation_record_path(@search_record[:_id], :citation_type => "wikipedia"), :class => "btn  btn--small " , :target => "_blank" %>
    </div>
  </div>
  <div id="citation-dropdown" class="citation-dropdown javascript">
    <div class="text--center">
      <p>Please choose the format for one of these citation types. It will appear below and may be copied:</p>
      <%= link_to "WikiTree", friendly_search_record_path(@search_record[:_id], :citation_type => "wikitree"), :class => "btn  btn--small " %>
      <%= link_to "Family Tree Maker", friendly_search_record_path(@search_record[:_id], :citation_type => "familytreemaker"), :class => "btn  btn--small " %>
      <%= link_to "Legacy Family Tree", friendly_search_record_path(@search_record[:_id], :citation_type => "legacyfamilytree"), :class => "btn  btn--small " %>
      <%= link_to "MLA", friendly_search_record_path(@search_record[:_id], :citation_type => "mla"), :class => "btn  btn--small " %>
      <%= link_to "Chicago", friendly_search_record_path(@search_record[:_id], :citation_type => "chicago"), :class => "btn  btn--small " %>
      <%= link_to "Evidence Explained", friendly_search_record_path(@search_record[:_id], :citation_type => "evidenceexplained"), :class => "btn  btn--small " %>
      <%= link_to "Wikipedia", friendly_search_record_path(@search_record[:_id], :citation_type => "wikipedia"), :class => "btn  btn--small " %>
    </div>
    <% if params[:citation_type].present? %>
      <br>
      <span id = "citation_section">
        <%= render params[:citation_type] + '_' + appname.downcase + '_citation'%>
        <div class = "text--center">
          <button class = "btn  btn--small ", onclick = copy("citation_container") style = "cursor: pointer">Copy</button>
          <button class = "btn  btn--small ", onclick = this.parentElement.parentElement.remove() style = "cursor: pointer">Close</button>
        </div>
      </span>
    <% end%>
  </div>
<% end%>