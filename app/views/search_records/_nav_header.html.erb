<% unless defined?(@printable_format) && @printable_format %>
  <p class="text--center">
    <%= link_to "Revise Search", new_search_query_path(:search_id => @search_query), :class => "btn weight--light  btn--small" %>
    <%= link_to "New Search", new_search_query_path, :class => "btn weight--light  btn--small" %>
    <%= link_to "Back to Results", search_query_path(@search_query, :anchor => "#{@search_record[:_id]}"), :class => "btn  weight--light btn--small"%>
    <%= link_to "Previous Result", friendly_search_record_path(@previous_record, @previous_record.friendly_url), :class => "btn  weight--light btn--small" unless @previous_record.nil?%>
    <%= link_to "Next Result", friendly_search_record_path(@next_record, @next_record.friendly_url), :class => "btn  weight--light btn--small" unless @next_record.nil?%>
    <%= link_to "Printable Format", show_print_version_search_record_path(@search_record[:_id]), :class => "btn  weight--light btn--small"%>
    <%= link_to "Export as CSV", show_print_version_search_record_path(@search_record[:_id],format: :csv),  :class => "btn  weight--light btn--small"%>
    <%= link_to "Export as JSON", show_print_version_search_record_path(@search_record[:_id],format: :json),  :class => "btn  weight--light btn--small"%>
    <a href="#" id="citation-toggle" class="btn weight--light  btn--small citation-toggle">Generate Citation</a>
  </p>
    <div id="citation-dropdown" class="citation-dropdown no-javascript">
    <div class="text--center">
      <p>Please choose the format for one of these citation types. It will appear in a new tab and may be copied:</p>
      <%= link_to "WikiTree", show_citation_record_path(@search_record[:_id], :citation_type => "wikitree"), :class => "btn  btn--small weight--light" , :target => "_blank" %>
      <%= link_to "Family Tree Maker", show_citation_record_path(@search_record[:_id], :citation_type => "familytreemaker"), :class => "btn  btn--small weight--light" , :target => "_blank" %>
      <%= link_to "Legacy Family Tree", show_citation_record_path(@search_record[:_id], :citation_type => "legacyfamilytree"), :class => "btn  btn--small weight--light" , :target => "_blank" %>
      <%= link_to "MLA", show_citation_record_path(@search_record[:_id], :citation_type => "mla"), :class => "btn  btn--small weight--light" , :target => "_blank" %>
      <%= link_to "Chicago", show_citation_record_path(@search_record[:_id], :citation_type => "chicago"), :class => "btn  btn--small weight--light" , :target => "_blank" %>
      <%= link_to "Evidence Explained", show_citation_record_path(@search_record[:_id], :citation_type => "evidenceexplained"), :class => "btn  btn--small weight--light" , :target => "_blank" %>
      <%= link_to "Wikipedia", show_citation_record_path(@search_record[:_id], :citation_type => "wikipedia"), :class => "btn  btn--small weight--light" , :target => "_blank" %>
    </div>
  </div>
  <div id="citation-dropdown" class="citation-dropdown javascript">
    <div class="text--center">
      <p>Please choose the format for one of these citation types. It will appear below and may be copied:</p>
      <%= link_to "WikiTree", friendly_search_record_path(@search_record[:_id], :citation_type => "wikitree"), :class => "btn  btn--small weight--light" %>
      <%= link_to "Family Tree Maker", friendly_search_record_path(@search_record[:_id], :citation_type => "familytreemaker"), :class => "btn  btn--small weight--light" %>
      <%= link_to "Legacy Family Tree", friendly_search_record_path(@search_record[:_id], :citation_type => "legacyfamilytree"), :class => "btn  btn--small weight--light" %>
      <%= link_to "MLA", friendly_search_record_path(@search_record[:_id], :citation_type => "mla"), :class => "btn  btn--small weight--light" %>
      <%= link_to "Chicago", friendly_search_record_path(@search_record[:_id], :citation_type => "chicago"), :class => "btn  btn--small weight--light" %>
      <%= link_to "Evidence Explained", friendly_search_record_path(@search_record[:_id], :citation_type => "evidenceexplained"), :class => "btn  btn--small weight--light" %>
      <%= link_to "Wikipedia", friendly_search_record_path(@search_record[:_id], :citation_type => "wikipedia"), :class => "btn  btn--small weight--light" %>
    </div>
    <% if params[:citation_type].present? %>
    <br>
      <span id = "citation_section">
        <%= render params[:citation_type] + '_' + appname.downcase + '_citation'%>
        <div class = "text--center">
          <button onclick = copy("citation_container") style = "cursor: pointer">Copy</button>
          <button onclick = this.parentElement.parentElement.remove() style = "cursor: pointer">Close</button>
        </div>
      </span>
    <% end%>
  </div>
<% end%>