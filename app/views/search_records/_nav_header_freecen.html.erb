<section>
  <% if @search_query.present? %>
    <p class="text--center">
      <%= link_to "New Search", new_search_query_path, :class => "btn  btn--small" %>  <%= link_to "Revise Search", new_search_query_path(:search_id => @search_query), :class => "btn  btn--small" %> <%= link_to "Back to Results", search_query_path(@search_query, :page_number => @page_number, :anchor => "#{@search_record.id}"), :class => "btn  btn--small"%>
      <%= link_to "Previous Result", friendly_search_record_path(@previous_record, @previous_record.friendly_url), :class => "btn  btn--small" unless @previous_record.nil?%>
      <%= link_to "Next Result", friendly_search_record_path(@next_record, @next_record.friendly_url), :class => "btn  btn--small" unless @next_record.nil?%>
      <%= link_to "Previous Dwelling", search_record_path(@search_record, :page_number => @page_number, :dwel => @cen_prev_dwelling), :class => "btn  btn--small" unless @cen_prev_dwelling.nil?%>
      <%= link_to "Next Dwelling", search_record_path(@search_record, :page_number => @page_number, :dwel => @cen_next_dwelling), :class => "btn  btn--small" unless @cen_next_dwelling.nil?%>
      <% if @dwelling_offset && 0 != @dwelling_offset %>
        <%= link_to "Printable Format", show_print_version_search_record_path(@search_record, :page_number => @page_number, :dwel => @dwelling.id), :class => "btn  btn--small"%>
      <% else %>
        <%= link_to "Printable Format", show_print_version_search_record_path(@search_record), :class => "btn  btn--small"%>
      <% end %>
      <!-- If user looks at next/previous dwellings, hide the generate citation -->
      <% if @dwelling_offset && 0 == @dwelling_offset %>
        <a href="#" id="citation-toggle" class="btn btn--small citation-toggle">Generate Citation</a>
        <!-- javascript and no-javascript classes are hidden or shown depending whether the users has JavaScript disabled or not -->
        <div id="citation-dropdown" class="citation-dropdown no-javascript">
          <div class="text--center">
            <p>Please choose the format for one of these citation types. It will appear in a new tab and may be copied:</p>
            <%= link_to "WikiTree", show_citation_record_path(@search_record[:_id], :citation_type => "wikitree"), :class => "btn  btn--small " , :target => "_blank" %>
            <%= link_to "Family Tree Maker", show_citation_record_path(@search_record[:_id], :citation_type => "familytreemaker"), :class => "btn  btn--small " , :target => "_blank" %>
            <%= link_to "Legacy Family Tree", show_citation_record_path(@search_record[:_id], :citation_type => "legacyfamilytree"), :class => "btn  btn--small " , :target => "_blank" %>
            <%= link_to "MLA", show_citation_record_path(@search_record[:_id], :citation_type => "mla"), :class => "btn  btn--small " , :target => "_blank" %>
            <%= link_to "Chicago", show_citation_record_path(@search_record[:_id], :citation_type => "chicago"), :class => "btn  btn--small " , :target => "_blank" %>
            <%= link_to "Evidence Explained", show_citation_record_path(@search_record[:_id], :citation_type => "evidenceexplained"), :class => "btn  btn--small " , :target => "_blank" %>
            <%= link_to "Wikipedia", show_citation_record_path(@search_record[:_id], :citation_type => "wikipedia"), :class => "btn  btn--small " , :target => "_blank" %>
          </div>
        </div>
        <div id="citation-dropdown" class="citation-dropdown javascript">
          <div class="text--center">
            <p>Please choose the format for one of these citation types. It will appear below and may be copied:</p>
            <%= link_to "WikiTree", friendly_search_record_path(@search_record[:_id], :friendly, :citation_type => "wikitree"), :class => "btn  btn--small " %>
            <%= link_to "Family Tree Maker", friendly_search_record_path(@search_record[:_id], :friendly, :citation_type => "familytreemaker"), :class => "btn  btn--small " %>
            <%= link_to "Legacy Family Tree", friendly_search_record_path(@search_record[:_id], :friendly, :citation_type => "legacyfamilytree"), :class => "btn  btn--small " %>
            <%= link_to "MLA", friendly_search_record_path(@search_record[:_id], :friendly, :citation_type => "mla"), :class => "btn  btn--small " %>
            <%= link_to "Chicago", friendly_search_record_path(@search_record[:_id], :friendly, :citation_type => "chicago"), :class => "btn  btn--small " %>
            <%= link_to "Evidence Explained", friendly_search_record_path(@search_record[:_id], :friendly, :citation_type => "evidenceexplained"), :class => "btn  btn--small " %>
            <%= link_to "Wikipedia", friendly_search_record_path(@search_record[:_id], :friendly, :citation_type => "wikipedia"), :class => "btn  btn--small " %>
          </div>
          <!-- If a citation has been generated, display it under the citation-dropdown menu -->
          <% if params[:citation_type].present? %>
            <br>
            <span id = "citation_section">
              <%= render params[:citation_type] + '_' + appname.downcase + '_citation'%>
              <div class = "text--center">
                <button class = "btn  btn--small ", onclick = copy("citation_container") style = "cursor: pointer">Copy</button>
                <button class = "btn  btn--small ", onclick = document.getElementById("citation_section").remove(); style = "cursor: pointer">Close</button>
              </div>
            </span>
          <% end%>
        </div>
      <% end%>
    <% end%>
  </p>
</section>