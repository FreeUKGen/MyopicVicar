<section>
  <p>
      <%=@entry['place']%> : <%=@entry['church_name']%> : <%unless @entry['register_type'].include? "Unspecified"%><%=@entry['register_type']%><% else %>Register of unspecified type<% end %> : "Parish Register" database,
      FreeREG (https://www.freereg.org.uk : viewed <%=@viewed_date%>)
      <%=record_type(@entry).downcase%>
      <%if record_type(@entry).downcase == "baptism"%>
        <%=@entry['person_forename'].titleize%> <%=@entry['father_surname'].titleize%>
        <%=@entry['baptism_date'].titleize%>
      <%elsif record_type(@entry).downcase == "burial"%>
        <%=@entry['burial_person_forename'].titleize%> <%=@entry['burial_person_surname'].titleize%>
        <%=@entry['burial_date'].titleize%>
      <%elsif record_type(@entry).downcase == "marriage"%>
        <%=@entry['groom_forename'].titleize%> <%=@entry['groom_surname'].titleize%> to <%=@entry['bride_forename'].titleize%> <%=@entry['bride_surname'].titleize%>
        <%=@entry['marriage_date'].titleize%>
      <%end%>
  </p>
</section>
