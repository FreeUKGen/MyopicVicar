<div class="desk-three-fifths palm-one-half">
<div class="island  island--light">
  <%= simple_form_for @probate, :html => { :class => "grid"}, method: :patch, local: true  do |f| %>
    <%= f.input :PersonId ,:hint => "Surname, Year, running number (unique identifier)", :label => " Person ID ", :input_html => {:class => "simple_form_bgcolour"} %>
    <div class="input string required probate_Death_LastName field_with_hint"><label class="string required control-label" for="probate_p"><abbr title="required">*</abbr> Published text</label>
      <%= f.text_area :P , :hint => "Full published text", :label => " Full text ", :required => false, :class => "simple_form_bgcolour", :cols => "35", :rows => "6", :options => {:required => false} %>
      <%#= f.input :P , as: :text, :hint => "Full published text", :label => " Full text ", :class => "simple_form_bgcolour", :cols => "35", :rows => "6", :options => {:required => false} %>
    </div>
    <%= f.input :SourceImage , :hint => "Source image", :label => "Source image", :input_html => {:size => "35", :class => "simple_form_bgcolour"} %>
    <%# raise @probate.Death.inspect %>
    <%#= f.input :LastName , :hint => "Last name", :value => @probate[:Death][:LastName], :label => "Surname", as: :string, :input_html => {:class => "simple_form_bgcolour"} %>
    <%= f.fields_for :Death, @death do |death| %>
      <%#= raise death.inspect %>
      <%= death.input :LastName , :hint => "Last name", :label => "Surname", as: :string, :input_html => {:class => "simple_form_bgcolour"} %>
      <%= death.input :GivenName , :hint => "First name", :label => "Forename(s)", :input_html => {:class => "simple_form_bgcolour"} %>
      <%= death.input :Address , :hint => "Address of deceased", :label => "Address", :required => false, :input_html => {:size => "35", :class => "simple_form_bgcolour"} %>
      <%= death.input :Role, :hint => "Role or occupation", :label => "Role", :required => false, :input_html => {:class => "simple_form_bgcolour"} %>
      <%= death.input :Date , :hint => "Date of death", :label => "Date of death", :input_html => {:class => "simple_form_bgcolour"}  %>
    <% end %>
    <%= f.simple_fields_for :Event, @event do |event| %>
      <%= event.input :Type , :hint => "Event type", :label => "Type", :input_html => {:class => "simple_form_bgcolour"} %>
      <%= event.input :Court , :hint => "Probate Court", :label => "Court", :input_html => {:class => "simple_form_bgcolour"} %>
      <%= event.input :Date , :hint => "Date probate granted", :label => "Date granted", :input_html => {:class => "simple_form_bgcolour"} %>
      <%= event.input :Value , :hint => "Value of estate", :label => "Value", :required => false, :input_html => {:class => "simple_form_bgcolour"} %>
    <% end %>
    <%= @executors.each do |executor| %>
      <%= f.simple_fields_for :Executor, executor do |exec| %>
       <%#= raise exec.inspect %>
        <%= exec.input :FullName,  :hint => "Full name", :label => "Name", :required => false, :input_html => {:class => "simple_form_bgcolour"} %>
        <%= exec.input :GivenName, :hint => "First name", :label => "Forename(s)", :required => false, :input_html => {:class => "simple_form_bgcolour"} %>
        <%= exec.input :LastName, :hint => "Last name", :label => "Surname", :required => false, :input_html => {:class => "simple_form_bgcolour"} %>
        <%= exec.input :Role, :hint => "Role or occupation", :label => "Role", :required => false, :input_html => {:class => "simple_form_bgcolour"} %>
      <% end %>
    <% end %>
    <%= f.button :submit, 'Submit',:button_html => {:class => "btn  " }  %>
  <% end %>
</div>
</div>