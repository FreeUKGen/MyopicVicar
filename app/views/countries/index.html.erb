<% breadcrumb :countries%>
<h2 class=" text--center">Listing of all Countries</h2>
<%= render 'flash_notice' %>
<% if @user.person_role == 'system_administrator'%>
  <div  class=" text--center push--bottom">
    <%= link_to 'Add Country', new_country_path,:class => "btn btn--small", method: :get %>
  </div>
<% end %>
<div class="grid">
  <section class="island  ">
    <div class="grid__item one-whole" >
      <table  class="table--bordered   table--data">
        <tr>
          <th style="width:25%">Country</th>
          <th style="width:25">Country Coordinator</th>
          <th style="width:25%">Show</th>
          <th style="width:25%">Edit</th>
        </tr>
        <% @countries.each do |country| %>
          <tr id="<%=country.id%>">
            <td > <%= country.country_code %>  </td>
            <td > <%= country.country_coordinator %>  </td>
            <td><%= link_to 'Show', country_path(country), method: :get, :class => "btn btn--small" %>  </td>
            <% if @user.person_role == 'system_administrator' %>
              <td><%= link_to 'Edit details', edit_country_path(country), method: :get  , :class => "btn btn--small" %></td>
            <% end %>
          </tr>
        <% end %>
      </table>
    </div>
  </section>
</div>