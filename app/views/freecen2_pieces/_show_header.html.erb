<% breadcrumb :show_freecen2_piece,  @freecen2_piece.id, @freecen2_piece.chapman_code %>
<% session[:page] = params[:page]%>
<h1 style="text-align: center">Details of FreeCen2 Piece <%= @freecen2_piece.piece_number%> for <%=@chapman_code%> in <%= @freecen2_piece.year%></h1>
<%= render 'flash_notice' %>
<div style="text-align: center">
  <% if  ['data_manager','county_coordinator','system_administrator'].include?(@user.person_role)%>
    <%= link_to 'Edit Piece Information', edit_freecen2_piece_path(@freecen2_piece.id), method: :get,data: { confirm: 'Are you sure?' }, :class => "btn  btn--small"  %>
    <%= link_to 'Create New Piece', piece_new_freecen2_piece_path(chapman_code: @chapman_code), method: :get, :class => "btn   btn--small" %>      <%= link_to 'Destroy Piece', freecen2_piece_path(@freecen2_piece.id), method: :delete,  data: { confirm: 'Are you sure you want to destroy this Piece.? It will not happen if there are dependants!' }, :class => "btn   btn--small" %>
  <% end%>
</div>
<div style="clear:both;"> </div>