<p style="text-align: center">Showing the fields for <b><%= @place_name %></b> of <b><%= @county %></b><br></p>
<div style="float:left;"> <%= link_to 'Index of Places', places_path( :anchor => "#{@user.id}"), method: :get, :class => "btn  btn--small"%> <%= link_to 'Edit Place Fields', edit_place_path(@place), method: :get,data: { confirm: 'Are you sure?' }, :class => "btn  btn--small" %>
  <% if @user.person_role == 'data_manager' ||   @user.person_role == 'system_admistrator'%>
<%= link_to 'Create New Place', new_place_path, method: :get, :class => "btn  btn--small" %>   <%= link_to 'Change Place Name', rename_place_path(@place), method: :get,data: { confirm: 'Are you sure?' }, :class => "btn  btn--small" %>  <%= link_to 'Relocate Place to another County', relocate_place_path(@place), method: :get ,data: { confirm: 'Are you sure?' }, :class => "btn  btn--small"%> <%= link_to 'Merge Places with same name into this one', merge_place_path(@place), method: :get,data: { confirm: 'Are you sure?' }, :class => "btn  btn--small" %> <%= link_to 'Destroy Place', place_path(@place), method: :delete, data: { confirm: 'Are you sure?' }, :class => "btn  btn--small" %></div>
<% end%>
<div style="clear:both;"> </div><br>
<% if flash[:notice] %>
<div id="notice" style="color:blue"><br>
  <%= flash[:notice] %>  <% flash[:notice] = nil%><br>
</div>
<% end %>
<div class="grid">
  <section class="island ">
    <h4 >The Place has the following Church(es)</h4>
    <div class="grid__item two-thirds ">
      <% @place.churches.order_by(church_name: 1).each do |church| %>
      <%= link_to church.church_name, church_path(church), :class => "btn  btn--small"  %>
      <% end %>
    <table class="table--bordered table--data " >
      <colgroup >
      <col class=t40>
      <col class=t60>
      </colgroup>
      <tr>
        <th class="caps">Field</th>
        <th  class="caps">Value</th>
      </tr>
      <tr>
        <td>Place : </td> <td class="weight--semibold"><%= @place.place_name %>  </td>
      </tr>
      <tr>
        <td>County:</td> <td class="weight--semibold"><%= @place.county %></td>
      </tr>
      <tr>
        <td>Country:</td> <td class="weight--semibold"><%= @place.country %></td>
      </tr>
      <% if @names%>
      <%  @names.each do |name| %>
      <tr>
        <td>Other possible place names :</td><td class="weight--semibold"><%= name %>  </td>
      </tr>
      <% end%>
      <% end%>
      
      <tr>
        <td>Genuki page :</td><td ><%= link_to('Location', @place.genuki_url, :class => "btn  btn--small") unless @place.genuki_url.nil? || @place.genuki_url == "no url" %></td> </tr>
        
        
        <tr>
          <td>Notes about the place :</td><td class="weight--semibold"><%= @place.place_notes %> </td>
        </tr>
        <tr>
          <td>Grid Reference:</td><td class="weight--semibold"> <%= @place.grid_reference %></td>
        </tr>
        <tr>
          <td>Latitude:</td><td class="weight--semibold"> <%= @place.latitude%></td>
        </tr>
        <tr>
          <td>Longitude:</td><td class="weight--semibold"> <%= @place.longitude%></td>
        </tr>
        <tr>
          <td>Source:</td><td class="weight--semibold"> <%= @place.source %></td>
        </tr>
        <tr>
          <td>Original place name:</td><td class="weight--semibold"> <%= @place.original_place_name %></td>
        </tr>
        <tr>
          <td>Original county:</td><td class="weight--semibold"> <%= @place.original_county %></td>
        </tr>
        <tr>
          <td>Original country:</td><td class="weight--semibold"> <%= @place.original_country %></td>
        </tr>
        <tr>
          <td>Original Grid Reference:</td><td class="weight--semibold"> <%= @place.original_grid_reference %></td>
        </tr>
        <tr>
          <td>Original latitude:</td><td class="weight--semibold"> <%= @place.original_latitude %></td>
        </tr>
        <tr>
          <td>Original longitude:</td><td class="weight--semibold"> <%= @place.original_longitude %></td>
        </tr>
        <tr>
          <td>Original source:</td><td class="weight--semibold"> <%= @place.original_source %></td>
        </tr>
        <tr>
          <td>Reason for changes:</td><td class="weight--semibold"> <%= @place.reason_for_change %></td>
        </tr>
        <tr>
          <td>Another reason for changes:</td><td class="weight--semibold"> <%= @place.other_reason_for_change %></td>
        </tr>
        <tr>
          <td>Date place information last amended:</td><td class="weight--semibold"> <%= @place.u_at.strftime("%d %b %Y") %></td>
        </tr>
        <tr>
          <td>Date when record last amended:</td><td class="weight--semibold"> <%= @place.last_amended %></td>
        </tr>
        <% unless @place.error_flag.nil? %>
        <tr style= "color:red">
          <td >Error in place</td><td class="weight--semibold">  <%= @place.error_flag %> </td>
        </tr>
        <%else%>
        <tr style= "color:black">
        </tr>
        <% end%>
        
        <tr>
          <td>Data present for this place:</td><td class="weight--semibold"> <%= @place.data_present %></td>
        </tr>
      </table>
    </div>
  </section>
</div>