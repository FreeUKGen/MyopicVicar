<% if session[:my_own_list] == 'county' %>
	<% if session[:manage_user_origin] == 'manage syndicate' %>
		<% breadcrumb :syndicate_available_groups_by_county_image_server_group, @county, @place, @church, @register, @source, @group %>
	<% else %>
			<% breadcrumb :syndicate_available_groups_by_county_image_server_group, @county, @place, @church, @register, @source, @group %>
	<% end %>	
<% else %>
  <% case session[:ig_allocation] %>
    <% when 'by_syndicate' %>
      <% breadcrumb :sort_by_syndicate_image_server_group, @county, @place, @church, @register, @source, @group %>
    <% when 'by_place' %>
      <% breadcrumb :sort_by_place_image_server_group, @county, @place, @church, @register, @source, @group %>
    <% when 'by_all' %>
      <% breadcrumb :sort_by_all_image_server_group, @county, @place, @church, @register, @source, @group %>
    <% when 'by_unallocate' %>
      <% breadcrumb :sort_by_unallocate_image_server_group, @county, @place, @church, @register, @source, @group %>
    <% else %>
    	<% breadcrumb :county_image_server_group, @county, @place, @church, @register, @source, @group %>
    <% end %>
<% end %>

<div style="clear:both;"></div><br>
<p style="text-align: center"><b>Image Groups</b> for the <b><%= @source.source_name %></b> Source of the <b><%= @register_type %></b> register for <b><%= @church_name %></b> in <b><%= @place_name %></b> of <b><%= @county %></b>

<% title "IS Group - allocation" %>
<% if flash[:notice] %>
  <div id="notice" style="color:blue">
    <%= flash[:notice] %><% flash.clear %>
  </div><br>
<% end %>

<section class="island  island--light">
<div class="grid">

<%= simple_form_for @image_server_group do |s| %>
  <%= s.input :syndicate_code, :as => :select, :collection => @syndicate, :label => 'Select Syndicate', :include_blank => false, :include_hidden => false, :selected => 0, :input_html => {:class => "simple_form_bgcolour simple_form_position", :size => 3} %>
  <%= s.input :custom_field, :as=>:check_boxes, :collection=>@group_name.invert.sort_by{|x| x[0].downcase}.unshift(['select all', '0']), :label=>'Select Image Groups You Want to Allocate to Selected Syndicate', :include_hidden=>false, :label_html=>{:style=>'margin-left:2px'}, :item_label_class=>"collection_check_boxes", :input_html=>{:class=>"simple_form_position", :checked=>false} %>

	<%= s.hidden_field :source_id %>
  <%= s.hidden_field :origin, as: :fake, :value=>'allocate' %>
  <%= s.button :submit, 'Allocate', :onclick => 'return validate_selection()' %>
<% end %>

</div>
</section>

<script type="text/javascript">
  <%= render :partial => 'image_server_group.js' %>
</script>