<div style="text-align: center">  
  <% if ['system_administrator', 'county_coordinator', 'data_manager'].include? @user.person_role %>
    <%= link_to 'Edit Image Group', edit_image_server_group_path(@image_server_group), method: :get, :class => "btn weight--light btn--small" %>
    <%= link_to 'Delete Image Group', image_server_group_path(@image_server_group), data: { confirm: 'Are you sure you want to delete Image Group "'+@image_server_group[:group_name]+'"?'}, method: :delete, :class => "btn weight--light btn--small" %> 
  <% end %>
  <%= link_to 'List Images Under This Group', image_server_image_path(@image_server_group), method: :get, :class => "btn weight--light btn--small" %>
</div>
<div style="clear:both;"> </div><br>

<div class="grid">
  <section class="island ">
  <div class="grid__item ">
    <table class="table--bordered  table--data">
      <colgroup >
        <col class=t40>
        <col class=t60>
      </colgroup>
      <tr>
        <th class="caps">Field</th>
        <th class="caps">Value</th>
      </tr>
      <tr><td>Group Name</td><td class="weight--semibold"><%= @image_server_group[:group_name] %></td></tr>
      <tr><td>Start Date</td><td class="t15"><%= @image_server_group[:start_date] %>&nbsp;</td></tr>
      <tr><td>End Date</td><td class="t15"><%= @image_server_group[:end_date] %>&nbsp;</td></tr>
      <tr><td>Transcriber</td>
        <% if @group_transcriber[@image_server_group.id].blank? %>
          <td class="t15">&nbsp;</td>
        <% else %>
          <td class="t15">
            <% @group_transcriber[@image_server_group.id].each do |transcriber| %>
              <span><%= transcriber %></span><br/>
            <% end %>
          </td>
        <% end %>
      </tr>
      <tr><td>Reviewer</td>
        <% if @group_reviewer[@image_server_group.id].blank? %>
          <td class="t15">&nbsp;</td>
        <% else %>
          <td class="t15">
            <% @group_reviewer[@image_server_group.id].each do |reviewer| %>
              <span><%= reviewer %></span><br/>
            <% end %>
          </td>
        <% end %>
      </tr>
      <tr><td>Difficulty</td>
        <% if @group_difficulty[@image_server_group.id].blank? %>
          <td class="t15">&nbsp;</td>
        <% else %>
          <td class="t15">
            <% @group_difficulty[@image_server_group.id].each do |difficulty| %>
              <span><%= ImageServerGroup::Difficulty::ALL_DIFFICULTIES[difficulty] %></span><br/>
            <% end %>
          </td>
        <% end %>
      </tr>
      <tr><td>Status</td>
        <% if @group_status[@image_server_group.id].blank? %>
          <td class="t10">&nbsp;</td>
        <% else %>
          <td class="t10">
          <% @group_status[@image_server_group.id].each do |status| %>
            <% case ImageServerGroup::Status::ALL_STATUSES[status] %>
              <% when 'ERROR', 'UNALLOCATED' %>
                <span style="color:red"><%= ImageServerGroup::Status::ALL_STATUSES[status] %></span><br/>
              <% when 'TRANSCRIBED' %>
                <span style="color:green"><%= ImageServerGroup::Status::ALL_STATUSES[status] %></span><br/>
              <% else %>
                <span><%= ImageServerGroup::Status::ALL_STATUSES[status] %></span><br/>
            <% end %>
          <% end %>
          </td>
        <% end %>
      </tr>
      <tr><td>Notes</td><td class="t15"><%= @image_server_group[:notes] %>&nbsp;</td></tr>
    </table>
  </div>
  </section>
</div>
 