<table class="table--bordered table--data">
  <tbody>
    <% record_type = RecordType::display_name(record.RecordTypeID)%>
    <tr>
      <th>
        Event Type
      </th>
      <td>
        <%= "#{record_type}" %>
      </td>
    </tr>
    <tr>
      <th>
        Date
      </th>
      <td>
        <%= format_quarter(record.QuarterNumber)%>
      </td>
    </tr>
    <tr>
      <th>
        District
      </th>
      <td>
        <%= link_to "#{record.District}", "http://www.ukbmd.org.uk/reg/districts/#{record.District.downcase}.html", target: "_blank" %><br>
        <span class="weight--normal"><%= "(#{ApplicationText::NEW_TAB_LINK_TEXT})" %></span>
      </td>
    </tr>
    <% if entry_type == "marriage" %>
    	<tr>
	      <th>
	        <%= mother_or_spouse_surname(record_type)%>
	      </th>
	      <td>
	      	<% if search == true && record.AssociateName.present? %>
	        	<%= link_to "#{record.AssociateName}", show_marriage_details_path(entry_id: record.RecordNumber, search_id: search_id) %><br>
	        	<span class="weight--normal"><%= "(#{ApplicationText::VIEW_MARRIAGE_TEXT})" %></span>
	        <% else %>
	        	<%= record.AssociateName %>
	        <% end %>
	      </td>
    	</tr>
    <% end %>
    <% if entry_type == "birth" %>
    	<tr>
	      <th>
	        <%= mother_or_spouse_surname(record_type)%>
	      </th>
	      <td>
	        <%= record.AssociateName %>
	      </td>
    	</tr>
    <% end %>
    <tr>
      <th>
        Volume
      </th>
      <td>
        <%= "#{record.Volume}" %>
      </td>
    </tr>
    <tr>
      <th style="font-family: serif;">
        Page
      </th>
      <td>
        <% unless record.Page.to_i == 0 %>
          <% if @search %>
            <%= link_to "#{record.Page}", same_page_entries_path(volume: record.Volume, page: record.Page, record: record.RecordTypeID, quarter: record.QuarterNumber, district: record.District, search_id: search_id, entry_id: original_record.RecordNumber), title: "#{ApplicationText::SAME_PAGE_ENTRIES_TEXT}" %>
          <% else %>
            <%= link_to "#{record.Page}", same_page_entries_non_search_path(volume: record.Volume, page: record.Page, record: record.RecordTypeID, quarter: record.QuarterNumber, district: record.District, entry_id: original_record.RecordNumber), title: "#{ApplicationText::SAME_PAGE_ENTRIES_TEXT}" %>
          <% end %>
          <br>
        <% else%>
          <%= record.Page %>
        <% end %>
      </td>
    </tr>
    <tr>
      <th>
        Transcriber
      </th>
      <td>
        <%#= record.transcribers.join(', ') if record.transcribers.present? %>
      </td>
    </tr>
    <% if search == true %>
      <% unless (record.Confirmed & 512).zero? %>
        <tr>
          <th>
            Refers
          </th>
          <td>
             <%= link_to "View Reference Record", show_reference_entry_path(entry_id: record.RecordNumber, search_id: search_id) %><br>
          </td>
        </tr>
      <% end %>
    <% end %>
    <% if record.get_comments.present? %>
      <tr>
        <th>
          Comment
        </th>
        <%  record.get_comments.each do |cl| %>
          <td>
            <%= cl.comment.CommentText %>
          </td>
        <% end %>
      </tr>
    <% end %>
    <% unless search == true %>
      <% if type == "reference" %>
        <tr>
          <th>
            Help Text
          </th>
          <td>
            <% case %>
            <% when record.reference_entry_description_text_display? %>
              <%= ApplicationText::LATE_ENTRY_TEXT_WITH_REFERENCE %>
            <% when !original_record.late_entry_description_text_display?%>
              <%= ApplicationText::REFERENCE_ENTRY_TEXT %>
            <% end %>
          </td>
        </tr>
      <% end %>
    <% end %>
    <% if search == true %>
      <tr>
        <th>
          More Information
        </th>
        <td class="project-text-color">
          <%= render partial: 'more_information' %>
        </td>
      </tr>
    <% end %>
    <% if search == true %>
      <td  colspan=2><%= link_to 'Report an Error in this Data', report_error_contact_path(record.RecordNumber, query: query), class: 'btn btn--natural' unless  record.blank? || query.blank? %>
      </td>
    <% end %>
  </tbody>
</table>