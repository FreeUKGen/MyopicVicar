<table class="table--bordered table--data">
  <tbody>
    <% record_type = RecordType::display_name(record.RecordTypeID)%>
    <tr>
      <th class="project-text-color">
        Event Type
      </th>
      <td>
        <%= "#{record_type}" %>
      </td>
    </tr>
    <tr>
      <th class="project-text-color">
        Date
      </th>
      <td>
        <%= format_quarter(record.QuarterNumber)%>
      </td>
    </tr>
    <tr>
      <th class="project-text-color">
        District
      </th>
      <td>
        <%= link_to "#{record.District}", "http://www.ukbmd.org.uk/reg/districts/#{record.District.downcase}.html", target: "_blank" %><br>
        <span class="weight--normal"><%= "(#{ApplicationText::NEW_TAB_LINK_TEXT})" %></span>
      </td>
    </tr>
    <% if entry_type == "marriage" %>
    	<tr>
	      <th class="project-text-color">
	        <%= mother_or_spouse_surname(record_type)%>
	      </th>
	      <td>
	      	<% if search == true && record.AssociateName.present? %>
	        	<%= link_to "#{record.AssociateName}", show_marriage_details_path(entry_id: record.RecordNumber) %>
	        <% else %>
	        	<%= record.AssociateName %>
	        <% end %>
	      </td>
    	</tr>
    <% end %>
    <tr>
      <th class="project-text-color">
        Volume
      </th>
      <td>
        <%= "#{record.Volume}" %>
      </td>
    </tr>
    <tr>
      <th class="project-text-color" style="font-family: serif;">
        Page
      </th>
      <td>
        <%= link_to "#{record.Page}", same_page_entries_path(volume: record.Volume, page: record.Page, record: record.RecordTypeID, quarter: record.QuarterNumber, district: record.District), target: "_blank", title: "#{ApplicationText::SAME_PAGE_ENTRIES_TEXT}" %>
        <br>
        <span class="weight--normal"><%= "(#{ApplicationText::NEW_TAB_LINK_TEXT})" %></span>
      </td>
    </tr>
    <tr>
      <th class="project-text-color">
        Transcriber
      </th>
      <td>
        <%#= @spouse_record.transcribers.join(', ') if @spouse_record.transcribers.present? %>
      </td>
    </tr>
  </tbody>
</table>