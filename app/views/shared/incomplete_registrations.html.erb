<% breadcrumb :incomplete_registrations, @current_syndicate %><br />

<% if @current_syndicate.nil? %>
  <h4 class=" text--center">Total number of Incomplete Registrations: <%= @incomplete_registrations.count %></h4>
<% else %>
  <h4 class=" text--center">Total number of Incomplete Registrations for <%= @current_syndicate %> syndicate: <%= @incomplete_registrations.count %></h4>
<% end %>

<div class="grid__item ">
  <section class="island ">
    <div style="overflow: hidden;">
      <table class="my-width-min flush--bottom" >
        <thead >
          <tr>
            <th class="t10">User ID</th>
            <th class="t3">Name</th>
            <th class="t20">Email</th>
            <th class="t5">Action <a href="#" class="left_tooltip" onclick="return false;"><%= image_tag 'info.png', alt: 'Information', height: '16' %><span>SHOW: Show profile details; DESTROY: Destroy the Inactivate userid </span></a></th>
          </tr>
        </thead>
      </table>
      <div class="scrollable">
        <table class=" table--bordered my-width table--data just--left">
          <tbody >
            <% if @incomplete_registrations.blank? %>
              <tr>
                <td colspan="4">There are no members</td>
              </tr>
            <% else %>
              <% @incomplete_registrations.each do |user| %>
                <tr>
                  <td class="t15"><%= user.userid %> </td>
                  <td class="t15"><%= user.full_name %></td>
                  <td class="t25"><%= user.email_address %> </td>
                  <td class="t5"><%= link_to 'SHOW', userid_detail_path(user.id, page_name: 'incomplete_registrations'), method: :get, :class => "btn weight--light btn--small"%>
                  </td>
                </tr>
              <% end %>
            <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </section>
</div>
<br />