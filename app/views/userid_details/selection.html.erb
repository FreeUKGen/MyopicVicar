<%= semantic_form_for @userid, :url => { :action => "select"  } do |f| %>
<% if @type == 'userid' %>
<%= f.input :userid, 
{ :as => :select, 
  :label => "Which userid would you like to work with?",
 
  :prompt => "Select userid",
  :required => true,
  :collection => @userids, 
  :size => 10 , 
  :input_html => { :include_blank => false,'onchange' => @location_userid}
  }%>

  <% end %>
  <% if @type == 'email' %>
  <%= f.input :email_address, 
  { :as => :select,
    :label => "Which email address would you like to work with?",
    
    :prompt => "Select email",
    :required => true,
    :collection => @userids, 
    :size => 10 , 
    :input_html => {:include_blank => false,'onchange' => @location_email}
    }%>

    <% end %>
    <% end %> 




