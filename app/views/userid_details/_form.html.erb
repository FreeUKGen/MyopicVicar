
<%= semantic_form_for @userid do |f| %>


    <div id="main"style="color:black">

<%if session[:type] == "add"%> 
<%= f.input :userid,:label => "The UserId itself:",:input_html => { :size => 30 }%> 
<%else%>
<%= f.input :userid, :label => "The UserId itself:",:input_html => { :disabled => true ,:size => 30 } %>
<%= f.input :syndicate,:label => "The Transcribers Syndicate :",:input_html => {:disabled => true , :size => 40 }%>
<%end%>
<%= f.input :person_forename,:label => "Forename :",:input_html => { :size => 40 }%>
<%= f.input :person_surname,:label => "Surname :",:input_html => { :size => 40 }%>
<%= f.input :email_address,:label => "Email :",:input_html => { :size => 60 }%>
<%= f.input :address,:label => "Physical address :",:input_html => { :size => 100 }%>
<%= f.input :telephone_number,:label => "Telephone :",:input_html => { :size => 40 }%>
<%= f.input :fiche_reader, {:as => :select,  :collection => [true,false],:include_blank => false,:label => "Has a Fiche Reader :", :size => 5}%>
<% if session[:manager] == true %>
<%= f.input :active,{:as => :select,  :collection => [true,false],:include_blank => false,:label => "Active :", :size => 5}%>
<%= f.input :last_upload,:label => "Date of last upload :",:input_html => { :disabled => true ,:size => 30 }%>
<%= f.input :sign_up_date,:label => "Date User signed up :",:input_html => { :disabled => true, :size => 30 }%>
<%= f.input :disabled_date,:label => "Date the transcriber was disabled :",:input_html => { :size => 30 }%>
<%= f.input :disabled_reason,:label => "Reason for disabling :",:input_html => { :size => 60 }%>
<%= f.input :skill_level, {:as => :select,  :collection => UseridRole::SKILLS, :include_blank => false,:label => "Person's transcription level skill :", :size => 8 } %>


<%= f.input :person_role,:label => "Person's Role in Freereg :",:input_html => { :disabled => true, :size => 30 }%>
<%else%> 

<%= f.input :last_upload,:label => "Date of last upload :",:input_html => { :disabled => true ,:size => 30 }%>
<%= f.input :sign_up_date,:label => "Date person signed up :",:input_html => { :disabled => true, :size => 30 }%>
<%end%>
<%if @user.person_role == 'system_administrator'%>
 <%= f.input :syndicate, { :as => :select, :label => "Syndicates :",:include_blank => false, :required => true,
  :collection => @syndicates, :size => 15 }  %>
<%= f.input :person_role, {:as => :select,  :collection => UseridRole::VALUES, :include_blank => false,:label => "Person's role in FreeREG :", :size => 8 } %>
 <% end %>
  
    <%= f.action :submit, :as => :input, :label => 'Update'   %>
   <% end %>
</div>