<h2>Transcriber information: <%= @transcriber.UserID %></h2>
<table class="table--bordered table--data">
  <caption class="accessibility">Information about <%= @transcriber.UserID %>  </caption>
  <tbody>
  <tr>
    <th scope="row">
      Transcriber name
    </th>
    <td>
      <%= "#{@transcriber.GivenName} #{@transcriber.Surname}" %>
    </td>
  </tr>
  <tr>
    <th scope="row">
      No of records transcribed
    </th>
    <td>
      <%= @transcriber.TotalEntries %>
    </td>
  </tr>
  <% if @transcriber.PrivacyKey == 3 %>
  <tr>
    <th scope="row">
      Email address
    </th>
    <td>
      <%= @transcriber.EmailID %>
    </td>
  </tr>
    <% end %>
  </tbody>
</table>
