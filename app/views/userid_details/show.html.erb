<p style="text-align: center"><b>Details for:<%=@userid.userid %></p></b>

<div style="float:left;"> <%= button_to 'Edit Details', edit_userid_detail_path(@userid), method: :get %></div>

<div  style="float:left;"> <%= button_to 'Resource Management', manage_resource_path(@userid), method: :get %> </div>
<div style="float:left;">  <%= button_to_function "Previous Page", "history.back()" %> </div>
<div style="clear:both;"> </div><br>

 <% if flash[:notice] %>
    <div id="notice" style="color:blue"><br>
    <%= flash[:notice] %> <br>
    </div>
   <% end %>
<div id="main"style="color:black">
<div id="main"style="color:black">
<table  CLASS="boldtable" style="width: 100%">
  <tr>
    
    <th style="width:30%">Field</th>
    <th style="width:50">Value</th>
     
  </tr>

  <tr> 
   <td>Forename:</td><td > <%= @userid.person_forename %>  </td>
  </tr><tr>
   <td>Surname:</td><td > <%= @userid.person_surname %>  </td>   
   </tr>
   <tr>
   <td>Email:</td><td > <%= @userid.email_address   %> </td>   
   </tr>
   <tr>
   <td>Physical Location:</td><td > <%= @userid.address  %>  </td>   
   </tr>
   <tr>
   <td>Telephone number:</td><td > <%= @userid.telephone_number %>  </td>   
   </tr>
   <tr>
   <td>Fiche reader:</td><td > <%=@userid.fiche_reader%>  </td>   
   </tr>
  <tr>
   <td>Syndicate:</td><td > <%=@userid.syndicate %>  </td>   
   </tr>
 <tr>
   <td>Previous Syndicate:</td><td > <%= @userid.previous_syndicate%>  </td>   
   </tr>
<tr>
   <td>Signed up:</td><td > <%= @userid.sign_up_date.strftime("%d %b %Y") unless @userid.sign_up_date.nil? %> </td>   
   </tr>
<tr>
   <td>Last upload:</td><td > <%= @userid.last_upload.strftime("%d %b %Y") unless @userid.last_upload.nil?%>  </td>   
   </tr>
   <tr>
   <td>Number of files loaded:</td><td > <%= @userid.number_of_files  %>  </td>   
   </tr>
   <tr>
   <td>Number of records loaded:</td><td > <%=@userid.number_of_records%>  </td>   
   </tr>
<% if  session[:manager] == true%>
<tr>
   <td>Active:</td><td > <%= @userid.active  %>  </td>   
   </tr>
   <tr>
   <td>Role in FreeREG:</td><td > <%=@userid.person_role%>  </td>   
   </tr>
   <%unless @userid.syndicate_groups.nil? || @userid.syndicate_groups.length == 0   %>
<td>Syndicates managed:</td><td > <%= @userid.syndicate_groups  %>  </td>   
   </tr>
    <%end%> 
   <tr>
   <%unless @userid.county_groups.nil? || @userid.county_groups.length == 0  %>
   <td>Counties coordinated:</td><td > <%=@userid.county_groups %>   </td>   
   </tr>
  <%end%> 
<tr>
   <td>Counties managed as Country Coordinator:</td><td > <%= @userid.country_groups unless @userid.person_role == 'country_coordinator' %>  </td>   
   </tr>
   <tr>
   <td>Skill Level:</td><td > <%=@userid.skill_level%>  </td>   
   </tr>
<%if  @userid.active == false%>
   <tr>
   <td>Disable date:</td><td > <%=@userid.disabled_date%>  </td>   
   </tr>
<tr>
   <td>Disabled reason:</td><td > <%=@userid.disabled_reason %>  </td>   
   </tr>
   <%end%>

<%end%>

</table>
</div>

<div style="float:left;"> <%= button_to 'Edit Details', edit_userid_detail_path(@userid), method: :get %></div>

<div  style="float:left;"> <%= button_to 'Resource Management', manage_resource_path(@userid), method: :get %> </div>
<div style="float:left;">  <%= button_to_function "Previous Page", "history.back()" %> </div>
<div style="clear:both;"> </div><br>