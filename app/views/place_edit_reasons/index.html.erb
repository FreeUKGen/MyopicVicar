<% breadcrumb :place_edit_reasons%>
<h2 class="text--center"> List of Reasons for Editing a FreeCEN2 Place</h2>
<div style="text-align: center"><%= link_to 'Create New Reason',new_place_edit_reason_path, method: :get , :class => "btn btn--small"  %></div>
<% if flash[:notice] %>
  <div id="notice" style="color:blue"><br>
    <%= flash[:notice] %>  <% flash[:notice] = nil%><br>
  </div>
<% end %>
<div>
  <table class=" table--bordered table--data">
    <% if @reasons.present? %>
      <tr>
        <th> Reason</th>
        <th colspan = "3">Actions</th>
      </tr>
      <% @reasons.each do |place_edit_reason| %>
        <tr>
          <td><%= place_edit_reason.reason %></td>
          <td><%= link_to 'Show', place_edit_reason_path(place_edit_reason) %></td>
          <td><%= link_to 'Edit', edit_place_edit_reason_path(place_edit_reason) %></td>
          <td><%= link_to 'Destroy', place_edit_reason_path(place_edit_reason), method: :delete, data: { confirm: 'Are you sure?' } %></td>
        </tr>
      <% end %>
    <% else%>
      <p class="text--center"> No editing reasons created</p>
    <% end%>
  </table>
</div>