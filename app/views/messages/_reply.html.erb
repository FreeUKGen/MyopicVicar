<h4 style="text-align: center">
  List of Messages
</h4>
<div class= "grid">
  <section class="island  island--light ">
    <div class="grid__item  one-whole  palm-one-whole push--bottom" style="height: 300px; overflow: scroll">
      <h4>Original Message</h4>
      <i><strong>Subject: </strong> <%= @respond_to_message.subject %></i>
      <%= content_tag :p, class: "strong" do %>
        On <%= @respond_to_message.message_time.to_formatted_s(:long)%>, Userid: <%= @respond_to_message.userid%> wrote:<br/>
        <%= @respond_to_message.body %>
        <% if @respond_to_message.attachment.present?%>
            <br/>
            <span>Attachment: </span>
            <span><%= link_to("#{@respond_to_message[:attachment]}", @respond_to_message.attachment_url, target: "_blank", style:'color:black') %><a href="#" class="bottom_tooltip"> <%= image_tag 'info.png', alt: 'Information', height: '16' %><span>The link will open in a new tab</span></a></span>
        <% end %>
      <% end %>
      <br />
      <% unless @reply_messages.count == 0 %>
        <h4>
          <%= pluralize(@reply_messages.count, 'Reply Message')%>
        </h4>
        <% @reply_messages.each do |reply| %>
          <i><strong>Subject: </strong> <%= reply.subject %></i>
          <%= content_tag :p, class: "strong" do %>
            On <%= reply.message_time.to_formatted_s(:long)%>, Userid: <%= reply.userid%> wrote:<br/>
            <%= reply.body %>
            <% if reply.attachment.present?%>
              <br/>
              <span>Attachment: </span>
              <span><%= link_to("#{reply[:attachment]}", reply.attachment_url, target: "_blank", style:'color:black') %><a href="#" class="bottom_tooltip"> <%= image_tag 'info.png', alt: 'Information', height: '16' %><span>The link will open in a new tab</span></a></span>
            <% end %>
          <% end %>
        <% end %>
      <% end %>
    </div>
  </section>
</div>
<h4 style="text-align: center">Creating Reply Message</h4>
<%= render 'form' %>


