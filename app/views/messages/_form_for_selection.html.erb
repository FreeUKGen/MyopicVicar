<div class="island  island--light">
  <% if flash[:notice] %>
    <div id="notice" style="color:blue"><br>
      <%= flash[:notice] %>  <% flash[:notice] = nil%> <br>
    </div>
  <% end %>
  <%= semantic_form_for @message, :html => { :class => "grid"}  do |f| %>
    <%= f.input :action,
    { :as => :select, :include_blank => true,  :label => "Make a Selection", :required => true, :collection => @options,:width => 10 ,:wrapper_html => { :class => "grid__item  one-whole text--center" } }%>
    <%= f.action :submit, :as => :input,  :label => 'Select Role' ,:button_html => { :class => "btn " },:wrapper_html => { :class => "grid__item  one-whole text--center" }  %> <br>
  <% end %>
</div>