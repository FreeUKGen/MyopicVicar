<% show_breadcrumb%>
<div style="clear:both;"> </div>
<% if flash[:notice] %>
  <div id="notice" style="color:blue"><br>
    <%= flash[:notice] %>  <% flash[:notice] = nil%><br>
  </div>
<% end %>
<br>
<h4 class=" text--center push--bottom"><%= show_title %> <%= @message.identifier %></h4>
<% if show_display_links %>
<div  class=" text--center push--bottom">
              <%= link_to 'Resend this Message', send_message_messages_path(@message.id), :class => "btn weight--light  btn--small" , data: { confirm: 'Are you sure you want to resend this message'}, method: :get if @message.sent_messages.present? %>
              <%= link_to 'Send this Message', send_message_messages_path(@message.id), :class => "btn weight--light  btn--small" , data: { confirm: 'Are you sure you want to send this message'}, method: :get unless @message.sent_messages.present? %>
              <%= link_to 'Create Reply', reply_messages_path(source_message_id:@message.id) ,:class => "btn weight--light  btn--small" , data: { confirm: 'Are you sure you want to reply to this message?'} if show_reply_action %>
              <%= link_to 'View Replies', show_reply_messages_path(@message.id,:replies => params[:action], :source => params[:source]), class: "btn weight--light  btn--small", method: :get if show_replies_action%>
              <%= link_to 'Archive', archive_message_path(@message.id), :class => "btn weight--light  btn--small", data: { confirm: 'Are you sure you want to Archive this message?' } unless @message.is_archived?%>
              <%= link_to 'Restore', restore_message_path(@message.id), :class => "btn weight--light  btn--small", data: { confirm: 'Are you sure you want to Restore this message?' } if @message.is_archived?%>
              <%= link_to 'Destroy', force_destroy_message_path(@message.id), :class => "btn weight--light  btn--small", title: "This message may have replies which and will also be destroyed with this action", data: { confirm: 'This message may have replies. Are you sure you want to delete this message and all its replies' } if @message.is_archived?%>
</div>
<%end%>
<%= render 'message_detail'%>