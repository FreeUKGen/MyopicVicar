<% breadcrumb :show_source, @county, @place, @church, @register %>

<div style="clear:both;"></div><br>
<p style="text-align: center">Source of images for <b><%= @register_type %></b> register for <b><%= @church_name %></b> in <b><%= @place_name %></b> of <b><%= @county %></b>

<% x = @source.first %>
<% unless session[:userid].nil?%>
  <div style="text-align: center">  
  <%= link_to 'Create new Source', new_source_path, method: :get, :class => "btn weight--light btn--small"  %> <%= link_to 'List Image Server Groups', image_server_group_path(x), method: :get, :class => "btn weight--light btn--small" %> <%= link_to 'Edit Source', edit_source_path(x), method: :get, :class => "btn weight--light btn--small" %> <%= link_to 'Delete Source', source_path(x), data: { confirm: 'Are you sure you want to delete "'+x[:source_name]+'"?'}, method: :delete, :class => "btn weight--light btn--small" %>
  </div>
  <div style="clear:both;"> </div><br>
<% end %>

<% if flash[:notice] %>
  <div id="notice" style="color:blue"><br>
    <%= flash[:notice] %><% flash[:notice] = nil%><br>
  </div>
<% end %>

<div class="grid">
  <section class="island ">
  <div class="grid__item ">
    <table class="table--bordered  table--data">
      <colgroup >
        <col class=t40>
        <col class=t60>
      </colgroup>
      <tr>
        <th class="caps">Field</th>
        <th class="caps">Value</th>
      </tr>
      <tr><td>Source Name :</td><td class="weight--semibold"><%= x[:source_name] %></td></tr>
      <tr><td>Notes</td><td class="t15"><%= x[:notes] %>&nbsp;</td></tr>
      <tr><td>Start Date</td><td class="t30"><%= x[:start_date] %>&nbsp;</td></tr>
      <tr><td>End Date</td><td class="t15"><%= x[:end_date] %>&nbsp;</td></tr>
      <tr><td>Original Form</td><td class="t15"><%= x[:original_form][:type] %>
        <% if x[:original_form][:type] == 'other' %>
          : <%= x[:original_form][:name]  %>
        <% end %>
      </tr>
      <tr><td>Creating Institution</td><td class="t15"><%= x[:creating_institution] %>&nbsp;</td></tr>
      <tr><td>Holding Institution</td><td class="t15"><%= x[:holding_institution] %>&nbsp;</td></tr>
      <tr><td>Restrictions on Use by Creating Institution</td><td class="t15"><%= x[:restrictions_on_use_by_creating_institution] %>&nbsp;</td></tr>
      <tr><td>Restrictions on Use by Holding Institution</td><td class="t15"><%= x[:restrictions_on_use_by_holding_institution] %>&nbsp;</td></tr>
      <tr><td>Open Data</td><td class="t15"><%= x[:open_data] ? 'Yes' : 'No' %>&nbsp;</td></tr>
      <tr><td>URL</td><td class="t15"><%= x[:url] %>&nbsp;</td></tr>
    </table>
  </div>
  </section>
</div>