if ($('#source_choice').is(':checked')) {
	if (confirm("Are you sure you want to propagate this to other sources?")) {
		$('#propagate_source').html("<%= escape_javascript render 'place_source_list' %>");
		$('#propagate_source').slideDown(50);
	} else {
		document.getElementById('source_choice').checked = false;
	}
} else {
	$('#propagate_source').hide()
}
