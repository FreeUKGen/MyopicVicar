<% if session[:my_own_list] == 'county' %>
  <% case session[:manage_user_origin] %>
    <% when 'manage county' %>
      <% breadcrumb :county_available_groups_by_county_source, @county, @place, @church, @register, @source %>
    <% when 'manage syndicate' %>
      <% breadcrumb :syndicate_available_groups_by_county_source, @county, @place, @church, @register, @source %>
  <% end %>
<% else %>
  <% case session[:ig_allocation] %>
    <% when 'by_syndicate' %>
      <% breadcrumb :sort_by_syndicate_image_source, @county, @place, @church, @register, @source %>
    <% when 'by_place' %>
      <% breadcrumb :sort_by_place_image_source, @county, @place, @church, @register, @source %>
    <% when 'by_all' %>
      <% breadcrumb :sort_by_all_image_source, @county, @place, @church, @register, @source %>
    <% when 'by_unallocate' %>
      <% breadcrumb :sort_by_unallocate_image_source, @county, @place, @church, @register, @source %>
  	<% else %>
      <% breadcrumb :county_image_source, @county, @place, @church, @register, @source %>
  <% end %>
<% end %>

<% title "Source - initialize" %>
<div style="clear:both;"></div><br>
<p style="text-align: center"><b><%= @source.source_name %></b> source for <b><%= @register_type %></b> register for <b><%= @church_name %></b> in <b><%= @place_name %></b> of <b><%= @county %></b>

<% if flash[:notice] %>
  <div id="notice" style="color:blue">
   	<%= flash[:notice] %><% flash.clear %>
  </div><br>
<% end %>

<div style="clear:both;"></div><br>

<section class="island  island--light">
<div class="grid">
<%= simple_form_for @source do |s| %>
  <%= s.input :initialize_status, :as=>:select, :collection=>[['Unallocated','u'], ['Transcribed','t'], ['Completed','c']], :label=>"Initialized Status", :include_blank=>false, :selected=>false, :required=>false, :input_html=>{:class=>"simple_form_bgcolour simple_form_position", :style=>'width: 100%', :size=>2} %>
  
  <%= s.button :submit, 'Submit', :onclick=>'return check_year_range()' %>
<% end %>
</div>
</section>
