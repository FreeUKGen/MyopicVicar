<% breadcrumb :county_image_source, @county, @place, @church, @register, @source %>

<% title "Source - initialize" %>
<div style="clear:both;"></div><br>
<p style="text-align: center"><b><%= @source.source_name %></b> source for <b><%= @register_type %></b> register for <b><%= @church_name %></b> in <b><%= @place_name %></b> of <b><%= @county %></b>

<% if flash[:notice] %>
  <div id="notice" style="color:blue">
   	<%= flash[:notice] %><% flash.clear %>
  </div><br>
<% end %>

<div style="clear:both;"></div><br>

<section class="island  island--light">
<div class="grid">
<%= simple_form_for @source do |s| %>
  <%= s.input :initialize_status, :as=>:select, :collection=>[['Unallocated','u'], ['Transcribed','t'], ['Completed','c']], :label=>"Initialized Status", :include_blank=>false, :selected=>false, :required=>false, :input_html=>{:class=>"simple_form_bgcolour simple_form_position", :style=>'width: 100%', :size=>2} %>
  
  <%= s.button :submit, 'Submit', :onclick=>'return check_year_range()' %>
<% end %>
</div>
</section>
