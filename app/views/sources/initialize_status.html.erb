<% breadcrumb :initialize_image_source, @register, @source %>

<% title "Source - initialize" %>
<%= render partial: 'header' %>
<%= render partial: 'flash_notice' %>

<section class="island  island--light">
<div class="grid">
<%= simple_form_for @source do |s| %>
  <%= s.input :initialize_status, :as=>:select, :collection=>[['Unallocated','u'], ['Transcribed','t'], ['Completed','c']], :label=>"Initialize Source to Status", :include_blank=>false, :selected=>false, :required=>false, :input_html=>{:class=>"simple_form_bgcolour simple_form_position", :style=>'width: 100%', :size=>2} %>
  
  <%= s.button :submit, 'Submit' %>
<% end %>
</div>
</section>
