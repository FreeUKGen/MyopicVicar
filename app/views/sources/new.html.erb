<% case session[:ig_allocation] %>
  <% when 'by_syndicate' %>
    <% breadcrumb :sort_by_syndicate_image_source, @county, @place, @church, @register, @source %>
  <% when 'by_place' %>
    <% breadcrumb :sort_by_place_image_source, @county, @place, @church, @register, @source %>
  <% when 'by_all' %>
    <% breadcrumb :sort_by_all_image_source, @county, @place, @church, @register, @source %>
  <% when 'by_unallocate' %>
    <% breadcrumb :sort_by_unallocate_image_source, @county, @place, @church, @register, @source %>
  <% else %>
		<% breadcrumb :county_create_new_source, @county, @place, @church, @register, @source %>
<% end %>

<div style="clear:both;"></div><br>
<p style="text-align: center"><b>Sources</b> for <b><%= @register_type %></b> register for <b><%= @church_name %></b> in <b><%= @place_name %></b> of <b><%= @county %></b>

<% title "Source - create" %>
<% if flash[:notice] %>
  <div id="notice" style="color:blue">
   	<%= flash[:notice] %><% flash.clear %>
  </div><br>
<% end %>

<div class="grid">
	<%= render 'form' %>
</div>