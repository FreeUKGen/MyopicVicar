<% unless session[:userid].nil?%>
  <div style="text-align: center">  
  <%= link_to 'Create new Source', new_source_path, method: :get, :class => "btn weight--light btn--small"  %> 
  </div>
  <div style="clear:both;"> </div><br>
<% end %>

<div style="overflow: hidden;">
  <table class="my-width-min flush--bottom" >
    <thead>
      <tr>
        <th class="t15">Source</th>
        <th class="t30">Notes</th>
        <th class="t15">Action</th>
      </tr>
    </thead>
  </table>

  <div class="scrollable">
    <table class=" table--bordered my-width table--data just--left">
      <tbody>  
        <% @source.each do |x| %>
          <tr>
            <td class="t15"><%= x.source_name %></td>
            <td class="t30"><%= x.notes %>&nbsp;</td>
            <td class="t15">
              <% case x.source_name %>
                <% when 'Image Server' %>
                  <%= link_to 'SH', source_path(x.register, :source_name=>x.source_name) %> <%= link_to 'ED', edit_source_path(x) %> <%= link_to 'DE', source_path(x), data: { confirm: 'Are you sure you want to delete "'+x[:source_name]+'"?'}, method: :delete %>
                <% when 'Other Server1' %>
                  <%= link_to 'SH', source_path(x.register, :source_name=>x.source_name) %> <%= link_to 'ED', edit_source_path(x) %> <%= link_to 'DE', source_path(x), data: { confirm: 'Are you sure you want to delete "'+x[:source_name]+'"?'}, method: :delete %>
                <% when 'Other Server2' %>
                  <%= link_to 'SH', source_path(x.register, :source_name=>x.source_name) %> <%= link_to 'ED', edit_source_path(x) %> <%= link_to 'DE', source_path(x), data: { confirm: 'Are you sure you want to delete "'+x[:source_name]+'"?'}, method: :delete %>
                <% when 'Other Server3' %>
                  <%= link_to 'SH', source_path(x.register, :source_name=>x.source_name) %> <%= link_to 'ED', edit_source_path(x) %> <%= link_to 'DE', source_path(x), data: { confirm: 'Are you sure you want to delete "'+x[:source_name]+'"?'}, method: :delete %>
                <% else %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div id="task-form" style="display:none;"></div>
</div>